/* modals/detail-modal/detail-modal.wxss */
.modal-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 9999;
}

.modal-container.visible {
  opacity: 1;
  pointer-events: auto;
}

.modal-backdrop {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
  width: 90%;
  max-width: 700rpx;
  max-height: 90vh;
  background-color: #222222;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.5);
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  flex-shrink: 0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.modal-close {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.5);
  cursor: pointer;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  overflow-y: auto;
  flex: 1;
}

/* Loading State */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.1);
  border-top: 6rpx solid #F3CC14;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Post Styles */
.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.post-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.post-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.post-content {
  margin-bottom: 30rpx;
}

.post-text {
  font-size: 28rpx;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  line-height: 1.5;
  word-break: break-all;
}

.media-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.media-item {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.single-media {
  width: 100%;
  height: 400rpx;
}

.post-actions {
  display: flex;
  padding: 20rpx 0;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.action {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  color: #FFFFFF;
}

