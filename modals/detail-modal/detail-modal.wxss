/* Comments Section */
.comments-section {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 20rpx;
}

.comments-list {
  margin-bottom: 30rpx;
}

.empty-comments {
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx 0;
}

.comment-item {
  display: flex;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-username {
  font-size: 26rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 26rpx;
  color: #FFFFFF;
  line-height: 1.4;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.comment-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* Comment Form */
.comment-form {
  display: flex;
  align-items: center;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  padding-top: 20rpx;
}

.comment-input {
  flex: 1;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 35rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  margin-right: 16rpx;
}

.comment-submit {
  width: 120rpx;
  height: 70rpx;
  background-color: #F3CC14;
  color: #111111;
  font-size: 26rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.comment-submit.loading {
  opacity: 0.7;
}

.comment-submit:disabled {
  background-color: rgba(243, 204, 20, 0.5);
}