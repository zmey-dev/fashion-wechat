/* modals/login-modal/login-modal.wxss */
.modal-container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  z-index: 9999;
}

.modal-container.visible {
  opacity: 1;
  pointer-events: auto;
}

.modal-backdrop {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #222222;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 25rpx rgba(0, 0, 0, 0.5);
  position: relative;
  z-index: 1;
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.modal-container.visible .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.modal-close {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.5);
  cursor: pointer;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #FFFFFF;
}

.error-message {
  color: #FF4D4F;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.submit-button {
  width: 100%;
  height: 80rpx;
  background-color: #F3CC14;
  color: #111111;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-button.loading {
  opacity: 0.7;
}

.toggle-mode {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  cursor: pointer;
}

.toggle-mode:hover {
  color: #F3CC14;
}