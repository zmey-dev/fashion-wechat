/* Upload page styles */

/* Container styles */
.upload-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  z-index: 1;
}

.container {
  height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  display: flex;
  padding-bottom: 60rpx; 
  box-sizing: border-box;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

/* Header Styles */
.header {
  background: rgba(20, 20, 20, 0.95);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  padding: 20rpx 32rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: env(safe-area-inset-top);
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  font-size: 32rpx;
  color: #cccccc;
}

/* Main Content */
.main-content {
  flex: 1;
  background: #1a1a1a;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  z-index: 2;
}

/* Tab Navigation */
.tab-nav {
  display: flex;
  background: #2d2d2d;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  padding: 0 32rpx;
  position: relative;
  z-index: 10;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  position: relative;
  transition: all 0.3s ease;
  color: #888888;
  z-index: 11;
}

.tab-item.active {
  color: #00d4ff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #00d4ff, #0099cc);
  border-radius: 3rpx;
  z-index: 12;
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  font-weight: 500;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 20rpx;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  z-index: 13;
}

/* Tab Content */
.tab-content {
  flex: 1;
  overflow: hidden;
  background: #1a1a1a;
  position: relative;
  z-index: 3;
}

/* Section Styles */
.section {
  background: #2d2d2d;
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
  z-index: 4;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
  z-index: 9999;
}

.dot-editor-modal {
  width: 90%;
  max-width: 600rpx;
  background: #2d2d2d;
  border-radius: 24rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 10000;
}

.modal-overlay.show .dot-editor-modal {
  transform: scale(1);
}

.submit-section {
  padding: 32rpx;
  background: #2d2d2d;
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  position: relative;
  z-index: 5;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #00d4ff 0%, #0099cc 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 255, 0.4);
  transition: all 0.3s ease;
  position: relative;
  z-index: 6;
}

/* Annotation Mode */
.annotation-mode {
  flex: 1;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  background: #1a1a1a;
  position: relative;
  z-index: 3;
}

.annotation-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  background: #2d2d2d;
  position: relative;
  z-index: 4;
}

/* General Styles */
page {
  background: #1a1a1a !important;
  overflow: hidden;
}

::-webkit-scrollbar {
  display: none;
}

.upload-container::before,
.container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #1a1a1a;
  z-index: -1;
}

.upload-container {
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

scroll-view {
  background: #1a1a1a !important;
  -webkit-overflow-scrolling: touch;
}

image {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  pointer-events: auto;
}

video {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  pointer-events: auto;
}

