/* pages/follow/follow.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #121212;
  color: #f0f0f0;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-top: 88rpx;
  padding-bottom: 110rpx;
}

.content-container {
  flex: 1;
  width: 100%;
}

/* User List Styles */
.user-list {
  width: 100%;
}

.page-header {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #333;
  background-color: #1e1e1e;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2px solid #444;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.user-followers {
  font-size: 26rpx;
  color: #aaa;
  margin-top: 6rpx;
}

.user-arrow {
  color: #666;
  font-size: 32rpx;
  margin-left: 10rpx;
}

/* User Media Styles */
.user-media-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.media-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-button {
  padding: 10rpx;
  margin-right: 20rpx;
  color: #ddd;
}

.back-icon {
  font-size: 40rpx;
}

.user-profile {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
  border: 2px solid #444;
}

.profile-nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.media-grid {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.media-item {
  background-color: #1e1e1e;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.5);
}

.media-image {
  width: 100%;
  height: 500rpx;
}

.media-info {
  padding: 20rpx;
}

.media-stats {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
  padding: 16rpx 20rpx;
}

.media-likes, .media-comments {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #aaa;
}

.media-description {
  font-size: 28rpx;
  color: #ddd;
}

.loading-indicator, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #777;
  font-size: 28rpx;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #1e1e1e;
  border-radius: 8rpx;
  margin: 20rpx;
  width: 100%;
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 8rpx;
  background-color: #2a2a2a;
  color: #fff;
  font-size: 28rpx;
}

.search-input:focus {
  outline: none;
  border-color: #3b82f6;
}

.follow-button{
  padding: 10rpx 20rpx;
  background-color: #3b82f6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  cursor: pointer;
}

/* Action buttons styling */
.action-button {
  flex: 1;
  border-radius: 12rpx;
  height: 70rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28rpx;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.label {
  flex: 1;
  text-align: center;
}

.bg-dark {
  background-color: #2d3036;
}

.bg-green-800 {
  background-color: #166534;
}

.bg-yellow-800 {
  background-color: #854d0e;
}