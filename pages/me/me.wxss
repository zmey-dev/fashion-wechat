.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #fff;
  padding: 20rpx 20rpx 130rpx 20rpx;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

/* Profile Header Styles */
.profile-header {
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  border-bottom: 1px solid rgba(255, 50, 50, 0.15);
}

.profile-info {
  display: flex;
  align-items: flex-start;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 3rpx solid #ff3232;
  box-shadow: 0 0 20rpx rgba(255, 50, 50, 0.3);
}

.user-details {
  flex: 1;
}

.username-section {
  margin-bottom: 24rpx;
}

.username {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 1rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}

.phone {
  margin-right: 10rpx;
}

.gender-age {
  display: flex;
  align-items: center;
}

.gender-icon {
  color: #ff3232;
  margin-right: 5rpx;
  font-size: 28rpx;
}

.age {
  color: rgba(255, 255, 255, 0.6);
}

.stats-container {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
  margin-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* Tabs Styles */
.tabs-container {
  margin-bottom: 36rpx;
  border-bottom: 1rpx solid rgba(255, 50, 50, 0.2);
}

.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  position: relative;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  font-weight: 500;
}

.tab-item.active {
  color: #ff3232;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff3232;
  border-radius: 2rpx;
  box-shadow: 0 0 10rpx rgba(255, 50, 50, 0.5);
}

/* Posts Grid Styles */
.posts-container {
  min-height: 400rpx;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
  font-style: italic;
}

.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.post-card {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background: #151515;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  transition: transform 0.3s ease;
}

.post-card:active {
  transform: scale(0.98);
}

.post-image {
  width: 100%;
  height: 100%;
}

.post-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.9), rgba(0,0,0,0.5) 50%, transparent);
  padding: 24rpx;
}

.post-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
  color: #ff3232;
}

.stat-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
}

.post-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: rgba(255, 50, 50, 0.8);
}

.delete-btn {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(255, 50, 50, 0.6);
}

/* Loading Styles */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #333;
  border-top: 3rpx solid #ff3232;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 1rpx;
}

/* Floating Action Button */
.fab {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #ff3232;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 50, 50, 0.4);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95) translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 50, 50, 0.4);
}

.fab-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

/* Responsive Design */
@media screen and (max-width: 600rpx) {
  .posts-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
  }
  
  .username {
    font-size: 32rpx;
  }
  
  .user-meta {
    font-size: 22rpx;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
}