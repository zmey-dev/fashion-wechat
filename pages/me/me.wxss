/* pages/me/me.wxss */
.me-container {
  background-color: #000;
  color: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
}

/* Profile Header */
.profile-header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #000;
  border-bottom: 1rpx solid #222;
}

.profile-info {
  display: flex;
  align-items: center;
  width: 100%;
}

.avatar-container {
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: space-between;
}

.stats-container {
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

/* Tabs */
.tabs-container {
  background: #000;
  border-bottom: 1rpx solid #222;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tabs {
  display: flex;
  height: 90rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #888;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  color: #fff;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: #fff;
}

/* Posts Container */
.posts-container {
  flex: 1;
  padding: 20rpx;
}

.empty-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-text {
  color: #666;
  font-size: 28rpx;
}

.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.post-card {
  position: relative;
  aspect-ratio: 1/1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #111;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.post-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 20rpx;
}

.post-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #fff;
  font-size: 24rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.blocked-indicator {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.blocked-icon {
  font-size: 60rpx;
}

.blocked-text {
  color: #fff;
  font-size: 24rpx;
}

.post-actions {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.delete-btn:active {
  background: rgba(255, 0, 0, 0.6);
}

/* Loading */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #333;
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #888;
  font-size: 28rpx;
}

/* Profile Tab - Hidden */
.profile-tab-container {
  display: none;
}

/* Avatar Component Styles */
.avatar {
  border-radius: 50%;
  overflow: hidden;
}

/* Messages */
.messages {
  display: none;
}

/* Profile Button Styles */
.profile-button-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.profile-redirect-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  border: none;
  min-width: 80rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.profile-redirect-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.profile-btn-icon {
  font-size: 24rpx;
  color: white;
  margin-bottom: 4rpx;
}

.profile-btn-text {
  font-size: 20rpx;
  color: white;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* ===================== SIMPLIFIED CONTACT SECTION DESIGN ===================== */

.contact-container {
  background: #000;
  position: relative;
  overflow: hidden;
  padding: 0;
}

/* Content Card */
.contact-container .content {
  background: #111;
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx 80rpx;
  margin: 20rpx;
  border: 1px solid #333;
  position: relative;
}

/* Form Styling */
.contact-container .form-section {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.contact-container .form-item {
  position: relative;
}

.contact-container .form-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  letter-spacing: 1rpx;
}

/* Input Field Styling */
.contact-container .form-input,
.contact-container .form-textarea {
  min-height: 90rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #333;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #222;
  color: #ffffff;
  transition: border-color 0.3s ease;
}

.contact-container .form-input::placeholder,
.contact-container .form-textarea::placeholder {
  color: #666;
  font-style: italic;
  transition: opacity 0.3s ease;
}

.contact-container .form-input:focus,
.contact-container .form-textarea:focus {
  border-color: #555;
  background: #2a2a2a;
  outline: none;
  transform: translateY(-2rpx);
}

.contact-container .form-input:focus::placeholder,
.contact-container .form-textarea:focus::placeholder {
  opacity: 0.6;
}

.contact-container .form-textarea {
  min-height: 300rpx;
  resize: none;
  line-height: 1.8;
  font-family: inherit;
}

/* Submit Button */
.contact-container .submit-button {
  width: 100%;
  background: #333;
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 34rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 60rpx;
  letter-spacing: 2rpx;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.contact-container .submit-button:active {
  transform: scale(0.98) translateY(2rpx);
  background: #444;
}

.contact-container .submit-icon {
  font-size: 40rpx;
}

/* Responsive Design for Small Screens */
@media screen and (max-width: 600rpx) {
  .stats-container {
    gap: 20rpx;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .stat-label {
    font-size: 22rpx;
  }
  
  .posts-grid {
    grid-template-columns: repeat(1, 1fr);
  }
  
  .profile-button-container {
    margin-left: 12rpx;
  }
  
  .profile-redirect-btn {
    padding: 10rpx 12rpx;
    min-width: 70rpx;
  }
  
  .profile-btn-icon {
    font-size: 20rpx;
  }
  
  .profile-btn-text {
    font-size: 18rpx;
  }
}