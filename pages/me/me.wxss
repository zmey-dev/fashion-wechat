.me-container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
  background: #0a0a0a;
  color: #fff;
}

.container {
  min-height: 100vh;
  background: #0a0a0a;
  color: #fff;
  padding: 20rpx 20rpx 130rpx 20rpx;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

/* Profile Header Styles */
.profile-header {
  margin-bottom: 40rpx;
  border-bottom: 1px solid rgba(255, 50, 50, 0.15);
}

.profile-info {
  padding: 0rpx 40rpx;
  display: flex;
  align-items: flex-start;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  box-shadow: 0 0 20rpx rgba(255, 50, 50, 0.3);
}

.user-details {
  flex: 1;
}

.username-section {
  margin-bottom: 24rpx;
}

.username {
  font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  letter-spacing: 1rpx;
}

.user-meta {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.6);
}

.phone {
  margin-right: 10rpx;
}

.gender-age {
  display: flex;
  align-items: center;
}

.gender-icon {
  color: #ff3232;
  margin-right: 5rpx;
  font-size: 28rpx;
}

.age {
  color: rgba(255, 255, 255, 0.6);
}

.stats-container {
  display: flex;
  justify-content: space-between;
  padding-top: 24rpx;
  margin-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* Tabs Styles */
.tabs-container {
  margin-bottom: 36rpx;
  border-bottom: 1rpx solid rgba(255, 50, 50, 0.2);
}

.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  position: relative;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  font-weight: 500;
}

.tab-item.active {
  color: #ff3232;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #ff3232;
  border-radius: 2rpx;
  box-shadow: 0 0 10rpx rgba(255, 50, 50, 0.5);
}

/* Posts Grid Styles */
.posts-container {
  min-height: 400rpx;
  overflow-y: auto;
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.4);
  font-style: italic;
}

.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.post-card {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  background: #151515;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.4);
  transition: transform 0.3s ease;
}

.post-card:active {
  transform: scale(0.98);
}

.post-image {
  width: 100%;
  height: 100%;
}

.post-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0,0,0,0.9), rgba(0,0,0,0.5) 50%, transparent);
  padding: 24rpx;
}

.post-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
  color: #ff3232;
}

.stat-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 500;
}

.post-actions {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 12rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.edit-btn {
  background: rgba(255, 50, 50, 0.8);
}

.delete-btn {
  background: rgba(0, 0, 0, 0.8);
  border: 1px solid rgba(255, 50, 50, 0.6);
}

/* Loading Styles */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid #333;
  border-top: 3rpx solid #ff3232;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  letter-spacing: 1rpx;
}

/* Floating Action Button */
.fab {
  position: absolute;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #ff3232;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 50, 50, 0.4);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.95) translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 50, 50, 0.4);
}

.fab-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

/* ==================== PROFESSIONAL MOBILE PROFILE TAB STYLES ==================== */

.profile-tab-container {
  padding: 0;
  background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
  overflow-y: auto;
}

/* Top Action Bar - Fixed Header */
.profile-actions {
  position: sticky;
  top: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: rgba(15, 15, 15, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1px solid rgba(255, 50, 50, 0.1);
}

.left-actions {
  display: flex;
  align-items: center;
}

.edit-actions {
  display: flex;
  gap: 16rpx;
}

.profile-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 20rpx 28rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  min-width: 140rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.save-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #1a1a1a;
  font-weight: 700;
  box-shadow: 0 4rpx 15rpx rgba(79, 172, 254, 0.4);
}

.cancel-btn {
  background: linear-gradient(135deg, #2c3e50 0%, #4a5568 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(44, 62, 80, 0.4);
}

.logout-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.4);
}

.profile-action-btn:active {
  transform: scale(0.96) translateY(2rpx);
}

.btn-icon {
  font-size: 28rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

.btn-text {
  font-size: 26rpx;
  letter-spacing: 0.5rpx;
}

/* Avatar Section */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 30rpx 40rpx;
  background: rgba(30, 30, 30, 0.6);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}

.avatar-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ff3232, transparent);
}

.avatar-container-large {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  border: 4rpx solid rgba(255, 50, 50, 0.3);
  box-shadow: 0 8rpx 32rpx rgba(255, 50, 50, 0.2);
  transition: all 0.3s ease;
}

.avatar-large {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container-large:active .avatar-overlay {
  opacity: 1;
}

.avatar-edit-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.avatar-edit-text {
  font-size: 24rpx;
  color: white;
  text-align: center;
}

.avatar-info {
  text-align: center;
  margin-top: 24rpx;
}

.avatar-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 8rpx;
}

.avatar-university {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Profile Form Container */
.profile-form {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin-top: 20rpx;
}

.form-section {
  background: rgba(30, 30, 30, 0.8);
  backdrop-filter: blur(20rpx);
  margin: 0 20rpx 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: hidden;
}

.form-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ff3232, transparent);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 50, 50, 0.2);
  display: flex;
  align-items: center;
  gap: 16rpx;
  letter-spacing: 1rpx;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff3232, #ff6b6b);
  border-radius: 4rpx;
}

/* Form Field Styles */
.form-field {
  margin-bottom: 40rpx;
  position: relative;
}

.form-field:last-child {
  margin-bottom: 0;
}

/* WeChat Linking Styles */
.wechat-status-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wechat-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.wechat-status.linked {
  background: rgba(7, 193, 96, 0.1);
  border-color: rgba(7, 193, 96, 0.3);
}

.wechat-status.unlinked {
  background: rgba(255, 50, 50, 0.1);
  border-color: rgba(255, 50, 50, 0.3);
}

.wechat-status-icon {
  font-size: 32rpx;
}

.wechat-status-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #e2e8f0;
}

.wechat-actions {
  display: flex;
  justify-content: center;
}

.wechat-link-btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  min-width: 180rpx;
  text-align: center;
}

.wechat-link-btn.link-btn {
  background: linear-gradient(135deg, #07c160, #05a651);
  color: white;
}

.wechat-link-btn.link-btn:active {
  background: linear-gradient(135deg, #06b456, #04954a);
  transform: scale(0.95);
}

.wechat-link-btn.unlink-btn {
  background: linear-gradient(135deg, #ff4757, #ff6b7a);
  color: white;
}

.wechat-link-btn.unlink-btn:active {
  background: linear-gradient(135deg, #e84055, #ff5b6d);
  transform: scale(0.95);
}

.wechat-link-btn:disabled {
  opacity: 0.6;
  transform: none;
  cursor: not-allowed;
}

.wechat-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-top: 10rpx;
}

/* Phone and Email Input with Verification */
.phone-input, .email-input {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.phone-prefix {
  background: rgba(255, 50, 50, 0.1);
  color: #ff3232;
  padding: 24rpx 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.phone-number {
  flex: 1;
}

.verify-btn {
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 100rpx;
}

.verify-btn:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #059669, #047857);
}

/* Gender Selection */
.gender-options {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.gender-option {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  flex: 1;
  min-height: 80rpx;
}

.gender-option:active {
  transform: scale(0.96);
}

.gender-option.selected {
  border-color: #ff3232;
  background: linear-gradient(135deg, rgba(255, 50, 50, 0.2), rgba(255, 107, 107, 0.1));
  box-shadow: 0 4rpx 20rpx rgba(255, 50, 50, 0.3);
  transform: translateY(-2rpx);
}

.gender-option.disabled {
  opacity: 0.4;
  cursor: not-allowed;
  transform: none;
}

.gender-icon {
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.gender-option.selected .gender-icon {
  color: #ff3232;
  filter: drop-shadow(0 2rpx 8rpx rgba(255, 50, 50, 0.5));
}

.gender-text {
  font-size: 28rpx;
  color: #e2e8f0;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* Picker Styling */
.picker-view {
  padding: 24rpx 20rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  min-height: 72rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  position: relative;
}

.picker-view::after {
  content: '▼';
  position: absolute;
  right: 20rpx;
  color: #ff3232;
  font-size: 24rpx;
  pointer-events: none;
}

.picker-view:active {
  border-color: #ff3232;
  background: rgba(25, 25, 25, 0.9);
  transform: translateY(-2rpx);
}

.picker-view.error {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.05);
  animation: shake 0.5s ease-in-out;
}

.placeholder {
  color: #64748b;
  font-style: italic;
}

/* Error Text */
.error-text {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 12rpx;
  display: block;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding-left: 8rpx;
}

/* Loading States */
.profile-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #64748b;
}

.profile-loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-top: 4rpx solid #ff3232;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

/* Verification Section Styles */
.verification-section {
  margin-top: 16rpx;
  padding: 20rpx;
  background: rgba(15, 15, 15, 0.8);
  border-radius: 12rpx;
  border: 1px solid rgba(255, 50, 50, 0.2);
}

.send-code-btn {
  width: 100%;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.send-code-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #5a67d8, #553c9a);
}

.otp-input-container {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.otp-input {
  flex: 1;
  padding: 16rpx;
  background: rgba(30, 30, 30, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  color: white;
  font-size: 26rpx;
}

.otp-input:focus {
  border-color: #ff3232;
  background: rgba(35, 35, 35, 0.9);
}

.verify-code-btn {
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 100rpx;
}

.verify-code-btn:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #059669, #047857);
}

/* Profile Button Styles */
.profile-button-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.profile-redirect-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  border: none;
  min-width: 80rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.profile-redirect-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.profile-btn-icon {
  font-size: 24rpx;
  color: white;
  margin-bottom: 4rpx;
}

.profile-btn-text {
  font-size: 20rpx;
  color: white;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* Responsive Design for Small Screens */
@media screen and (max-width: 600rpx) {
  .profile-actions {
    flex-direction: column;
    gap: 20rpx;
    padding: 24rpx 20rpx;
  }
  
  .edit-actions {
    width: 100%;
    justify-content: center;
  }
  
  .profile-action-btn {
    flex: 1;
    justify-content: center;
    min-width: 100rpx;
    padding: 18rpx 24rpx;
    font-size: 24rpx;
  }
  
  .form-section {
    margin: 0 16rpx 24rpx 16rpx;
    padding: 32rpx 24rpx;
    border-radius: 20rpx;
  }
  
  .gender-options {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .phone-input, .email-input {
    flex-direction: column;
    align-items: stretch;
  }
  
  .verify-btn {
    margin-top: 12rpx;
  }
  
  .profile-button-container {
    margin-left: 12rpx;
  }
  
  .profile-redirect-btn {
    padding: 10rpx 12rpx;
    min-width: 70rpx;
  }
  
  .profile-btn-icon {
    font-size: 20rpx;
  }
  
  .profile-btn-text {
    font-size: 18rpx;
  }
}
/* ===================== MODERN CONTACT SECTION DESIGN ===================== */

.contact-container {
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%);
  position: relative;
  overflow: hidden;
  padding: 0;
}

/* Animated Background Elements */
.contact-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 50, 50, 0.1) 0%, transparent 30%),
    radial-gradient(circle at 80% 70%, rgba(147, 51, 234, 0.08) 0%, transparent 40%),
    radial-gradient(circle at 40% 80%, rgba(59, 130, 246, 0.06) 0%, transparent 35%);
  animation: float 20s ease-in-out infinite;
  z-index: 1;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  25% { transform: translate(-10rpx, -20rpx) rotate(1deg); }
  50% { transform: translate(15rpx, -10rpx) rotate(-1deg); }
  75% { transform: translate(-5rpx, 15rpx) rotate(0.5deg); }
}

/* Main Content Wrapper */
.contact-container .header,
.contact-container .content {
  position: relative;
  z-index: 2;
}

/* Hero Header Section */
.contact-container .header {
  background: linear-gradient(135deg, 
    rgba(255, 50, 50, 0.15) 0%, 
    rgba(147, 51, 234, 0.12) 50%, 
    rgba(59, 130, 246, 0.1) 100%);
  border-radius: 0 0 60rpx 60rpx;
  padding: 80rpx 40rpx 60rpx;
  margin-bottom: 60rpx;
  border: 1px solid rgba(255, 255, 255, 0.08);
  backdrop-filter: blur(20rpx);
  position: relative;
  overflow: hidden;
}

.contact-container .header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    #ff3232 30%, 
    #9333ea 50%, 
    #3b82f6 70%, 
    transparent 100%);
  animation: shimmer 3s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.contact-container .header-content {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.contact-container .header-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.contact-container .header-icon {
  font-size: 120rpx;
  background: linear-gradient(135deg, #ff3232, #9333ea, #3b82f6);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  animation: pulse 2s ease-in-out infinite;
  filter: drop-shadow(0 0 20rpx rgba(255, 50, 50, 0.3));
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.contact-container .header-title text:last-child {
  font-size: 56rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #ffffff, #f0f0f0, #e0e0e0);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.contact-container .header-badge {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15), rgba(255, 255, 255, 0.08));
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* Content Card */
.contact-container .content {
  background: linear-gradient(135deg, 
    rgba(25, 25, 25, 0.95) 0%, 
    rgba(35, 35, 35, 0.9) 50%, 
    rgba(20, 20, 20, 0.95) 100%);
  border-radius: 40rpx 40rpx 0 0;
  padding: 60rpx 40rpx 80rpx;
  margin: 0 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 -10rpx 50rpx rgba(0, 0, 0, 0.3),
    0 20rpx 60rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.1);
  position: relative;
}

.contact-container .content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #ff3232, #9333ea, #3b82f6, transparent);
  border-radius: 2rpx;
}

/* Form Styling */
.contact-container .form-section {
  display: flex;
  flex-direction: column;
  gap: 50rpx;
}

.contact-container .form-item {
  position: relative;
}

.contact-container .form-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  letter-spacing: 1rpx;
}

.contact-container .form-label::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff3232, #9333ea);
  border-radius: 3rpx;
  box-shadow: 0 0 10rpx rgba(255, 50, 50, 0.5);
}

/* Input Field Styling */
.contact-container .form-input,
.contact-container .form-textarea {
  min-height: 90rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.05);
  color: #ffffff;
  transition: border-color 0.3s ease;
}

.contact-container .form-input::placeholder,
.contact-container .form-textarea::placeholder {
  color: rgba(255, 255, 255, 0.4);
  font-style: italic;
  transition: opacity 0.3s ease;
}

.contact-container .form-input:focus,
.contact-container .form-textarea:focus {
  border-color: #ff3232;
  background: linear-gradient(135deg, 
    rgba(60, 60, 60, 0.9) 0%, 
    rgba(70, 70, 70, 0.8) 100%);
  box-shadow: 
    0 0 0 4rpx rgba(255, 50, 50, 0.2),
    0 0 30rpx rgba(255, 50, 50, 0.3),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  outline: none;
  transform: translateY(-2rpx);
}

.contact-container .form-input:focus::placeholder,
.contact-container .form-textarea:focus::placeholder {
  opacity: 0.6;
}

.contact-container .form-textarea {
  min-height: 300rpx;
  resize: none;
  line-height: 1.8;
  font-family: inherit;
}

/* Enhanced Submit Button */
.contact-container .submit-button {
  width: 100%;
  background: linear-gradient(135deg, 
    #ff3232 0%, 
    #9333ea 50%, 
    #3b82f6 100%);
  background-size: 200% 200%;
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 25rpx;
  font-size: 34rpx;
  font-weight: 800;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 60rpx;
  box-shadow: 
    0 10rpx 30rpx rgba(255, 50, 50, 0.3),
    0 20rpx 60rpx rgba(147, 51, 234, 0.2),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  letter-spacing: 2rpx;
  position: relative;
  overflow: hidden;
}

@keyframes gradientShift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.contact-container .submit-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent, 
    rgba(255, 255, 255, 0.2), 
    transparent);
  transition: left 0.5s ease;
}

.contact-container .submit-button:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 
    0 5rpx 15rpx rgba(255, 50, 50, 0.4),
    0 10rpx 30rpx rgba(147, 51, 234, 0.3);
}

.contact-container .submit-button:active::before {
  left: 100%;
}

.contact-container .submit-icon {
  font-size: 40rpx;
  animation: bounce 1s ease-in-out infinite alternate;
}

@keyframes bounce {
  0% { transform: translateY(0); }
  100% { transform: translateY(-3rpx); }
}

/* Success State Animation */
.contact-container .submit-button.success {
  background: linear-gradient(135deg, #10b981, #059669);
  animation: none;
}

.contact-container .submit-button.success .submit-icon {
  animation: checkmark 0.6s ease-in-out;
}

@keyframes checkmark {
  0% { transform: scale(0); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}
