}

.status-text {
  font-size: 20rpx;
}

/* Gender Selection */
.gender-options {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.gender-option {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
