.profile-container {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
  overflow-y: auto;
  padding-bottom: 40rpx;
}

/* Profile Header Bar - Enhanced Professional Design */
.profile-header-bar {
  position: sticky;
  top: 0;
  z-index: 1000;
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 50, 50, 0.15);
  padding: 30rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  background: rgba(15, 15, 15, 0.95);
}

.action-buttons-container {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  align-items: center;
}

.action-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  min-width: 160rpx;
  height: 80rpx;
  padding: 0 32rpx;
  border-radius: 16rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* Professional Shine Effect */
.action-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: left 0.5s;
}

.action-button:active::before {
  left: 100%;
}

/* Button Icons - Larger and cleaner */
.button-icon {
  font-size: 32rpx;
  line-height: 1;
  font-weight: normal;
}

.button-label {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1;
  letter-spacing: 0.8rpx;
}

/* Edit Button - Enhanced Professional Blue */
.edit-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.4);
}

.edit-button:active {
  background: linear-gradient(135deg, #5a6fd8, #6a4190);
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.5);
}

/* Save Button - Enhanced Professional Green */
.save-button {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(17, 153, 142, 0.4);
}

.save-button:active {
  background: linear-gradient(135deg, #0f877c, #32d672);
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(17, 153, 142, 0.5);
}

/* Cancel Button - Enhanced Professional Gray */
.cancel-button {
  background: linear-gradient(135deg, #434343 0%, #000000 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(67, 67, 67, 0.4);
}

.cancel-button:active {
  background: linear-gradient(135deg, #3a3a3a, #1a1a1a);
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(67, 67, 67, 0.5);
}

/* Logout Button - Enhanced Professional Orange */
.logout-button {
  background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 65, 108, 0.4);
}

.logout-button:active {
  background: linear-gradient(135deg, #e6395f, #e6421f);
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(255, 65, 108, 0.5);
}

