  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.3);
}

.wechat-link-btn.unlink-btn:active {
  background: linear-gradient(135deg, #e84055, #ff5b6d);
  transform: scale(0.95);
}

.wechat-link-btn:disabled {
  opacity: 0.6;
  transform: none;
  cursor: not-allowed;
}

.wechat-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
  margin-top: 10rpx;
