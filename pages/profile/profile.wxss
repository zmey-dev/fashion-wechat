/* Avatar Section - Horizontal Layout */
.avatar-section-horizontal {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 30rpx;
  background: rgba(30, 30, 30, 0.6);
  backdrop-filter: blur(20rpx);
  margin: 20rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}

.avatar-section-horizontal::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ff3232, transparent);
}

.avatar-container-horizontal {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  border: 3rpx solid rgba(255, 50, 50, 0.3);
  box-shadow: 0 6rpx 24rpx rgba(255, 50, 50, 0.2);
  transition: all 0.3s ease;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.avatar-medium {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.avatar-container-horizontal:active .avatar-overlay {
  opacity: 1;
}

.avatar-edit-icon {
  font-size: 32rpx;
}

.user-info-horizontal {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 10rpx;
}

.user-name-horizontal {
  font-size: 42rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.user-university-horizontal {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  letter-spacing: 0.5rpx;
}

/* Profile Form Container */
.profile-form {
  display: flex;
  flex-direction: column;
  gap: 0;
  margin-top: 20rpx;
}

.form-section {
  background: rgba(30, 30, 30, 0.8);
  backdrop-filter: blur(20rpx);
  margin: 0 20rpx 30rpx 20rpx;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: hidden;
}

.form-section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #ff3232, transparent);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 50, 50, 0.2);
  display: flex;
  align-items: center;
  gap: 16rpx;
  letter-spacing: 1rpx;
}

.section-title::before {
  content: "";
  width: 8rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #ff3232, #ff6b6b);
  border-radius: 4rpx;
}

/* Form Field Styles */
.form-field {
  margin-bottom: 40rpx;
  position: relative;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #e2e8f0;
  margin-bottom: 16rpx;
  letter-spacing: 0.5rpx;
}

.field-div {
  width: 100%;
  padding: 12rpx 10rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  display: flex;
}

.field-input {
  width: 100%;
  height: 70rpx;
  padding: 10rpx 20rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.field-input:focus {
  border-color: #ff3232;
  background: rgba(25, 25, 25, 0.9);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(255, 50, 50, 0.2);
}

.field-input.error {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.05);
  animation: shake 0.5s ease-in-out;
}

.field-input:disabled {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
}

/* Input Wrapper Styles */
.input-wrapper {
