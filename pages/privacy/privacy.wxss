/* Privacy Policy Page Styles */
.privacy-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* Header */
.privacy-header {
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #e5e5e5;
}

.privacy-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* Content Area */
.privacy-content {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  height: 100%;
}

.privacy-text {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  padding-bottom: 100rpx;
}

.welcome {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.update-date,
.effective-date {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.intro {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* Sections */
.section {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.section-subtitle {
  font-size: 30rpx;
  font-weight: 600;
  color: #444;
  margin-top: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* Bullet List */
.bullet-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 20rpx;
}

.bullet-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* Important/Highlighted Text */
.important {
  color: #ff4d4d !important;
  font-weight: bold;
}

.section.important {
  background-color: #fff5f5;
  padding: 30rpx;
  border-radius: 12rpx;
  border: 1px solid #ffdddd;
}

/* Footer */
.footer {
  margin-top: 60rpx;
  padding: 40rpx 0;
  border-top: 1px solid #e5e5e5;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.company {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.copyright {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* Button Section */
.button-section {
  padding: 20rpx 40rpx 40rpx;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
}

.continue-button {
  width: 100%;
  height: 88rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.continue-button:active {
  opacity: 0.9;
}
