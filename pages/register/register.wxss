.register-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
  padding: 40rpx 30rpx;
  color: #fff;
}

/* Header Section */
.register-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.header-content {
  position: relative;
}

.register-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.register-subtitle {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 12rpx 32rpx;
  border-radius: 50rpx;
  display: inline-block;
  border: 1px solid rgba(102, 126, 234, 0.3);
}

.register-subtitle text {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
}

/* Progress Indicator */
.progress-container {
  margin-bottom: 60rpx;
}

.progress-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 40rpx;
}

.progress-step {
  display: flex;
  align-items: center;
  flex: 1;
  max-width: 120rpx;
}

.step-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  z-index: 2;
}

.progress-step.current .step-circle {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.progress-step.completed .step-circle {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-color: #10b981;
}

.step-number {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.step-line {
  flex: 1;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.step-line.completed {
  background: linear-gradient(90deg, #10b981, #059669);
}

.step-labels {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
}

.step-label {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
  font-weight: 500;
}

.step-label.active {
  color: #667eea;
  font-weight: 600;
}

/* Form Container */
.form-container {
  background: rgba(30, 30, 30, 0.8);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  border: 1px solid rgba(255, 255, 255, 0.05);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  margin-bottom: 40rpx;
}

.step-title {
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.step-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 1rpx;
}

/* Form Fields */
.form-step {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.form-field {
  margin-bottom: 32rpx;
}

.field-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #e2e8f0;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.verification-badge {
  background: rgba(255, 50, 50, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(255, 50, 50, 0.3);
}

.verification-badge text {
  font-size: 20rpx;
  color: #ff3232;
}

.verified-badge {
  background: rgba(16, 185, 129, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.verified-badge text {
  font-size: 20rpx;
  color: #10b981;
}

.field-input {
  width: 100%;
  padding: 0 20rpx;
  margin: 24rpx 0rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
  height: 105rpx;
}

.field-input:focus {
  border-color: #667eea;
  background: rgba(25, 25, 25, 0.9);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1),
    inset 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  transform: translateY(-2rpx);
}

.field-input.error {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.05);
  box-shadow: 0 0 0 4rpx rgba(239, 68, 68, 0.1);
  animation: shake 0.5s ease-in-out;
}

@keyframes shake {
  0%,
  100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-4rpx);
  }
  75% {
    transform: translateX(4rpx);
  }
}

/* Phone Input */
.phone-input-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.phone-prefix {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  padding: 24rpx 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 2px solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.phone-input {
  flex: 1;
}

/* Verification Section */
.verification-section {
  margin-top: 16rpx;
  padding: 20rpx;
  background: rgba(15, 15, 15, 0.8);
  border-radius: 12rpx;
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.send-code-btn {
  width: 100%;
  padding: 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.send-code-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #5a67d8, #553c9a);
}

.otp-input-container {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.otp-input {
  flex: 1;
  padding: 16rpx;
  background: rgba(30, 30, 30, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  color: white;
  font-size: 26rpx;
}

.otp-input:focus {
  border-color: #667eea;
  background: rgba(35, 35, 35, 0.9);
}

.verify-btn {
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 100rpx;
}

.verify-btn:active {
  transform: scale(0.96);
  background: linear-gradient(135deg, #059669, #047857);
}

/* Picker Styling */
.picker-view {
  padding: 10rpx 20rpx;
  background: rgba(20, 20, 20, 0.8);
  border: 2px solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  color: #fff;
  font-size: 30rpx;
  min-height: 72rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
  position: relative;
}

.picker-view::after {
  content: "â–¼";
  position: absolute;
  right: 20rpx;
  color: #667eea;
  font-size: 24rpx;
  pointer-events: none;
}

.picker-view:active {
  border-color: #667eea;
  background: rgba(25, 25, 25, 0.9);
  transform: translateY(-2rpx);
}

.picker-view.error {
  border-color: #ef4444;
  background: rgba(239, 68, 68, 0.05);
  animation: shake 0.5s ease-in-out;
}

.picker-view.disabled {
  opacity: 0.4;
  background: rgba(15, 15, 15, 0.6);
  border-color: rgba(255, 255, 255, 0.05);
}

.placeholder {
  color: #64748b;
  font-style: italic;
}

/* Error Text */
.error-text {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 8rpx;
  display: block;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding-left: 8rpx;
}

/* Success Text */
.success-text {
  font-size: 24rpx;
  color: #10b981;
  margin-top: 8rpx;
  display: block;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  padding-left: 8rpx;
  background: rgba(16, 185, 129, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1px solid rgba(16, 185, 129, 0.2);
}

/* Step Navigation */
.step-navigation {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-top: 30rpx;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.nav-btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.secondary-btn {
  background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(74, 85, 104, 0.4);
}

.submit-btn {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  box-shadow: 0 4rpx 15rpx rgba(16, 185, 129, 0.4);
}

.nav-btn:active {
  transform: scale(0.96) translateY(2rpx);
}

.nav-btn.loading {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
  color: rgba(255, 255, 255, 0.7);
}

/* Login Link */
.login-link {
  text-align: center;
  padding: 30rpx 0;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.login-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-right: 8rpx;
}

.login-btn {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 600;
  text-decoration: underline;
  transition: all 0.3s ease;
}

.login-btn:active {
  color: #5a67d8;
}

/* Responsive Design */
@media screen and (max-width: 600rpx) {
  .register-container {
    padding: 30rpx 20rpx;
  }

  .progress-bar {
    padding: 0 20rpx;
  }

  .step-labels {
    padding: 0 20rpx;
  }

  .step-label {
    font-size: 20rpx;
  }

  .form-container {
    padding: 30rpx 24rpx;
  }

  .step-navigation {
    flex-direction: column;
    gap: 16rpx;
  }

  .nav-btn {
    padding: 20rpx 28rpx;
    font-size: 28rpx;
  }

  .phone-input-container {
    flex-direction: column;
    align-items: stretch;
  }

  .phone-prefix {
    text-align: center;
    margin-bottom: 12rpx;
  }

  .otp-input-container {
    flex-direction: column;
    gap: 12rpx;
  }

  .verify-btn {
    width: 100%;
  }
}
