/* Event Detail Page Styles - Bright, Warm & Passionate Design */

/* Event Detail Container */
.event-detail-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: linear-gradient(135deg, #fff8f0 0%, #ffeee6 50%, #fff5f1 100%);
}

.content-wrapper {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  flex: 1;
  position: relative;
}

/* Base Container */
.page-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #fff8f0 0%, #ffeee6 50%, #fff5f1 100%);
  color: #2d1810;
  overflow-x: hidden;
}

/* Event Header with Poster */
.event-header {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  border-radius: 0 0 32rpx 32rpx;
}

.header-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(255, 107, 107, 0.3) 0%, rgba(255, 159, 67, 0.2) 100%);
}

/* Header Actions */
.header-actions {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  z-index: 10;
}

.join-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.4);
  transition: all 0.3s ease;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.join-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
  background: linear-gradient(135deg, #ff5252, #ff3838);
}

/* Header Warnings */
.header-warning {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  z-index: 10;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.warning-text {
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Event Info Section */
.event-info-section {
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.2);
  background: linear-gradient(135deg, rgba(255, 248, 240, 0.95), rgba(255, 238, 230, 0.9));
}

.info-container {
  max-width: 750rpx;
  margin: 0 auto;
  padding: 40rpx 32rpx;
}

.event-title-wrapper {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.event-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #2d1810;
  line-height: 1.2;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.event-meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ff9f43, #feca57);
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.2);
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.meta-icon.calendar {
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
}

.meta-icon.clock,
.meta-icon.users,
.meta-icon.location {
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
}

.meta-text {
  font-size: 26rpx;
  color: #ffffff;
  flex: 1;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Description Section */
.description-section {
  margin: 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.1);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.2);
}

.section-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d1810;
}

.description-content {
  padding: 24rpx;
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 159, 67, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.1);
}

/* HTML Content Styling for Rich Text */
.description-html {
  font-size: 28rpx;
  line-height: 1.6;
  color: #2d1810;
}

/* Note: rich-text component in WeChat Mini Program automatically styles HTML content.
   Custom styles should be applied through the nodes data structure in JavaScript
   or using inline styles in the HTML content itself. */

/* Content Area */
.content-area {
  padding: 32rpx;
  min-height: 60vh;
  background: transparent;
}

/* Loading States */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 72rpx;
  height: 72rpx;
  border: 6rpx solid rgba(255, 107, 107, 0.3);
  border-top: 6rpx solid #ff6b6b;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

.loading-spinner.small {
  width: 56rpx;
  height: 56rpx;
  border-width: 4rpx;
  margin-bottom: 0;
}

.loading-spinner.mini {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
  margin-bottom: 0;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8B4513;
}

.loading-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

/* Empty State */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.empty-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  padding: 64rpx 48rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.1);
}

.empty-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 32rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d1810;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #8B4513;
}

/* Posts Grid */
.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.post-card {
  position: relative;
  aspect-ratio: 4/5;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.1);
}

.post-card:active {
  transform: scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.2);
}

/* Crown for Top 3 */
.crown-wrapper {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 10;
}

.crown-icon {
  width: 48rpx;
  height: 40rpx;
}

/* Blocked Post Overlay */
.blocked-overlay {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.ban-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
}

.blocked-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Media Container */
.media-container {
  width: 100%;
  height: 70%;
  overflow: hidden;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.3s ease;
}

.post-card:active .post-image {
  opacity: 0.9;
}

/* Post Info */
.post-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: linear-gradient(transparent, rgba(255, 248, 240, 0.95));
  color: #2d1810;
}

.post-title-wrapper {
  margin-bottom: 16rpx;
}

.post-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d1810;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.post-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* User Info (Currently Hidden) */
.user-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #ff9f43, #feca57);
  border-radius: 20rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.2);
}

.user-info:active {
  background: linear-gradient(135deg, #ff8f33, #feb547);
}

.username {
  font-size: 22rpx;
  color: #ffffff;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.8);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Like Section */
.like-section {
  margin-left: auto;
}

.like-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: none;
  border: none;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.like-btn:active {
  background: rgba(255, 107, 107, 0.1);
}

.heart-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
  transition: all 0.2s ease;
}

.heart-icon.liked {
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.like-count {
  font-size: 24rpx;
  color: #2d1810;
  font-weight: 500;
}

/* End Message */
.end-message {
  text-align: center;
  padding: 40rpx 0;
}

.end-text {
  font-size: 26rpx;
  color: #8B4513;
}

/* Floating Action Buttons */
.floating-actions {
  position: absolute;
  bottom: 50rpx;
  right: 32rpx;
  z-index: 999;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.float-btn {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.float-btn.refresh {
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
}

.float-btn.scroll-top {
  background: linear-gradient(135deg, #ff9f43, #feca57);
}

.float-btn:active {
  transform: scale(0.9);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

.float-btn.refresh .btn-icon {
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
}

.float-btn.scroll-top .btn-icon {
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .posts-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
  }
  
  .content-area {
    padding: 24rpx;
  }
  
  .event-title {
    font-size: 40rpx;
  }
  
  .info-container {
    padding: 32rpx 24rpx;
  }
}

/* Accessibility and Enhanced Interactions */
.post-card:focus,
.like-btn:focus,
.float-btn:focus {
  outline: 2rpx solid #ffffff;
  outline-offset: 2rpx;
}

/* Smooth Animations */
.post-card {
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s ease;
}

.like-btn {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.float-btn {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}