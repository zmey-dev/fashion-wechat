/* pages/chat/chat.wxss */

page {
  background-color: #0f0f0f;
  height: 100vh;
}

/* Main Container */
.page-container {
  height: 100vh;
  background: #0f0f0f;
  color: white;
  position: relative;
  overflow: hidden;
}

/* View States */
.chat-list-view,
.chat-detail-view {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  transition: transform 0.3s ease;
}

.chat-list-view.active {
  transform: translateX(0);
}

.chat-list-view.hidden {
  transform: translateX(-100%);
}

.chat-detail-view.active {
  transform: translateX(0);
}

.chat-detail-view.hidden {
  transform: translateX(100%);
}

/* ==============================================
   CHAT LIST STYLES
============================================== */

.chat-list-view {
  display: flex;
  flex-direction: column;
  background: #0f0f0f;
}

/* List Header */
.list-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 20px;
  background: #0f0f0f;
  border-bottom: 1px solid #1c1c1e;
}

.header-title {
  font-size: 34px;
  font-weight: bold;
  color: white;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
}

.action-icon {
  font-size: 18px;
  padding: 8px;
  border-radius: 20px;
  transition: background-color 0.15s ease;
}

.action-icon:active {
  background: rgba(255, 255, 255, 0.1);
}

/* Search Container */
.search-container {
  padding: 8px 16px 12px 16px;
  background: #0f0f0f;
}

.search-box {
  display: flex;
  align-items: center;
  background: #1c1c1e;
  border-radius: 10px;
  padding: 8px 12px;
}

.search-icon {
  font-size: 16px;
  margin-right: 8px;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  color: white;
  font-size: 17px;
}

.search-input::placeholder {
  color: #8e8e93;
}

/* Friends List */
.friends-list {
  flex: 1;
  background: #0f0f0f;
  overflow: hidden;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: #0f0f0f;
  border-bottom: 0.5px solid #1c1c1e;
  transition: background-color 0.15s ease;
}

.chat-item-hover {
  background: #1c1c1e !important;
}

.friend-avatar-container {
  position: relative;
  width: 50px;
  height: 50px;
  margin-right: 12px;
  flex-shrink: 0;
}

.friend-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  background: #32323a;
}

.online-dot {
  position: absolute;
  bottom: 2px;
  right: 2px;
  width: 14px;
  height: 14px;
  background: #30d158;
  border: 2px solid #0f0f0f;
  border-radius: 7px;
}

.unread-badge {
  position: absolute;
  top: -2px;
  right: -2px;
  background: #ff3b30;
  color: white;
  font-size: 12px;
  font-weight: 600;
  padding: 2px 6px;
  border-radius: 10px;
  min-width: 18px;
  text-align: center;
}

.friend-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.friend-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4px;
}

.friend-name {
  font-size: 17px;
  font-weight: 600;
  color: white;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.timestamp {
  font-size: 15px;
  color: #8e8e93;
  margin-left: 8px;
  flex-shrink: 0;
}

.friend-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.last-message {
  font-size: 15px;
  color: #8e8e93;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

/* Inline typing indicator */
.typing-indicator-inline {
  display: flex;
  align-items: center;
  gap: 6px;
}

.typing-text {
  font-size: 15px;
  color: #30d158;
}

.typing-dots-inline {
  display: flex;
  gap: 2px;
}

.typing-dot-inline {
  width: 4px;
  height: 4px;
  background: #30d158;
  border-radius: 2px;
  animation: typingBounce 1.5s infinite;
}

.typing-dot-inline:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot-inline:nth-child(3) {
  animation-delay: 0.4s;
}

/* ==============================================
   CHAT DETAIL STYLES
============================================== */

.chat-detail-view {
  display: flex;
  flex-direction: column;
  background: #0f0f0f;
}

/* Chat Header */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: #0f0f0f;
  border-bottom: 1px solid #1c1c1e;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.back-btn {
  padding: 8px;
  margin-right: 8px;
  border-radius: 20px;
  transition: background-color 0.15s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.back-icon {
  font-size: 24px;
  color: #007aff;
  font-weight: bold;
}

.user-avatar-container {
  position: relative;
  width: 40px;
  height: 40px;
  margin-right: 12px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background: #32323a;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 17px;
  font-weight: 600;
  color: white;
  margin-bottom: 2px;
}

.user-status {
  font-size: 13px;
  color: #8e8e93;
}

/* Header typing indicator */
.header-typing {
  display: flex;
  align-items: center;
  gap: 6px;
}

.header-typing-text {
  font-size: 13px;
  color: #30d158;
}

.header-typing-dots {
  display: flex;
  gap: 2px;
}

.header-typing-dot {
  width: 3px;
  height: 3px;
  background: #30d158;
  border-radius: 1.5px;
  animation: typingBounce 1.5s infinite;
}

.header-typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.header-typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* Messages Container */
.messages-container {
  flex: 1;
  background: #0f0f0f;
  padding: 16px 16px 60px 16px;
  overflow: hidden;
  box-sizing: border-box;
}

.messages-list {
  padding: 16px 0 80px 0;
}

/* Date separator */
.date-separator {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

.date-text {
  background: rgba(255, 255, 255, 0.1);
  color: #8e8e93;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 12px;
}

/* Message wrapper */
.message-wrapper {
  margin-bottom: 16px;
  animation: messageSlideIn 0.3s ease-out;
}

.message-wrapper.sent {
  display: flex;
  justify-content: flex-end;
}

.message-wrapper.received {
  display: flex;
  justify-content: flex-start;
}

/* Message group */
.message-group {
  display: flex;
  align-items: flex-end;
  gap: 8px;
  max-width: 70%;
}

.message-wrapper.received .message-group {
  flex-direction: row;
}

/* Message avatar */
.message-avatar-container {
  flex-shrink: 0;
}

.message-avatar {
  width: 35px;
  height: 35px;
  border-radius: 17.5px;
  background: #32323a;
}

/* Message bubble */
.message-bubble {
  padding: 12px 16px;
  border-radius: 18px;
  position: relative;
  max-width: 100%;
  word-wrap: break-word;
}

.received-bubble {
  background: #1c1c1e;
  color: white;
}

.sent-bubble {
  background: #007aff;
  color: white;
}

.message-bubble.emoji-only {
  background: transparent;
  padding: 4px;
}

.message-bubble.emoji-only .message-text {
  font-size: 32px;
}

.message-text {
  font-size: 16px;
  line-height: 1.4;
  margin-bottom: 4px;
}

.message-time {
  font-size: 12px;
  opacity: 0.7;
  text-align: right;
}

/* Seen indicator */
.message-seen-indicator {
  display: flex;
  align-items: flex-end;
  margin-left: 4px;
}

.seen-icon {
  font-size: 12px;
  opacity: 0.6;
  width: 40rpx;
  height: 40rpx;
}

/* Typing indicator in chat */
.typing-indicator-container {
  display: flex;
  align-items: flex-end;
  gap: 8px;
  margin: 16px 0;
}

.typing-avatar-container {
  flex-shrink: 0;
}

.typing-avatar {
  width: 35px;
  height: 35px;
  border-radius: 17.5px;
  background: #32323a;
}

.typing-bubble {
  background: #1c1c1e;
  padding: 12px 16px;
  border-radius: 18px;
  position: relative;
}

.typing-dots {
  display: flex;
  gap: 4px;
}

.typing-dot {
  width: 8px;
  height: 8px;
  background: #8e8e93;
  border-radius: 4px;
  animation: typingBounce 1.5s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* Emoji Picker */
.emoji-picker {
  position: absolute;
  left: 0;
  right: 0;
  height: 200px;
  background: #1c1c1e;
  border-top: 1px solid #2c2c2e;
}

.emoji-grid {
  height: 100%;
  padding: 16px;
}

.emoji-item {
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 24px;
  border-radius: 8px;
  margin: 4px;
  transition: background-color 0.15s ease;
}

.emoji-item-hover {
  background: rgba(255, 255, 255, 0.1);
}

/* Message Input */
.message-input-container {
  position: absolute;
  left: 0;
  right: 0;
  background: #0f0f0f;
  border-top: 1px solid #1c1c1e;
  padding: 8px 16px;
}

.input-box {
  display: flex;
  align-items: center;
  background: #1c1c1e;
  border-radius: 20px;
  padding: 8px;
  gap: 8px;
}

.input-actions-left,
.input-actions-right {
  display: flex;
  align-items: center;
}

.input-action-btn {
  font-size: 20px;
  padding: 8px;
  border-radius: 16px;
  transition: background-color 0.15s ease;
}

.input-action-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.message-input {
  flex: 1;
  background: transparent;
  border: none;
  color: white;
  font-size: 16px;
  padding: 8px 12px;
}

.message-input::placeholder {
  color: #8e8e93;
}

.send-btn {
  background: #007aff;
  border-radius: 16px;
  padding: 8px;
  transition: background-color 0.15s ease;
}

.send-btn:active {
  background: #0056b3;
}

.send-icon {
  font-size: 16px;
  color: white;
}

/* Context Menu */
.context-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.context-menu {
  position: absolute;
  background: #2c2c2e;
  border-radius: 12px;
  padding: 8px 0;
  min-width: 200px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
}

.context-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  transition: background-color 0.15s ease;
}

.context-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.context-item.danger .context-text {
  color: #ff3b30;
}

.context-icon {
  font-size: 16px;
  margin-right: 12px;
  width: 20px;
  text-align: center;
}

.context-text {
  font-size: 16px;
  color: white;
  flex: 1;
}

.context-divider {
  height: 1px;
  background: #3a3a3c;
  margin: 8px 16px;
}

/* Animations */
@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes typingBounce {
  0%,
  60%,
  100% {
    transform: translateY(0);
  }
  30% {
    transform: translateY(-10px);
  }
}

/* Scrollbar hidden */
::-webkit-scrollbar {
  display: none;
}

/* Safe area handling */
@supports (padding: max(0px)) {
  .list-header,
  .chat-header {
    padding-top: max(12px, env(safe-area-inset-top));
  }

  .message-input-container {
    padding-bottom: max(8px, env(safe-area-inset-bottom));
  }
}

/* Responsive adjustments */
@media (max-width: 375px) {
  .header-title {
    font-size: 28px;
  }

  .friend-name,
  .user-name {
    font-size: 16px;
  }

  .message-text {
    font-size: 15px;
  }
}
