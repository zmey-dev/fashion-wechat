/* pages/chat/chat.wxss */

page {
  background-color: #0f0f0f;
  height: calc(100vh - env(safe-area-inset-bottom));
  height: calc(100vh - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
}

/* Main Container */
.page-container {
  height: calc(100vh - env(safe-area-inset-bottom));
  height: calc(100vh - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  background: #0f0f0f;
  color: white;
  position: relative;
  overflow: hidden;
}

/* Chat Container */
.chat-container {
  height: calc(100vh - 240rpx - env(safe-area-inset-bottom)); /* 240rpx (tab bar) + 80rpx (search bar) */
  height: calc(100vh - 240rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  width: 100%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* Teacher layout - smaller container height (now includes search bar) */
.chat-container.teacher-layout {
  height: calc(100vh - 200rpx - env(safe-area-inset-bottom)); /* 120rpx (filter bar) + 80rpx (search bar) */
  height: calc(100vh - 200rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
}

/* View States */
.chat-list-view,
.chat-detail-view {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  transition: transform 0.3s ease;
}

.chat-list-view.active {
  transform: translateX(0);
}

.chat-list-view.hidden {
  transform: translateX(-100%);
}

.chat-detail-view.active {
  transform: translateX(0);
}

.chat-detail-view.hidden {
  transform: translateX(100%);
}

/* ==============================================
   CHAT LIST STYLES
============================================== */

.chat-list-view {
  display: flex;
  flex-direction: column;
  background: #0f0f0f;
}

/* List Header */
.list-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 20px;
  background: #0f0f0f;
  border-bottom: 1px solid #1c1c1e;
}

.header-title {
  font-size: 34px;
  font-weight: bold;
  color: white;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16px;
}

.action-icon {
  font-size: 18px;
  padding: 8px;
  border-radius: 20px;
  transition: background-color 0.15s ease;
}

.action-icon:active {
  background: rgba(255, 255, 255, 0.1);
}

/* Search Container */
.search-container {
  padding: 8px 16px 12px 16px;
  background: #0f0f0f;
}

.search-box {
  display: flex;
  align-items: center;
  background: #1c1c1e;
  border-radius: 10px;
  padding: 8px 12px;
  width: 100%;
}

.search-icon {
  font-size: 16px;
  margin-right: 8px;
  opacity: 0.6;
}

.search-input {
  flex: 1;
  background: transparent;
  border: none;
  color: white;
  font-size: 17px;
}

.search-input::placeholder {
  color: #8e8e93;
}

/* Friends List */
.friends-list {
  flex: 1;
  background: #0f0f0f;
  overflow: hidden;
}

.chat-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  background: #0f0f0f;
  border-bottom: 0.5px solid #1c1c1e;
  transition: background-color 0.15s ease;
}

.chat-item-hover {
  background: #1c1c1e !important;
}

.friend-avatar-container {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  margin-right: 12px;
  flex-shrink: 0;
}

.friend-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 25px;
  background: #32323a;
}

.online-dot {
  position: absolute;
  bottom: -6rpx;
  right: 0px;
  width: 20rpx;
  height: 20rpx;
  background: #30d158;
  border: 3rpx solid #0f0f0f;
  border-radius: 100%;
}

.unread-badge {
  position: absolute;
  top: -1rpx;
  right: -16rpx;
  background: #ff3b30;
  color: white;
  font-size: 17rpx;
  font-weight: 600;
  padding: 6rpx;
  border-color: white;
  border-radius: 100%;
  border-width: 2px;
  border-style: double;
  text-align: center;
  min-width: 24rpx;
}

.friend-content {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.friend-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4px;
}

.friend-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.timestamp {
  font-size: 15px;
  color: #8e8e93;
  margin-left: 8px;
  flex-shrink: 0;
}

.friend-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.last-message {
  font-size: 15px;
  color: #8e8e93;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

/* Inline typing indicator */
.typing-indicator-inline {
  display: flex;
  align-items: center;
  gap: 6px;
}

.typing-text {
  font-size: 15px;
  color: #30d158;
}

.typing-dots-inline {
  display: flex;
  gap: 2px;
}

.typing-dot-inline {
  width: 4px;
  height: 4px;
  background: #30d158;
  border-radius: 2px;
  animation: typingBounce 1.5s infinite;
}

.typing-dot-inline:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot-inline:nth-child(3) {
  animation-delay: 0.4s;
}

/* ==============================================
   CHAT DETAIL STYLES
============================================== */

.chat-detail-view {
  display: flex;
  flex-direction: column;
  background: #0f0f0f;
}

/* Chat Header */
.chat-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  background: #0f0f0f;
  border-bottom: 1px solid #1c1c1e;
}

.header-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.back-btn {
  transition: background-color 0.15s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
  color: #007aff;
  font-weight: bold;
}

.user-avatar-container {
  position: relative;
  width: 70rpx;
  height: 70rpx;
  margin-right: 12px;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 20px;
  background: #32323a;
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 2px;
}

.user-status {
  font-size: 24rpx;
  color: #8e8e93;
}

/* Header typing indicator */
.header-typing {
  display: flex;
  align-items: center;
  gap: 6px;
}

.header-typing-text {
  font-size: 13px;
  color: #30d158;
}

.header-typing-dots {
  display: flex;
  gap: 2px;
}

.header-typing-dot {
  width: 3px;
  height: 3px;
  background: #30d158;
  border-radius: 1.5px;
  animation: typingBounce 1.5s infinite;
}

.header-typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.header-typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* Messages Container */
.messages-container {
  flex: 1;
  background: #0f0f0f;
  padding: 16px 16px 80px 16px;
  overflow: hidden;
  box-sizing: border-box;
}

.messages-list {
  padding: 16px 0 16px 0;
}

/* Date separator */
.date-separator {
  display: flex;
  justify-content: center;
  margin: 20px 0;
}

.date-text {
  background: rgba(255, 255, 255, 0.1);
  color: #8e8e93;
  font-size: 12px;
  padding: 4px 12px;
  border-radius: 12px;
}

/* Message wrapper */
.message-wrapper {
  margin-bottom: 16px;
  animation: messageSlideIn 0.3s ease-out;
}

.message-wrapper.sent {
  display: flex;
  justify-content: flex-end;
}

.message-wrapper.received {
  display: flex;
  justify-content: flex-start;
}

/* Message group */
.message-group {
  display: flex;
  align-items: flex-end;
  gap: 8px;
  max-width: 70%;
}

.message-wrapper.received .message-group {
  flex-direction: row;
}

/* Message avatar */
.message-avatar-container {
  flex-shrink: 0;
}

.message-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 17.5px;
  background: #32323a;
}

/* Message bubble */
.message-bubble {
  padding: 12px 16px;
  border-radius: 18px;
  position: relative;
  max-width: 100%;
  word-wrap: break-word;
}

.received-bubble {
  background: #1c1c1e;
  color: white;
}

.sent-bubble {
  background: #007aff;
  color: white;
}

.message-bubble.emoji-only {
  background: transparent;
  padding: 4px;
}

.message-bubble.emoji-only .message-text {
  font-size: 32px;
}

.message-text {
  font-size: 16px;
  line-height: 1.4;
  margin-bottom: 4px;
}

.message-time {
  font-size: 12px;
  opacity: 0.7;
  text-align: right;
}

/* Seen indicator */
.message-seen-indicator {
  display: flex;
  align-items: flex-end;
  margin-left: 4px;
}

.seen-icon {
  font-size: 12px;
  opacity: 0.6;
  width: 40rpx;
  height: 40rpx;
}

/* Typing indicator in chat */
.typing-indicator-container {
  display: flex;
  align-items: flex-end;
  gap: 8px;
  margin: 16px 0;
}

.typing-avatar-container {
  flex-shrink: 0;
}

.typing-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 17.5px;
  background: #32323a;
}

.typing-bubble {
  background: #1c1c1e;
  padding: 12px 16px;
  border-radius: 18px;
  position: relative;
}

.typing-dots {
  display: flex;
  gap: 4px;
}

.typing-dot {
  width: 8px;
  height: 8px;
  background: #8e8e93;
  border-radius: 4px;
  animation: typingBounce 1.5s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

/* Emoji Picker */
.emoji-picker {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 80px;
  height: 200px;
  background: #1c1c1e;
  z-index: 999;
  border-top: 1px solid #2c2c2e;
}

.emoji-grid {
  height: 100%;
  padding: 16px;
}

.emoji-item {
  display: inline-block;
  width: 40px;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 24px;
  border-radius: 8px;
  margin: 4px;
  transition: background-color 0.15s ease;
}

.emoji-item-hover {
  background: rgba(255, 255, 255, 0.1);
}

/* Message Input */
.message-input-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #0f0f0f;
  border-top: 1px solid #1c1c1e;
  padding: 8px 16px;
  z-index: 1000;
}

.input-box {
  display: flex;
  align-items: center;
  background: #1c1c1e;
  border-radius: 20px;
  padding: 8px;
  gap: 8px;
}

.input-actions-left,
.input-actions-right {
  display: flex;
  align-items: center;
}

.input-action-btn {
  font-size: 20px;
  padding: 8px;
  border-radius: 16px;
  transition: background-color 0.15s ease;
}

.input-action-btn:active {
  background: rgba(255, 255, 255, 0.1);
}

/* Disabled styles for input action button */
.input-action-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
  color: #666;
}

.message-input {
  flex: 1;
  background: transparent;
  border: none;
  color: white;
  font-size: 16px;
  padding: 8px 12px;
}

.message-input::placeholder {
  color: #8e8e93;
}

/* Disabled styles for message input */
.message-input.disabled {
  opacity: 0.6;
  color: #666;
  pointer-events: none;
}

.message-input.disabled::placeholder {
  color: #444;
}

.send-btn {
  background: #007aff;
  border-radius: 16px;
  padding: 8px;
  transition: background-color 0.15s ease;
}

.send-btn:active {
  background: #0056b3;
}

/* Disabled styles for send button */
.send-btn.disabled {
  background: #333 !important;
  opacity: 0.5;
  pointer-events: none;
  cursor: not-allowed;
}

.send-btn.disabled .send-icon {
  color: #666 !important;
}

.send-icon {
  font-size: 16px;
  color: white;
}

/* Context Menu */
.context-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.context-menu {
  position: absolute;
  background: #2c2c2e;
  border-radius: 12px;
  padding: 8px 0;
  min-width: 200px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.5);
}

.context-item {
  display: flex;
  align-items: center;
  padding: 12px 16px;
  transition: background-color 0.15s ease;
}

.context-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.context-item.danger .context-text {
  color: #ff3b30;
}

.context-icon {
  font-size: 16px;
  margin-right: 12px;
  width: 20px;
  text-align: center;
}

.context-text {
  font-size: 16px;
  color: white;
  flex: 1;
}

.context-divider {
  height: 1px;
  background: #3a3a3c;
  margin: 8px 16px;
}

/* Friend Request UI */
.friend-request-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border: 2rpx solid #70abff;
  border-radius: 24rpx;
  margin: 0 32rpx;
  background: rgba(112, 171, 255, 0.1);
}

.friend-request-message {
  color: white;
  font-size: 28rpx;
  margin-right: 20rpx;
  flex: 1;
  text-align: center;
}

.friend-request-btn {
  color: #70abff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  background: rgba(112, 171, 255, 0.2);
  transition: all 0.2s ease;
}

.friend-request-btn:active {
  background: rgba(112, 171, 255, 0.3);
  transform: scale(0.95);
}

/* Animations */
@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes typingBounce {
  0%,
  60%,
  100% {
    transform: translateY(0);
  }
  30% {
    transform: translateY(-10px);
  }
}

/* Scrollbar hidden */
::-webkit-scrollbar {
  display: none;
}

/* Responsive adjustments */
@media (max-width: 375px) {
  .header-title {
    font-size: 28px;
  }

  .friend-name,
  .user-name {
    font-size: 16px;
  }

  .message-text {
    font-size: 15px;
  }
}
