/* Scrollbar hidden */
::-webkit-scrollbar {
  display: none;
}

/* Safe area handling */
@supports (padding: max(0px)) {
  .message-input-container {
    padding-bottom: max(8px, env(safe-area-inset-bottom));
  }
}

/* Responsive adjustments */
@media (max-width: 375px) {
  .message-bubble {
    max-width: 85%;
  }

  .friend-name {
    font-size: 16px;
  }

  .last-message {
    font-size: 14px;
  }
}

