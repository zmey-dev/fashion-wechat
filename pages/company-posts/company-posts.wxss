/* Page Container */
.page-container {
  min-height: calc(100vh - 80rpx - env(safe-area-inset-bottom));
  min-height: calc(100vh - 80rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
  color: #ffffff;
  display: flex;
  flex-direction: column;
}

/* Content Area - Scroll View for infinite scroll */
.content-area {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

/* Posts Grid */
.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  padding: 16rpx 0rpx;
  width: 100%;
  box-sizing: border-box;
}

.post-card {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.post-card:active {
  transform: translateY(-4rpx);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
}

/* Media Container */
.media-container {
  position: relative;
  aspect-ratio: 4/5;
  overflow: hidden;
  width: 100%;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* User Section */
.user-section {
  padding: 12rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  flex: 1;
}

.user-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.user-name {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Like Display */
.like-display {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.heart-icon {
  width: 18rpx;
  height: 18rpx;
  filter: brightness(0) saturate(100%) invert(45%) sepia(92%) saturate(2844%)
    hue-rotate(334deg) brightness(103%) contrast(102%);
}

.like-count {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 1;
}

/* Loading States */
/* Use global loading-container styles from app.wxss */

.loading-state,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 100rpx 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  border-top-color: #ff6b6b;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text,
.load-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 50rpx;
  line-height: 1.4;
}

/* Load More & End */
.load-more,
.end-message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.end-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* Scroll to Top Button */
.scroll-top-button {
  position: fixed;
  bottom: 180rpx;
  right: 40rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.3);
  z-index: 99;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  animation: fadeInUp 0.3s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scroll-top-button:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.4);
}

.scroll-top-button.animating {
  animation: pulseScale 0.6s ease-out;
}

@keyframes pulseScale {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

/* Inner container for arrows */
.scroll-top-inner {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

/* Double arrow design */
.arrow-up {
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  left: 8rpx;
  border-left: 3rpx solid #fff;
  border-top: 3rpx solid #fff;
  transform: rotate(45deg);
  opacity: 0.9;
  animation: arrowFloat 1.5s ease-in-out infinite;
}

.arrow-up.second {
  top: 12rpx;
  animation-delay: 0.2s;
  opacity: 0.6;
}

@keyframes arrowFloat {
  0%, 100% {
    transform: rotate(45deg) translateY(0);
  }
  50% {
    transform: rotate(45deg) translateY(-4rpx);
  }
}

/* Ripple effect on tap */
.scroll-top-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  pointer-events: none;
}

.scroll-top-button:active .scroll-top-ripple {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    width: 0;
    height: 0;
    opacity: 1;
  }
  100% {
    width: 120rpx;
    height: 120rpx;
    opacity: 0;
  }
}

/* Loading more styles */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.loading-more .loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.2);
  border-top: 3rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-more .loading-text {
  font-size: 28rpx;
  color: #999;
}