.page-container {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 80rpx);
  background-color: #121212;
  color: #f0f0f0;
}

.user-profile-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: calc(100vh - 240rpx);
  flex: 1;
}

/* Teacher layout - smaller container height */
.user-profile-container.teacher-layout {
  height: calc(100vh - 200rpx);
}

.profile-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
}

.profile-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2px solid #555;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.profile-details {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-width: 0;
  gap: 12rpx;
}

.username-container {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  min-width: 0;
  flex-direction: row;
}

.company-icon {
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.profile-username {
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  flex: 1;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
  word-break: break-word;
  overflow-wrap: break-word;
}

.profile-university {
  font-size: 24rpx;
  color: #b8b8b8;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 1;
  position: relative;
}

.profile-university::before {
  content: "•";
  color: #666;
  margin-right: 8rpx;
}

.profile-faculty {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 1;
  position: relative;
}

.profile-faculty::before {
  content: "•";
  color: #666;
  margin-right: 8rpx;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
}

.action-btn {
  min-width: 140rpx;
  border-radius: 8rpx;
  height: 60rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  border: none;
}

.btn-text {
  font-size: 24rpx;
}

.action-btn.default {
  background-color: #2d3036;
}

.action-btn.followed {
  background-color: #166534;
}

.action-btn.friend {
  background-color: #166534;
}

.action-btn.pending {
  background-color: #854d0e;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.label {
  flex: 1;
  text-align: center;
}

.bg-dark {
  background-color: #2d3036;
}

.bg-green-800 {
  background-color: #166534;
}

.bg-yellow-800 {
  background-color: #854d0e;
}

.media-grid-container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.media-grid {
  padding: 10rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6rpx;
  box-sizing: border-box;
}

.media-item {
  background-color: #1e1e1e;
  border-radius: 6rpx;
  position: relative;
  aspect-ratio: 3/4;
  width: 100%;
}

.media-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-overlay {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  background-color: rgba(0, 0, 0, 0.75);
  color: white;
  padding: 3rpx 6rpx;
  border-radius: 3rpx;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(2px);
}

.likes-count {
  font-size: 18rpx;
  color: white;
  font-weight: 500;
}

.media-info {
  display: none;
}

.media-stats {
  display: none;
}

.media-likes, .media-comments {
  display: none;
}

.media-description {
  display: none;
}

.loading-indicator, .no-more, .no-posts {
  text-align: center;
  padding: 30rpx 20rpx;
  color: #777;
  font-size: 28rpx;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  min-height: 300rpx;
}

.loading-text {
  font-size: 32rpx;
  color: #777;
}

.error-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  min-height: 300rpx;
  padding: 40rpx;
}

.error-message {
  font-size: 32rpx;
  color: #ff6b6b;
  text-align: center;
  margin-bottom: 30rpx;
}

.retry-button {
  padding: 20rpx 40rpx;
  background-color: #3b82f6;
  color: white;
  border-radius: 10rpx;
  border: none;
  font-size: 28rpx;
}

.no-posts {
  color: #888;
  font-style: italic;
}