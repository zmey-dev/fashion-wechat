/* pages/post-viewer/post-viewer.wxss */
.page-container {
  position: relative;
  width: 100vw;
  height: calc(100vh - env(safe-area-inset-bottom));
  height: calc(100vh - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  background-color: #000;
}

.post-viewer-container {
  position: relative;
  width: 100%;
  height: calc(100vh - 320rpx - env(safe-area-inset-bottom));
  height: calc(100vh - 320rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  background-color: #000;
}

/* Teacher layout - smaller container height */
.post-viewer-container.teacher-layout {
  height: calc(100vh - 200rpx - env(safe-area-inset-bottom));
  height: calc(100vh - 200rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
}

/* Media player smooth transitions */
media-player {
  opacity: 1;
  transition: opacity 0.3s ease-in-out;
}

/* Teacher specific styles - no bottom padding */
.post-viewer-container.teacher-container {
  height: calc(100vh - 200rpx - env(safe-area-inset-bottom));
  height: calc(100vh - 200rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  padding-bottom: 0;
}

.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 1);
  z-index: 999;
  opacity: 1;
  transition: opacity 0.2s ease-in-out;
}

/* Navigation loading indicator - subtle indicator during cached transitions */
.navigation-loading {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  z-index: 1000;
  pointer-events: none;
}

.navigation-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: rgba(255, 255, 255, 0.8);
  animation: spin 1s linear infinite;
  background-color: rgba(0, 0, 0, 0.5);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  border-top-color: #fff;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.error-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.9);
  z-index: 999;
  padding: 40rpx;
}

.error-text {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 60rpx;
  background-color: #3b82f6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
  border: none;
}

/* Empty State Styles */
.empty-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.95);
  z-index: 999;
  padding: 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.back-btn {
  padding: 20rpx 60rpx;
  background-color: #6b7280;
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
  border: none;
}

.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.1);
  z-index: 1000;
}