/* Page Container */
.page-container {
  height: 100vh;
  background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
  color: #ffffff;
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
}

/* Header Section */
.header-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx 20rpx;
}

.brand-area {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.brand-title {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #ff6b6b 0%, #feca57 50%, #48dbfb 100%);
  background-size: 200% 200%;
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  animation: gradient-animation 4s ease-in-out infinite;
}

.brand-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 300;
}

@keyframes gradient-animation {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.15);
}

.icon-search {
  font-size: 36rpx;
}

/* Content Area */
.content-area {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  box-sizing:border-box;
}

/* Posts Grid */
.posts-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  padding: 16rpx 0rpx;
  width: 100%;
  box-sizing: border-box;
}

.post-card {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 20rpx;
  overflow: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  transition: all 0.3s ease;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.post-card:active {
  transform: translateY(-4rpx);
  background: rgba(255, 255, 255, 0.08);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
}

/* Media Container */
.media-container {
  position: relative;
  aspect-ratio: 4/5;
  overflow: hidden;
  width: 100%;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* User Section */
.user-section {
  padding: 12rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  flex: 1;
}

.user-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.user-name {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Like Display */
.like-display {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 4rpx 8rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.heart-icon {
  width: 18rpx;
  height: 18rpx;
  filter: brightness(0) saturate(100%) invert(45%) sepia(92%) saturate(2844%) hue-rotate(334deg) brightness(103%) contrast(102%);
}

.like-count {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 1;
}

/* Loading States */
.loading-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  border-top-color: #ff6b6b;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .load-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 50rpx;
  line-height: 1.4;
}

/* Load More & End */
.load-more, .end-message {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  gap: 16rpx;
}

.end-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.4);
}

/* Scroll to Top Button */
.scroll-top-button {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b6b, #feca57);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
  z-index: 99;
  transition: all 0.3s ease;
  opacity: 0.9;
}

.scroll-top-button:active {
  transform: scale(0.9);
  opacity: 1;
}

.scroll-up-icon {
  font-size: 48rpx;
  color: #000000;
  font-weight: 700;
}

/* Responsive Design */
@media (max-width: 640rpx) {
  .posts-grid {
    grid-template-columns: 1fr;
    gap: 24rpx;
  }
  
  .post-card {
    max-width: 500rpx;
    margin: 0 auto;
  }
}

.user-id-modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(8px);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  animation: fadeIn 0.3s ease-out;
}

.user-id-modal-dialog {
  width: 100%;
  max-width: 600rpx;
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.user-id-modal-content {
  background: #111111;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.8);
  border: 1rpx solid #333333;
  position: relative;
}

/* Close button */
.modal-close-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 56rpx;
  height: 56rpx;
  background: #333333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  z-index: 10;
  transition: all 0.2s ease;
}

.modal-close-btn:active {
  background: #555555;
  transform: scale(0.95);
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
  opacity: 0.8;
}

/* Header */
.modal-header {
  padding: 48rpx 40rpx 32rpx;
  text-align: left;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 24rpx;
}

.modal-warning {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 500;
  line-height: 1.5;
  display: block;
  background: rgba(255, 107, 107, 0.1);
  padding: 24rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6b6b;
}

/* Form */
.modal-form {
  padding: 0 40rpx 40rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  background: #222222;
  border: 2rpx solid #444444;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #ffffff;
  transition: all 0.2s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #ffffff;
  background: #2a2a2a;
  box-shadow: 0 0 0 2rpx rgba(255, 255, 255, 0.1);
}

.form-input.error {
  border-color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.form-input::placeholder {
  color: #888888;
}

.error-message {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 12rpx;
  display: block;
}

.form-hint {
  font-size: 22rpx;
  color: #999999;
  margin-top: 12rpx;
  display: block;
  line-height: 1.4;
}

/* Modal Actions */
.modal-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  position: relative;
}

.modal-btn.secondary {
  background: #333333;
  color: #ffffff;
  border: 1rpx solid #555555;
}

.modal-btn.secondary:active {
  background: #444444;
  transform: scale(0.98);
}

.modal-btn.primary {
  background: #ffffff;
  color: #000000;
  box-shadow: 0 8rpx 24rpx rgba(255, 255, 255, 0.2);
}

.modal-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 255, 255, 0.1);
}

.modal-btn:disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* Loading state */
.btn-loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.2);
  border-top: 4rpx solid #000000;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Focus states for accessibility */
.modal-close-btn:focus,
.form-input:focus,
.modal-btn:focus {
  outline: 2rpx solid #ffffff;
  outline-offset: 2rpx;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .user-id-modal-backdrop {
    padding: 20rpx;
  }
  
  .modal-header {
    padding: 40rpx 32rpx 24rpx;
  }
  
  .modal-form {
    padding: 0 32rpx 32rpx;
  }
  
  .modal-title {
    font-size: 32rpx;
  }
  
  .modal-warning {
    font-size: 24rpx;
  }
}

/* Animation improvements */
.form-input {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-btn {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Enhanced visual feedback */
.form-group {
  position: relative;
}

.form-input:focus + .form-hint {
  color: #ffffff;
  opacity: 0.8;
}

.error-message {
  animation: fadeInError 0.3s ease-out;
}

@keyframes fadeInError {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}