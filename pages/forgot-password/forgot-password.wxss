/* Forgot Password Page Styles - Black Design matching web version */
.forgot-password-container {
  min-height: 100vh;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
  padding: 0;
}

/* Header */
.header {
  display: flex;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  position: relative;
}

.back-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #333;
  border-radius: 50%;
  border: 1px solid #444;
  cursor: pointer;
  transition: background 0.2s ease;
}

.back-btn:active {
  background: #444;
}

.back-btn image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

.page-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

/* Content */
.content {
  flex: 1;
  background: #1a1a1a;
  border-radius: 32rpx 32rpx 0 0;
  margin-top: 40rpx;
  min-height: calc(100vh - 200rpx);
  padding: 60rpx 48rpx;
  border: 1px solid #333;
}

/* Step Container */
.step-container {
  width: 100%;
}

/* Tab Container */
.tab-container {
  display: flex;
  margin-bottom: 60rpx;
  background: #333;
  border-radius: 12rpx;
  padding: 8rpx;
  border: 1px solid #444;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #888;
  transition: all 0.3s ease;
  cursor: pointer;
}

.tab.active {
  background: #f06292;
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(240, 98, 146, 0.3);
}

.tab:active {
  transform: scale(0.98);
}

/* Instructions */
.instruction {
  font-size: 28rpx;
  color: #aaa;
  line-height: 1.6;
  margin-bottom: 40rpx;
  text-align: center;
}

/* Method Container */
.method-container {
  width: 100%;
}

/* Input Container */
.input-container {
  margin-bottom: 40rpx;
}

.phone-input {
  display: flex;
  border: 1px solid #444;
  border-radius: 16rpx;
  overflow: hidden;
  background: #2a2a2a;
  transition: border-color 0.3s ease;
}

.phone-input:focus-within {
  border-color: #f06292;
}

.phone-prefix {
  background: #333;
  color: #ffffff;
  padding: 30rpx 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-right: 1px solid #444;
  display: flex;
  align-items: center;
}

.phone-number-input {
  flex: 1;
  padding: 30rpx 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  background: transparent;
  border: none;
}

.email-input-container {
  padding: 30rpx 24rpx;
  background: #2a2a2a;
  transition: border-color 0.3s ease;
  border-radius: 16rpx;
  border: 1px solid #444;
}

.email-input {
  width: 100%;
  font-size: 28rpx;
  color: #ffffff;
}

.email-input:focus {
  border-color: #f06292;
}

/* Alert Messages */
.alert-message {
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.alert-message.success {
  background: rgba(76, 175, 80, 0.2);
  color: #4caf50;
  border: 1px solid rgba(76, 175, 80, 0.3);
}

.alert-message.error {
  background: rgba(255, 107, 107, 0.2);
  color: #ff6b6b;
  border: 1px solid rgba(255, 107, 107, 0.3);
}

/* Buttons */
.send-button,
.verify-button,
.reset-button {
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx;
  background: #f06292;
  color: white;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 25rpx rgba(240, 98, 146, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
  border: none;
}

.send-button:active,
.verify-button:active,
.reset-button:active {
  background: #ec407a;
  transform: translateY(2rpx);
}

.send-button.disabled,
.verify-button.disabled,
.reset-button.disabled {
  background: #555;
  color: #888;
  box-shadow: none;
  cursor: not-allowed;
}

/* Verification Container */
.verification-container {
  width: 100%;
}

.code-input-container {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
  align-items: center;
}

.code-input {
  flex: 1;
  padding: 30rpx 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  border: 1px solid #444;
  border-radius: 16rpx;
  background: #2a2a2a;
  transition: border-color 0.3s ease;
}

.code-input:focus {
  border-color: #f06292;
}

.resend-btn {
  padding: 30rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #f06292;
  font-weight: 500;
  background: #2a2a2a;
  border: 1px solid #444;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
  white-space: nowrap;
  min-width: 160rpx;
}

.resend-btn:active {
  background: rgba(240, 98, 146, 0.1);
}

.resend-btn.disabled {
  color: #555;
  cursor: not-allowed;
}

/* Password Container */
.password-container {
  margin-bottom: 40rpx;
}

.password-field {
  position: relative;
  margin-bottom: 32rpx;
}

.password-input {
  width: 100%;
  padding: 30rpx 80rpx 30rpx 24rpx;
  font-size: 28rpx;
  color: #ffffff;
  border: 1px solid #444;
  border-radius: 16rpx;
  background: #2a2a2a;
  transition: border-color 0.3s ease;
}

.password-input:focus {
  border-color: #f06292;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  cursor: pointer;
  transition: all 0.2s ease;
}

.password-toggle:active {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-50%) scale(0.95);
}

.password-toggle image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) invert(1);
}

/* Back Link */
.back-link {
  text-align: center;
  padding: 32rpx;
}

.back-link text {
  color: #f06292;
  font-size: 28rpx;
  text-decoration: underline;
  cursor: pointer;
  transition: color 0.2s ease;
}

.back-link:active text {
  color: #ec407a;
}

/* Success Container */
.success-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: calc(100vh - 200rpx);
  padding: 80rpx 40rpx;
  background: #1a1a1a;
  border-radius: 32rpx 32rpx 0 0;
  margin-top: 40rpx;
  border: 1px solid #333;
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(76, 175, 80, 0.3);
}

.success-icon image {
  width: 60rpx;
  height: 60rpx;
  filter: brightness(0) invert(1);
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 24rpx;
}

.success-message {
  font-size: 28rpx;
  color: #aaa;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 60rpx;
}

.success-button {
  width: 100%;
  padding: 28rpx;
  background: #f06292;
  color: white;
  border-radius: 16rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 25rpx rgba(240, 98, 146, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
}

.success-button:active {
  background: #ec407a;
  transform: translateY(2rpx);
}
