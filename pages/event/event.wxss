/* event.wxss - Black Design with Vibrant Accents */

/* Reset and Base Styles */
.app-container {
  width: 100%;
  min-height: 100vh;
  background: #000000;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

.event-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow-y: auto;
  background: #000000;
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-top: 88rpx; 
  padding-bottom: 110rpx;
  background: #000000;
}

.container {
  flex: 1;
  padding: 20rpx;
  background: transparent;
}

.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(24rpx);
  border-bottom: 2rpx solid transparent;
  border-image: linear-gradient(90deg, #ff4757, #ff9f43, #feca57) 1;
  box-shadow: 0 4rpx 20rpx rgba(255, 71, 87, 0.2);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff4757, #ff9f43);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(255, 71, 87, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.5);
}

.icon-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.8);
}

.brand-text {
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #ff4757, #ff9f43, #feca57);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -0.5rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 71, 87, 0.3));
}

.nav-badge {
  background: linear-gradient(135deg, rgba(255, 71, 87, 0.2), rgba(255, 159, 67, 0.2));
  border: 1rpx solid rgba(255, 107, 107, 0.4);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
  backdrop-filter: blur(10rpx);
}

.badge-text {
  font-size: 22rpx;
  color: #feca57;
  font-weight: 500;
  text-shadow: 0 1rpx 4rpx rgba(254, 202, 87, 0.5);
}

/* Main Container */
.main-container {
  max-width: 750rpx;
  padding: 0 32rpx 60rpx;
  background: #000000;
}

/* Featured Section */
.featured-section {
  margin-top: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: -1rpx;
  background: linear-gradient(90deg, #ff4757, #ff9f43, #feca57);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 2rpx 8rpx rgba(255, 71, 87, 0.4));
}

.section-subtitle {
  font-size: 28rpx;
  color: #ff9f43;
  font-weight: 400;
  text-shadow: 0 1rpx 4rpx rgba(255, 159, 67, 0.4);
}

/* Featured Showcase */
.main-container {
  flex: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

/* Featured Event Section */
.featured-section {
  background: rgba(30, 30, 30, 0.8);
  border-radius: 24rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 30rpx rgba(255, 71, 87, 0.2);
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.section-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
  text-align: center;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #ff4757, #ff9f43, #feca57);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: drop-shadow(0 2rpx 8rpx rgba(255, 71, 87, 0.4));
}

.section-subtitle {
  font-size: 26rpx;
  color: #ff9f43;
  font-weight: 500;
  text-shadow: 0 1rpx 4rpx rgba(255, 159, 67, 0.4);
}

.featured-showcase {
  background: linear-gradient(135deg, rgba(20, 20, 20, 0.9), rgba(30, 30, 30, 0.95));
  border: 1rpx solid rgba(255, 71, 87, 0.3);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 30rpx rgba(255, 71, 87, 0.25);
}

.showcase-main {
  position: relative;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.5);
}

.event-swiper {
  width: 100%;
  height: 650rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.event-slide {
  width: 95%;
  max-width: 700rpx;
  height: 630rpx;
  display: flex;
  flex-direction: column;
  background: #1a1a1a;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 71, 87, 0.3);
  margin: 0 auto;
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.slide-image-container {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.slide-content {
  flex: 1;
  padding: 24rpx;
  background: #1a1a1a;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-top: 1rpx solid rgba(255, 71, 87, 0.2);
}

.event-info {
  display: flex;
  flex-direction: column;
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #ffffff;
  text-shadow: 0 2rpx 6rpx rgba(255, 71, 87, 0.4);
}

.event-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.image-icon{
  width:27rpx;
  height:27rpx;
  filter: invert(1);
}

.meta-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(255, 71, 87, 0.2), rgba(255, 159, 67, 0.2));
  border-radius: 30rpx;
  padding: 8rpx 16rpx;
  border: 1px solid rgba(255, 107, 107, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.event-meta-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, rgba(255, 71, 87, 0.2), rgba(255, 159, 67, 0.2));
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 1px solid rgba(255, 107, 107, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.meta-icon {
  width: 38rpx;
  height: 38rpx;
}

.calendar-icon {
  background: linear-gradient(135deg, #ff4757, #ff6b6b);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(255, 71, 87, 0.3);
}

.location-icon {
  background: linear-gradient(135deg, #ff9f43, #feca57);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(255, 159, 67, 0.3);
}

.meta-text {
  font-size: 24rpx;
  color: #feca57;
  font-weight: 500;
  text-shadow: 0 1rpx 4rpx rgba(254, 202, 87, 0.5);
}

.event-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff4757;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 6rpx rgba(255, 71, 87, 0.5);
}

.stat-label {
  font-size: 20rpx;
  color: #ff9f43;
  text-transform: uppercase;
  letter-spacing: 1rpx;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.4);
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: linear-gradient(to bottom, rgba(255, 71, 87, 0.3), rgba(255, 159, 67, 0.3));
}

.cta-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ff4757, #ff6b6b);
  border: 1rpx solid rgba(255, 107, 107, 0.4);
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(255, 71, 87, 0.4);
}

.cta-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.3);
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
}

.cta-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.cta-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ffffff;
  border-right: 2rpx solid #ffffff;
  transform: rotate(45deg);
}

/* Showcase Navigation */
.showcase-nav {
  background: linear-gradient(135deg, rgba(30, 30, 30, 0.95), rgba(20, 20, 20, 0.9));
  border-top: 1rpx solid rgba(255, 71, 87, 0.3);
}

.nav-list {
  display: flex;
  flex-direction: column;
  max-height: 400rpx;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 71, 87, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.nav-item:last-child {
  border-bottom: none;
}

.nav-item.active {
  background: rgba(255, 71, 87, 0.1);
  border-left: 4rpx solid #ff4757;
}

.nav-item:active {
  background: rgba(255, 71, 87, 0.15);
}

.nav-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  border: 2rpx solid rgba(255, 71, 87, 0.3);
}

.item-image {
  width: 100%;
  height: 100%;
}

.nav-item-content {
  flex: 1;
  position: relative;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 6rpx;
  display: block;
}

.item-subtitle {
  font-size: 22rpx;
  color: #ff9f43;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

.item-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #ff4757;
  border-radius: 50%;
  box-shadow: 0 0 12rpx rgba(255, 71, 87, 0.8);
}

/* Past Events Section */
.past-section {
  margin-top: 80rpx;
}

.past-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.past-card {
  background: linear-gradient(135deg, rgba(30, 30, 30, 0.9), rgba(20, 20, 20, 0.95));
  border: 1rpx solid rgba(255, 71, 87, 0.2);
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.2);
}

.past-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(255, 71, 87, 0.35);
}

.past-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.past-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.past-status {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, rgba(255, 159, 67, 0.8), rgba(254, 202, 87, 0.8));
  color: #000000;
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 159, 67, 0.4);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.5);
}

.past-info {
  padding: 20rpx;
}

.past-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.past-university {
  font-size: 22rpx;
  color: #ff9f43;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

.past-participants {
  font-size: 20rpx;
  color: #feca57;
  text-shadow: 0 1rpx 2rpx rgba(254, 202, 87, 0.4);
}

/* Empty State */
.empty-past {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(30, 30, 30, 0.9), rgba(20, 20, 20, 0.95));
  border: 1rpx solid rgba(255, 71, 87, 0.2);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.2);
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff4757, #ff9f43);
  border-radius: 50%;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.5);
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.empty-description {
  font-size: 24rpx;
  color: #ff9f43;
  line-height: 1.4;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

/* Loading state */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid rgba(255, 71, 87, 0.2);
  border-radius: 50%;
  border-top: 4px solid #ff4757;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: #ff9f43;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

/* Error state */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 32px;
}

.error-text {
  font-size: 16px;
  color: #ff4757;
  text-align: center;
  margin: 16px 0;
  text-shadow: 0 1rpx 2rpx rgba(255, 71, 87, 0.3);
}

.retry-button {
  padding: 12px 24px;
  background: linear-gradient(135deg, #ff4757, #ff6b6b);
  color: white;
  border-radius: 8px;
  font-size: 14px;
  margin-top: 16px;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.4);
}

/* Modal Styles - Fixed for Proper Scrolling */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(12rpx);
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.modal-dialog {
  width: 100%;
  max-width: 650rpx;
  max-height: 85vh;
  background: #1a1a1a;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(255, 71, 87, 0.3);
  display: flex;
  flex-direction: column;
  position: relative;
  border: 1rpx solid rgba(255, 71, 87, 0.3);
}

.modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  max-height: 85vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff9f43 100%);
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.3);
  flex-shrink: 0;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.icon-image {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

.header-text {
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: rgba(254, 202, 87, 0.9);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.3);
  cursor: pointer;
  transition: all 0.2s ease;
}

.close-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  background: #000000;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  background: #1a1a1a;
  border-top: 1rpx solid rgba(255, 71, 87, 0.2);
  flex-shrink: 0;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.modal-btn.secondary {
  background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
  color: #ff9f43;
  border: 1rpx solid rgba(255, 159, 67, 0.3);
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

.modal-btn.primary {
  background: linear-gradient(135deg, #ff4757, #ff6b6b);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(255, 71, 87, 0.4);
}

.modal-btn:active {
  transform: translateY(1rpx);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

/* Event Preview Card in Modal */
.event-preview-card {
  margin: 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 71, 87, 0.2);
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.preview-image-container {
  position: relative;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}

.preview-content {
  padding: 32rpx;
}

.preview-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 71, 87, 0.3);
}

.preview-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #feca57;
  text-shadow: 0 1rpx 2rpx rgba(254, 202, 87, 0.4);
}

/* Modal Sections with Proper Scrolling */
.description-section,
.rules-section,
.contact-section {
  margin: 0 32rpx 32rpx 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.15);
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 24rpx;
  height: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #ff4757, #ff9f43);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: drop-shadow(0 1rpx 2rpx rgba(255, 71, 87, 0.3));
}

.description-content {
  line-height: 1.6;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.description-html {
  font-size: 26rpx;
  color: #e0e0e0;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.rule-number {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff4757, #ff9f43);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
}

.rule-text {
  font-size: 26rpx;
  color: #e0e0e0;
  line-height: 1.5;
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contact-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.contact-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #ff9f43;
  min-width: 80rpx;
  flex-shrink: 0;
  text-shadow: 0 1rpx 2rpx rgba(255, 159, 67, 0.3);
}

.contact-value {
  font-size: 26rpx;
  color: #feca57;
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: break-word;
  text-shadow: 0 1rpx 2rpx rgba(254, 202, 87, 0.3);
}

.teacher-modal-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

/* Event Information Section in Modal */
.event-info-section {
  margin: 0 32rpx 32rpx 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 71, 87, 0.15);
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.event-info-content {
  margin-top: 20rpx;
}

.event-info-card {
  background: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 71, 87, 0.2);
  border: 1rpx solid rgba(255, 71, 87, 0.2);
}

.info-image-container {
  position: relative;
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}

.info-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}

.info-content {
  padding: 32rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 71, 87, 0.3);
}

.info-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .modal-backdrop {
    padding: 20rpx;
  }
  
  .modal-header,
  .modal-footer {
    padding: 24rpx 32rpx;
  }
  
  .description-section,
  .rules-section,
  .contact-section {
    margin: 0 32rpx 24rpx;
    padding: 24rpx;
  }
  
  .event-preview-card {
    margin: 24rpx 32rpx;
  }
  
  .teacher-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .teacher-btn {
    justify-content: center;
  }
