/* event.wxss */

/* Reset and Base Styles */
.app-container {
  width: 100%;
  min-height: 100vh;
  background: #0a0a0a;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

/* Navigation Header */
.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(24rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
}

.brand-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: -0.5rpx;
}

.nav-badge {
  background: rgba(59, 130, 246, 0.1);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 22rpx;
  color: #3b82f6;
  font-weight: 500;
}

/* Main Container */
.main-container {
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 32rpx 60rpx;
}

/* Featured Section */
.featured-section {
  margin-top: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: -1rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  font-weight: 400;
}

/* Featured Showcase */
.featured-showcase {
  background: linear-gradient(135deg, rgba(30, 30, 30, 0.8), rgba(20, 20, 20, 0.9));
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
}

.showcase-main {
  position: relative;
}

.event-swiper {
  width: 100%;
  height: 600rpx;
}

.event-slide {
  position: relative;
  width: 100%;
  height: 100%;
}

.slide-image-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7));
}

.slide-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.9));
}

.event-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 2rpx;
}

.calendar-icon {
  background: #ef4444;
}

.location-icon {
  background: #3b82f6;
}

.meta-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

.event-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.2;
  margin-bottom: 24rpx;
  display: block;
  letter-spacing: -0.5rpx;
}

.event-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 255, 255, 0.2);
}

.cta-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.3);
}

.cta-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

.cta-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.cta-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ffffff;
  border-right: 2rpx solid #ffffff;
  transform: rotate(45deg);
}

/* Showcase Navigation */
.showcase-nav {
  background: rgba(15, 15, 15, 0.9);
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}

.nav-list {
  display: flex;
  flex-direction: column;
  max-height: 400rpx;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.04);
  transition: all 0.3s ease;
  position: relative;
}

.nav-item:last-child {
  border-bottom: none;
}

.nav-item.active {
  background: rgba(59, 130, 246, 0.08);
  border-left: 4rpx solid #3b82f6;
}

.nav-item:active {
  background: rgba(255, 255, 255, 0.04);
}

.nav-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.item-image {
  width: 100%;
  height: 100%;
}

.nav-item-content {
  flex: 1;
  position: relative;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 6rpx;
  display: block;
}

.item-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.item-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #3b82f6;
  border-radius: 50%;
}

/* Past Events Section */
.past-section {
  margin-top: 80rpx;
}

.past-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.past-card {
  background: rgba(20, 20, 20, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.past-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
}

.past-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.past-image {
  width: 100%;
  height: 100%;
}

.past-status {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: rgba(0, 0, 0, 0.8);
  color: rgba(255, 255, 255, 0.9);
  font-size: 20rpx;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
}

.past-info {
  padding: 20rpx;
}

.past-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.past-university {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
  display: block;
}

.past-participants {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* Empty State */
.empty-past {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
  background: rgba(20, 20, 20, 0.4);
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  border-radius: 16rpx;
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 12rpx;
}

.empty-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.4;
}

/* Modal Styles */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20rpx);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.modal-dialog {
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  background: rgba(15, 15, 15, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(40rpx);
  overflow: hidden;
  box-shadow: 0 24rpx 80rpx rgba(0, 0, 0, 0.6);
}

.modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.06);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  width: 16rpx;
  height: 16rpx;
  position: relative;
}

.close-icon::before,
.close-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.7);
  transform-origin: center;
}

.close-icon::before {
  transform: translate(-50%, -50%) rotate(45deg);
}

.close-icon::after {
  transform: translate(-50%, -50%) rotate(-45deg);
}

.modal-body {
  flex: 1;
  padding: 32rpx 40rpx;
  overflow-y: auto;
}

.event-preview {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 32rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
}

.preview-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}

.preview-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  flex: 1;
}

.description-content {
  line-height: 1.6;
}

.description-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 40rpx 40rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.06);
}

.modal-btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.modal-btn.secondary {
  background: rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-btn.secondary:active {
  background: rgba(255, 255, 255, 0.1);
}

.modal-btn.primary {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: #ffffff;
  box-shadow: 0 8rpx 32rpx rgba(59, 130, 246, 0.3);
}

.modal-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.2);
}

/* Responsive Design */
@media (max-width: 600rpx) {
  .main-container {
    padding: 0 24rpx 60rpx;
  }
  
  .nav-content {
    padding: 20rpx 24rpx;
  }
  
  .section-title {
    font-size: 40rpx;
  }
  
  .event-title {
    font-size: 36rpx;
  }
  
  .past-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .modal-backdrop {
    padding: 24rpx;
  }
  
  .modal-header,
  .modal-body,
  .modal-footer {
    padding-left: 32rpx;
    padding-right: 32rpx;
  }
}

/* Smooth Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-dialog {
  animation: slideIn 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.featured-showcase {
  animation: fadeIn 0.6s ease-out;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 4rpx;
}

::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
}

::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.3);
}

/* Loading States */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  color: rgba(255, 255, 255, 0.6);
}

.loading::after {
  content: '';
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.1);
  border-top: 3rpx solid #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Focus and Accessibility */
.cta-button:focus,
.modal-btn:focus,
.nav-item:focus {
  outline: 2rpx solid #3b82f6;
  outline-offset: 2rpx;
}

/* High contrast support */
@media (prefers-contrast: high) {
  .nav-header {
    border-bottom-color: rgba(255, 255, 255, 0.3);
  }
  
  .featured-showcase,
  .past-card {
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .section-subtitle,
  .meta-text,
  .past-university {
    color: rgba(255, 255, 255, 0.8);
  }
}