/* event.wxss - Dark Mode with Green Theme */

/* Reset and Base Styles */
.app-container {
  width: 100%;
  min-height: calc(100vh - 80rpx - env(safe-area-inset-bottom));
  min-height: calc(100vh - 80rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  background: #0d0d0d;
  color: #e0e0e0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

.event-container {
  width: 100%;
  height: calc(100vh - 240rpx - env(safe-area-inset-bottom)); /* 240rpx (tab bar) + 80rpx (search bar) */
  height: calc(100vh - 240rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  display: flex;
  flex-direction: column;
  position: relative;
  overflow-y: auto;
}

/* Teacher layout - smaller container height (now includes search bar) */
.event-container.teacher-layout {
  height: calc(100vh - 200rpx - env(safe-area-inset-bottom)); /* 120rpx (filter bar) + 80rpx (search bar) */
  height: calc(100vh - 200rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 80rpx - env(safe-area-inset-bottom));
  min-height: calc(100vh - 80rpx - constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  padding-top: 88rpx; 
  padding-bottom: 110rpx;
  background: #0d0d0d;
}

.container {
  flex: 1;
  padding: 20rpx;
  background: transparent;
}

/* Navigation Header with Green Theme */
.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(13, 13, 13, 0.95);
  backdrop-filter: blur(24rpx);
  border-bottom: 2rpx solid transparent;
  border-image: linear-gradient(90deg, #ffffff, #00d763) 1;
  box-shadow: 0 4rpx 20rpx rgba(0, 215, 99, 0.2);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ffffff, #00d763);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(0, 215, 99, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.4);
}

.icon-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.8);
}

.brand-text {
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #ffffff, #00d763);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -0.5rpx;
  filter: drop-shadow(0 2rpx 6rpx rgba(0, 215, 99, 0.4));
}

.nav-badge {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(0, 215, 99, 0.2));
  border: 1rpx solid rgba(0, 215, 99, 0.4);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 215, 99, 0.3);
  backdrop-filter: blur(10rpx);
}

.badge-text {
  font-size: 22rpx;
  color: #00ff6a;
  font-weight: 500;
  text-shadow: 0 1rpx 4rpx rgba(0, 255, 106, 0.6);
}

/* Main Container */
.main-container {
  max-width: 750rpx;
  padding: 0 32rpx 60rpx;
  background: transparent;
}

/* Featured Section with Green Theme */
.featured-section {
  margin-top: 40rpx;
  background: rgba(26, 26, 26, 0.85);
  border-radius: 24rpx;
  padding: 32rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 215, 99, 0.15);
  border: 1rpx solid rgba(0, 215, 99, 0.2);
}

.section-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
  text-align: center;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #ffffff, #00d763);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 215, 99, 0.3));
}

.section-subtitle {
  font-size: 26rpx;
  color: #00b851;
  font-weight: 500;
  text-shadow: 0 1rpx 4rpx rgba(0, 184, 81, 0.4);
}

.featured-showcase {
  background: linear-gradient(135deg, rgba(13, 13, 13, 0.95), rgba(20, 20, 20, 0.95));
  border: 1rpx solid rgba(0, 215, 99, 0.25);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 215, 99, 0.2);
}

.showcase-main {
  position: relative;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.6);
}

.event-swiper {
  width: 100%;
  height: 850rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.event-slide {
  width: 95%;
  max-width: 700rpx;
  height: 830rpx;
  display: flex;
  flex-direction: column;
  background: #1a1a1a;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 215, 99, 0.25);
  margin: 0 auto;
  border: 1rpx solid rgba(0, 215, 99, 0.2);
}

.slide-image-container {
  position: relative;
  width: 100%;
  height: 680rpx;
  overflow: hidden;
  background-color: #000;
}

/* Blurred background image */
.slide-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: blur(40rpx);
  transform: scale(1.1); /* Slightly scale up to avoid blur edge artifacts */
  opacity: 0.6;
  z-index: 1;
}

/* Main image on top */
.slide-image {
  position: relative;
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 2;
}

.slide-content {
  flex: 1;
  padding: 24rpx;
  background: #1a1a1a;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-top: 1rpx solid rgba(0, 215, 99, 0.2);
}

/* Teacher Actions with Green Theme */
.teacher-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.teacher-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 1rpx solid rgba(0, 215, 99, 0.3);
  transition: all 0.3s ease;
  min-width: 140rpx;
}

.teacher-btn.edit-btn {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(0, 215, 99, 0.2));
  color: #00ff6a;
}

.teacher-btn.delete-btn {
  background: linear-gradient(135deg, rgba(215, 0, 0, 0.2), rgba(184, 0, 0, 0.2));
  color: #ff6a6a;
  border: 1rpx solid rgba(215, 0, 0, 0.3);
}

.teacher-btn.join-btn {
  background: linear-gradient(135deg, rgba(0, 215, 99, 0.2), rgba(0, 153, 64, 0.2));
  color: #00ff6a;
}

.teacher-btn:active {
  transform: translateY(1rpx);
  opacity: 0.9;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon image {
  width: 100%;
  height: 100%;
  filter: brightness(0) saturate(100%) invert(73%) sepia(100%) saturate(2000%) hue-rotate(115deg) brightness(118%) contrast(119%);
}

.teacher-btn.delete-btn .btn-icon image {
  filter: brightness(0) saturate(100%) invert(55%) sepia(84%) saturate(6180%) hue-rotate(354deg) brightness(108%) contrast(128%);
}

.btn-text {
  font-size: 24rpx;
}

/* Student CTA Button with Green Theme */
.cta-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ffffff, #00d763);
  border: 1rpx solid rgba(0, 215, 99, 0.5);
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(0, 215, 99, 0.4);
}

.cta-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.3);
  background: linear-gradient(135deg, #ffffff, #00b851);
}

.cta-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.cta-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ffffff;
  border-right: 2rpx solid #ffffff;
  transform: rotate(45deg);
}

/* Showcase Navigation with Green Theme */
.showcase-nav {
  background: linear-gradient(135deg, rgba(20, 20, 20, 0.95), rgba(13, 13, 13, 0.9));
  border-top: 1rpx solid rgba(0, 215, 99, 0.25);
}

.nav-list {
  display: flex;
  flex-direction: column;
  max-height: 400rpx;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 215, 99, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.nav-item:last-child {
  border-bottom: none;
}

.nav-item.active {
  background: rgba(0, 215, 99, 0.15);
  border-left: 4rpx solid #00d763;
}

.nav-item:active {
  background: rgba(0, 215, 99, 0.2);
}

.nav-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  border: 2rpx solid rgba(0, 215, 99, 0.3);
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.nav-item-content {
  flex: 1;
  position: relative;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #e0e0e0;
  margin-bottom: 6rpx;
  display: block;
}

.item-subtitle {
  font-size: 22rpx;
  color: #00b851;
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

.item-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #00d763;
  border-radius: 50%;
  box-shadow: 0 0 16rpx rgba(0, 215, 99, 0.8);
}

/* Past Events Section with Green Theme */
.past-section {
  margin-top: 80rpx;
}

.past-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.past-card {
  background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(13, 13, 13, 0.95));
  border: 1rpx solid rgba(0, 215, 99, 0.2);
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 215, 99, 0.15);
}

.past-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 215, 99, 0.3);
}

.past-image-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 16rpx 16rpx 0 0;
}

.past-image {
  width: 100%;
  height: auto;
  display: block;
  border-radius: 16rpx 16rpx 0 0;
}

.past-status {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, rgba(153, 153, 153, 0.9), rgba(102, 102, 102, 0.9));
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(153, 153, 153, 0.5);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
}

.past-info {
  padding: 20rpx;
}

.past-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #e0e0e0;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.past-university {
  font-size: 22rpx;
  color: #00b851;
  margin-bottom: 12rpx;
  display: block;
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

.past-participants {
  font-size: 20rpx;
  color: #00ff6a;
  text-shadow: 0 1rpx 3rpx rgba(0, 255, 106, 0.5);
}

.past-dates {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.past-date-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.past-organizer {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.past-organizer-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Empty State with Green Theme */
.empty-past {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(13, 13, 13, 0.95));
  border: 1rpx solid rgba(0, 215, 99, 0.2);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 215, 99, 0.15);
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ffffff, #00d763);
  border-radius: 50%;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.5);
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #e0e0e0;
  margin-bottom: 12rpx;
}

.empty-description {
  font-size: 24rpx;
  color: #00b851;
  line-height: 1.4;
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

/* Loading state with Green Theme */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid rgba(0, 215, 99, 0.3);
  border-radius: 50%;
  border-top: 4px solid #00d763;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: #00b851;
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

/* Error state */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 32px;
}

.error-text {
  font-size: 16px;
  color: #ff6a6a;
  text-align: center;
  margin: 16px 0;
  text-shadow: 0 1rpx 3rpx rgba(255, 106, 106, 0.5);
}

.retry-button {
  padding: 12px 24px;
  background: linear-gradient(135deg, #ffffff, #00d763);
  color: white;
  border-radius: 8px;
  font-size: 14px;
  margin-top: 16px;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.4);
}

/* Modal Styles with Green Theme */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(16rpx);
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}

.modal-dialog {
  width: 100%;
  max-width: 650rpx;
  max-height: 85vh;
  background: #1a1a1a;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 215, 99, 0.3);
  display: flex;
  flex-direction: column;
  position: relative;
  border: 1rpx solid rgba(0, 215, 99, 0.25);
}

.modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  max-height: 85vh;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #00d763 100%);
  border-bottom: 1rpx solid rgba(0, 215, 99, 0.3);
  flex-shrink: 0;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.modal-icon {
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.icon-image {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

.header-text {
  display: flex;
  flex-direction: column;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.modal-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.5);
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, 0.3);
  cursor: pointer;
  transition: all 0.2s ease;
}

.close-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  background: #0d0d0d;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  background: #1a1a1a;
  border-top: 1rpx solid rgba(0, 215, 99, 0.2);
  flex-shrink: 0;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.modal-btn.secondary {
  background: linear-gradient(135deg, #2a2a2a, #1a1a1a);
  color: #00b851;
  border: 1rpx solid rgba(0, 184, 81, 0.45);
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

.modal-btn.primary {
  background: linear-gradient(135deg, #ffffff, #00d763);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(0, 215, 99, 0.4);
}

.modal-btn:active {
  transform: translateY(1rpx);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.btn-icon {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) invert(1);
}

/* Event Information Section in Modal */
.event-info-section {
  margin: 0 32rpx 32rpx 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.15);
  border: 1rpx solid rgba(0, 215, 99, 0.2);
}

.event-info-content {
  margin-top: 20rpx;
}

.event-info-card {
  background: #1a1a1a;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 215, 99, 0.2);
  border: 1rpx solid rgba(0, 215, 99, 0.2);
}

.info-image-container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.info-image {
  width: 100%;
  height: auto;
  display: block;
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
}

.info-content {
  padding: 32rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #e0e0e0;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 215, 99, 0.3);
}

.info-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #00ff6a;
  text-shadow: 0 1rpx 3rpx rgba(0, 255, 106, 0.5);
}

.image-icon {
  width: 27rpx;
  height: 27rpx;
  filter: brightness(0) saturate(100%) invert(73%) sepia(100%) saturate(2000%) hue-rotate(115deg) brightness(118%) contrast(119%);
}

/* Description Section */
.description-section,
.rules-section,
.contact-section {
  margin: 0 32rpx 32rpx 32rpx;
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 215, 99, 0.15);
  border: 1rpx solid rgba(0, 215, 99, 0.2);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.section-icon {
  width: 24rpx;
  height: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #00d763, #00b851);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: drop-shadow(0 1rpx 3rpx rgba(0, 215, 99, 0.4));
}

.description-content {
  line-height: 1.6;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.description-html {
  font-size: 26rpx;
  color: #cccccc;
  line-height: 1.8;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rule-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.rule-number {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ffffff, #00d763);
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 215, 99, 0.4);
}

.rule-text {
  font-size: 26rpx;
  color: #cccccc;
  line-height: 1.5;
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: break-word;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contact-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.contact-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #00b851;
  min-width: 80rpx;
  flex-shrink: 0;
  text-shadow: 0 1rpx 3rpx rgba(0, 184, 81, 0.4);
}

.contact-value {
  font-size: 26rpx;
  color: #00ff6a;
  flex: 1;
  word-wrap: break-word;
  overflow-wrap: break-word;
  text-shadow: 0 1rpx 3rpx rgba(0, 255, 106, 0.4);
}

.teacher-modal-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

/* No Events Fallback */
.no-events-fallback {
  text-align: center;
  padding: 100rpx 40rpx;
  background: linear-gradient(135deg, rgba(26, 26, 26, 0.9), rgba(13, 13, 13, 0.95));
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 215, 99, 0.2);
  margin: 20rpx;
}

/* Floating Action Button with Green Theme */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 100;
}

.fab {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ffffff 0%, #00d763 100%);
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 215, 99, 0.5);
  border: 1rpx solid rgba(0, 215, 99, 0.5);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 160rpx;
  justify-content: center;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(0, 215, 99, 0.6);
}

.fab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}

.fab-plus {
  font-size: 32rpx;
  font-weight: 300;
  line-height: 1;
  color: #ffffff;
}

.fab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
}

/* FAB hover effect */
.fab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.fab:active::before {
  opacity: 1;
}

/* Scrollbar Styling for Modal Body */
.modal-body::-webkit-scrollbar {
  width: 8rpx;
}

.modal-body::-webkit-scrollbar-track {
  background: #1a1a1a;
  border-radius: 4rpx;
}

.modal-body::-webkit-scrollbar-thumb {
  background: linear-gradient(to bottom, #ffffff, #00d763);
  border-radius: 4rpx;
}

.modal-body::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(to bottom, #ffffff, #00b851);
}

/* Enhanced visual hierarchy */
.section-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 64rpx;
  right: 0;
  height: 1rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.5), rgba(0, 215, 99, 0.5));
  opacity: 0.9;
}

/* Focus states for accessibility */
.modal-close:focus,
.modal-btn:focus {
  outline: 2rpx solid #00d763;
  outline-offset: 2rpx;
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .modal-backdrop {
    padding: 20rpx;
  }
  
  .modal-header,
  .modal-footer {
    padding: 24rpx 32rpx;
  }
  
  .description-section,
  .rules-section,
  .contact-section {
    margin: 0 32rpx 24rpx;
    padding: 24rpx;
  }
  
  .event-preview-card {
    margin: 24rpx 32rpx;
  }
  
  .teacher-actions {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .teacher-btn {
    justify-content: center;
  }
}