/* event.wxss - Bright, Warm & Passionate Design */

/* Reset and Base Styles */
.app-container {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(135deg, #fff8f0 0%, #ffeee6 50%, #fff5f1 100%);
  color: #2d1810;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
}

.event-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow-y: auto;
  background: linear-gradient(135deg, #fff8f0 0%, #ffeee6 50%, #fff5f1 100%);
}

.page-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding-top: 88rpx; 
  padding-bottom: 110rpx;
  background: linear-gradient(135deg, #fff8f0 0%, #ffeee6 50%, #fff5f1 100%);
}

.container {
  flex: 1;
  padding: 20rpx;
  background: transparent;
}

.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 50%, #ffa8a8 100%);
  backdrop-filter: blur(24rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.2);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  max-width: 750rpx;
  margin: 0 auto;
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.brand-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff4757, #ff3742);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.icon-dot {
  width: 8rpx;
  height: 8rpx;
  background: #ffffff;
  border-radius: 50%;
}

.brand-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: -0.5rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.nav-badge {
  background: linear-gradient(135deg, #ff9f43, #feca57);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.3);
}

.badge-text {
  font-size: 22rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* Main Container */
.main-container {
  max-width: 750rpx;
  padding: 0 32rpx 60rpx;
  background: transparent;
}

/* Featured Section */
.featured-section {
  margin-top: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #2d1810;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: -1rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-subtitle {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 400;
}

/* Featured Showcase */
.featured-showcase {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  border-radius: 24rpx;
  overflow: hidden;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 107, 0.15);
}

.showcase-main {
  position: relative;
}

.event-swiper {
  width: 100%;
  height: 600rpx;
}

.event-swiper-item {
  width: 100%;
  height: 100%;
}

.event-slide {
  width: 100%;
  height: 100%;
  position: relative;
}

.slide-image-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.3), rgba(255, 159, 67, 0.4));
}

.slide-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(transparent, rgba(255, 248, 240, 0.95));
}

.event-info {
  display: flex;
  flex-direction: column;
}

.event-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #2d1810;
  text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.5);
}

.event-meta {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 24rpx;
}

.event-meta-item {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #ff9f43, #feca57);
  border-radius: 30rpx;
  padding: 6rpx 16rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.2);
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.calendar-icon {
  background: #ff6b6b;
  border-radius: 4rpx;
}

.location-icon {
  background: #4ecdc4;
  border-radius: 4rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.event-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff6b6b;
  margin-bottom: 4rpx;
  text-shadow: 0 1rpx 3rpx rgba(255, 107, 107, 0.3);
}

.stat-label {
  font-size: 20rpx;
  color: #8B4513;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.stat-divider {
  width: 1rpx;
  height: 40rpx;
  background: rgba(255, 107, 107, 0.3);
}

.cta-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  padding: 20rpx 32rpx;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
}

.cta-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
  background: linear-gradient(135deg, #ff5252, #ff3838);
}

.cta-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.cta-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ffffff;
  border-right: 2rpx solid #ffffff;
  transform: rotate(45deg);
}

/* Showcase Navigation */
.showcase-nav {
  background: linear-gradient(135deg, rgba(255, 248, 240, 0.95), rgba(255, 238, 230, 0.9));
  border-top: 1rpx solid rgba(255, 107, 107, 0.2);
}

.nav-list {
  display: flex;
  flex-direction: column;
  max-height: 400rpx;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.nav-item:last-child {
  border-bottom: none;
}

.nav-item.active {
  background: rgba(255, 107, 107, 0.1);
  border-left: 4rpx solid #ff6b6b;
}

.nav-item:active {
  background: rgba(255, 159, 67, 0.1);
}

.nav-item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  border: 2rpx solid rgba(255, 107, 107, 0.2);
}

.item-image {
  width: 100%;
  height: 100%;
}

.nav-item-content {
  flex: 1;
  position: relative;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d1810;
  margin-bottom: 6rpx;
  display: block;
}

.item-subtitle {
  font-size: 22rpx;
  color: #8B4513;
}

.item-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background: #ff6b6b;
  border-radius: 50%;
  box-shadow: 0 0 8rpx rgba(255, 107, 107, 0.5);
}

/* Past Events Section */
.past-section {
  margin-top: 80rpx;
}

.past-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.past-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  border-radius: 16rpx;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.past-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(255, 107, 107, 0.25);
}

.past-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.past-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx 16rpx 0 0;
}

.past-status {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: linear-gradient(135deg, #ff9f43, #feca57);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.3);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.past-info {
  padding: 20rpx;
}

.past-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d1810;
  margin-bottom: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.past-university {
  font-size: 22rpx;
  color: #8B4513;
  margin-bottom: 12rpx;
  display: block;
}

.past-participants {
  font-size: 20rpx;
  color: #CD853F;
}

/* Empty State */
.empty-past {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.empty-icon {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  border-radius: 50%;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2d1810;
  margin-bottom: 12rpx;
}

.empty-description {
  font-size: 24rpx;
  color: #8B4513;
  line-height: 1.4;
}

/* Loading state */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 48px;
  height: 48px;
  border: 4px solid rgba(255, 107, 107, 0.2);
  border-radius: 50%;
  border-top: 4px solid #ff6b6b;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 16px;
  color: #8B4513;
}

/* Error state */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 0 32px;
}

.error-text {
  font-size: 16px;
  color: #8B4513;
  text-align: center;
  margin: 16px 0;
}

.retry-button {
  padding: 12px 24px;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  color: white;
  border-radius: 8px;
  font-size: 14px;
  margin-top: 16px;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

/* Modal Styles */
/* Event Rules Modal Styles - Bright, Warm & Passionate Design */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 107, 107, 0.95);
  backdrop-filter: blur(12px);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-dialog {
  width: 100%;
  max-width: 700rpx;
  max-height: 85vh;
  animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(60rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-content {
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(255, 107, 107, 0.3);
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  display: flex;
  flex-direction: column;
  max-height: 85vh;
}

/* Modal Header */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.2);
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
}

.header-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.modal-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.8));
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.2);
}

.icon-image {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.header-text {
  flex: 1;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  display: block;
  margin-bottom: 8rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.2);
}

.modal-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.modal-close {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.modal-close:active {
  background: linear-gradient(135deg, #ff5252, #ff3838);
  transform: scale(0.95);
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) saturate(100%) invert(100%) sepia(0%) saturate(7500%) hue-rotate(0deg) brightness(100%) contrast(100%);
  opacity: 0.9;
}

/* Modal Body */
.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 0;
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
}

/* Event Preview Card */
.event-preview-card {
  position: relative;
  margin: 32rpx 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 32rpx rgba(255, 107, 107, 0.2);
  border: 1rpx solid rgba(255, 107, 107, 0.2);
}

.preview-image-container {
  position: relative;
  height: 320rpx;
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: linear-gradient(transparent, rgba(255, 248, 240, 0.95));
}

.preview-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  color: #2d1810;
}

.preview-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  display: block;
}

.preview-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-row {
  display: flex;
  align-items: center;
}

.meta-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.meta-icon image {
  width: 20rpx;
  height: 20rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.meta-text {
  font-size: 24rpx;
  opacity: 0.9;
  color: #2d1810;
}

/* Section Styles */
.description-section,
.rules-section,
.contact-section {
  margin: 0 40rpx 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 245, 241, 0.95));
  border-radius: 16rpx;
  border-left: 6rpx solid #ff6b6b;
  border: 1rpx solid rgba(255, 107, 107, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.1);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  background: #333333;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.section-icon image {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

/* Description Content */
.description-content {
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #d68c8c;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #cccccc;
}

/* HTML Content Styling for Rich Text */
.description-html {
  font-size: 28rpx;
  line-height: 1.6;
  color: #2d1810;
}

/* Note: rich-text component in WeChat Mini Program automatically styles HTML content.
   Custom styles should be applied through the nodes data structure in JavaScript
   or using inline styles in the HTML content itself. */

.section-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(255, 107, 107, 0.2);
}

.section-icon {
  width: 32rpx;
  height: 32rpx;
  filter: brightness(0) saturate(100%) invert(32%) sepia(98%) saturate(1945%) hue-rotate(346deg) brightness(93%) contrast(94%);
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2d1810;
}

/* Rules List */
.rules-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 159, 67, 0.2);
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.1);
}

.rule-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff4757);
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.rule-text {
  font-size: 26rpx;
  line-height: 1.5;
  color: #2d1810;
  flex: 1;
  padding-top: 4rpx;
}

/* Contact Info */
.contact-info {
  padding: 24rpx;
  background: linear-gradient(135deg, #fff8f0, #ffeee6);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 159, 67, 0.2);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 159, 67, 0.1);
}

.contact-item {
  display: flex;
  align-items: center;
}

.contact-label {
