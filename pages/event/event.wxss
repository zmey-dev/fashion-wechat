/* Scrollbar Styling for Modal Body */
.modal-body::-webkit-scrollbar {
  width: 8rpx;
}

.modal-body::-webkit-scrollbar-track {
  background: #111111;
  border-radius: 4rpx;
}

.modal-body::-webkit-scrollbar-thumb {
  background: linear-gradient(to bottom, #ff4757, #ff9f43);
  border-radius: 4rpx;
}

.modal-body::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(to bottom, #ff6b6b, #feca57);
}

/* Enhanced Animations */
.rule-item {
  transition: all 0.2s ease;
}

.rule-item:hover {
  background: rgba(255, 71, 87, 0.1);
  transform: translateX(4rpx);
}

.contact-item {
  transition: all 0.2s ease;
}

.contact-item:hover {
  background: rgba(255, 159, 67, 0.1);
  border-radius: 8rpx;
  padding: 8rpx 12rpx;
  margin: 0 -12rpx;
}

/* Loading states */
.modal-btn.loading {
  position: relative;
  color: transparent;
}

.modal-btn.loading::after {
  content: '';
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid rgba(255, 71, 87, 0.3);
  border-radius: 50%;
  border-top-color: #ff4757;
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Focus states for accessibility */
.modal-close:focus,
.modal-btn:focus {
  outline: 2rpx solid #ff4757;
  outline-offset: 2rpx;
}

/* Enhanced visual hierarchy */
.section-header {
  position: relative;
  padding-bottom: 16rpx;
}

.section-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 64rpx;
  right: 0;
  height: 1rpx;
  background: linear-gradient(to right, rgba(255, 71, 87, 0.5), transparent);
  opacity: 0.8;
}

/* Floating Action Button Styles */
.fab-container {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  z-index: 1000;
}

.fab {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ff4757 0%, #ff6b6b 100%);
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 71, 87, 0.5);
  border: 1rpx solid rgba(255, 107, 107, 0.4);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  min-width: 160rpx;
  justify-content: center;
}

.fab:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.6);
}

.fab-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}

.fab-plus {
  font-size: 32rpx;
  font-weight: 300;
  line-height: 1;
  color: #ffffff;
}

.fab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
}

/* FAB hover effect for better UX */
.fab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.fab:active::before {
  opacity: 1;
}