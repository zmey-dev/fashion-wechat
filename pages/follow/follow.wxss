/* pages/follow/follow.wxss */

.page-container {
  display: flex;
  flex-direction: column;
  min-height: calc(100vh - 80rpx);
  padding-top: 88rpx;
  padding-bottom: 110rpx;
}

.content-container {
  flex: 1;
  width: 100%;
  overflow-y: auto;
}

/* Teacher layout - smaller container height (now includes search bar) */
.content-container.teacher-layout {
  height: calc(100vh - 200rpx); /* 120rpx (filter bar) + 80rpx (search bar) */
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #121212;
  color: #f0f0f0;
}

/* User List Styles */
.user-list {
  width: 100%;
}

.page-header {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #333;
  background-color: #1e1e1e;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
}

.user-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2px solid #444;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.user-followers {
  font-size: 26rpx;
  color: #aaa;
  margin-top: 6rpx;
}

.user-arrow {
  width:50rpx;
  height:50rpx;
}

/* User Media Styles */
.user-media-container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.media-header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back-button {
  width:50rpx;
  height:50rpx;
}

.back-icon {
  width:100%;
  height:100%;
}

/* Old user profile styles - replaced by new professional styles */

.media-stats {
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
  padding: 16rpx 20rpx;
}

.media-likes,
.media-comments {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #aaa;
}

.media-description {
  font-size: 28rpx;
  color: #ddd;
}

.loading-indicator,
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #777;
  font-size: 28rpx;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #1e1e1e;
  border-radius: 8rpx;
  margin: 20rpx;
  width: 100%;
}

.search-input {
  flex: 1;
  height: 60rpx;
  padding: 0 20rpx;
  border: none;
  border-radius: 8rpx;
  background-color: #2a2a2a;
  color: #fff;
  font-size: 28rpx;
}

.search-input:focus {
  outline: none;
  border-color: #3b82f6;
}

.follow-button {
  padding: 10rpx 20rpx;
  background-color: #3b82f6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: none;
  cursor: pointer;
}

/* Old action button styles - replaced by new professional styles *//* Old button styles - replaced by new professional styles */

/* Professional Profile Header Styles */
.user-profile-header {
  flex: 1;
}

.profile-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.profile-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2px solid #555;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.profile-details {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  min-width: 0;
  gap: 12rpx;
}

.profile-username {
  font-size: 30rpx;
  font-weight: 700;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 0;
  letter-spacing: 0.5rpx;
}

.profile-university {
  font-size: 24rpx;
  color: #b8b8b8;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 1;
  position: relative;
}

.profile-university::before {
  content: "•";
  color: #666;
  margin-right: 8rpx;
}

.profile-faculty {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex-shrink: 1;
  position: relative;
}

.profile-faculty::before {
  content: "•";
  color: #666;
  margin-right: 8rpx;
}

/* Professional Action Buttons */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 15rpx;
  padding: 20rpx 30rpx;
  background-color: #1e1e1e;
  border-bottom: 1px solid #333;
}

.action-btn {
  min-width: 140rpx;
  border-radius: 8rpx;
  height: 60rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  border: none;
}

.btn-text {
  font-size: 24rpx;
}

.action-btn.default {
  background-color: #2d3036;
}

.action-btn.followed {
  background-color: #166534;
}

.action-btn.friend {
  background-color: #166534;
}

.action-btn.pending {
  background-color: #854d0e;
}

/* 3-Column Media Grid */
.media-grid {
  padding: 10rpx;
  overflow-y: auto;
  height: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6rpx;
  box-sizing: border-box;
}

.media-item {
  background-color: #1e1e1e;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
  aspect-ratio: 3/4;
  width: 100%;
}

.media-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.media-overlay {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  background-color: rgba(0, 0, 0, 0.75);
  color: white;
  padding: 3rpx 6rpx;
  border-radius: 3rpx;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(2px);
}

.likes-count {
  font-size: 18rpx;
  color: white;
  font-weight: 500;
}
