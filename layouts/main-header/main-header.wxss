/* User avatar */
.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-small {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

/* Dropdowns */
.dropdown {
  position: absolute;
  top: 70rpx;
  right: 0;
  background-color: #222222;
  border-radius: 16rpx;
  min-width: 200rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.5);
  z-index: 1000;
  overflow: hidden;
}

.user-dropdown {
  min-width: 240rpx;
}

.dropdown-header {
  padding: 20rpx;
  text-align: center;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.dropdown-divider {
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.2);
  margin: 0 10rpx;
}

.dropdown-item {
  padding: 20rpx;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.dropdown-item:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.dropdown-text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #FFFFFF;
}

.dropdown-empty {
  padding: 20rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 26rpx;
}

.notification-content, .message-count, .create-text {
  font-size: 26rpx;
  color: #FFFFFF;
}

/* Login button */
.login-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
  cursor: pointer;
}