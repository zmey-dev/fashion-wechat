/* layouts/main-header/main-header.wxss */
.header {
  display: flex;
  height: 180rpx;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  background-color: #111111;
  position: relative;
  z-index: 100;
}

/* Left side - Logo and hamburger */
.header-left {
  display: flex;
  align-items: center;
}

.hamburger {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 40rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.hamburger-line {
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
  transition: all 0.3s;
}

.hamburger-line-open:nth-child(1) {
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
  transform: rotate(45deg) translate(8rpx, 8rpx);
}

.hamburger-line-open:nth-child(2) {
  opacity: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
}

.hamburger-line-open:nth-child(3) {
  width: 100%;
  height: 4rpx;
  background-color: #FFFFFF;
  transform: rotate(-45deg) translate(8rpx, -8rpx);
}

.logo-container {
  margin-left: 30rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
}

/* Middle - Search */
.search-container {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
  margin: 0 30rpx;
  max-width: 400rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.5);
}

/* Right side - User Actions */
.header-right {
  display: flex;
  align-items: center;
}

.icon-container {
  position: relative;
  margin-left: 40rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #FF0000;
  color: #FFFFFF;
  font-size: 20rpx;
  height: 28rpx;
  min-width: 28rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #111111;
  padding: 0 6rpx;
}

