/* app.wxss */

page {
  --primary-color: #f3cc14;
  --background-color: #111111;
  --secondary-background: #222222;
  --text-color: #ffffff;
  --text-secondary: rgba(255, 255, 255, 0.7);
  --border-color: rgba(255, 255, 255, 0.2);

  background-color: #000000;
  color: #ffffff;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
    Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
  
  /* Ensure full screen coverage */
  height: 100vh;
  width: 100vw;
  overflow-x: hidden;
  
  /* Performance optimizations to reduce flickering */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
  
  /* Add safe area support */
  padding-top: env(safe-area-inset-top);
  padding-top: constant(safe-area-inset-top); /* iOS 11.0 fallback */
  padding-left: env(safe-area-inset-left);
  padding-left: constant(safe-area-inset-left); /* iOS 11.0 fallback */
  padding-right: env(safe-area-inset-right);
  padding-right: constant(safe-area-inset-right); /* iOS 11.0 fallback */
}

/* Container for all pages */
.page-container {
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
  padding-bottom: calc(110rpx + constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
  box-sizing: border-box;
  background-color: #000000;
  min-height: 100vh;
}

/* Common header styles */
.douyin-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #000000;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-tabs {
  display: flex;
  justify-content: center;
  gap: 60rpx;
}

.header-tab {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.7);
  padding: 10rpx 0;
  position: relative;
}

.header-tab.active {
  color: #ffffff;
  font-weight: 600;
}

.header-tab.active::after {
  content: "";
  position: absolute;
  width: 40rpx;
  height: 6rpx;
  background-color: #ffffff;
  border-radius: 3rpx;
  bottom: -4rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* Common search bar */
.search-container {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.search-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Common grid layout */
.posts-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
}

.post-item {
  width: calc(50% - 10rpx);
  margin: 5rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  aspect-ratio: 0.75;
}

.post-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Video indicators */
.video-indicator {
  position: absolute;
  right: 14rpx;
  bottom: 14rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-icon {
  width: 30rpx;
  height: 30rpx;
}

/* Multiple media indicators */
.multiple-indicator {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.multiple-icon {
  width: 22rpx;
  height: 22rpx;
}

/* Post information */
.post-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  padding: 30rpx 12rpx 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.username {
  font-size: 24rpx;
  color: #ffffff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.like-info {
  display: flex;
}

.heart-button {
  display: flex;
  align-items: center;
}

.heart-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}

.like-count {
  font-size: 24rpx;
  color: #ffffff;
}

/* Loading animations */
.loading-container {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 120rpx 20rpx;
  position: fixed !important;
  top: 50% !important;
  left: 50% !important;
  transform: translate(-50%, -50%) !important;
  z-index: 9999;
  width: 100vw !important;
  max-width: 750rpx !important;
  box-sizing: border-box !important;
  text-align: center !important;
}

/* Fullscreen loading overlay for navigation */
.fullscreen-loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.fullscreen-loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* Logo-based loading */
.loading-logo {
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto 40rpx auto !important;
  animation: pulse 2s ease-in-out infinite;
  position: relative;
  z-index: 10000;
  display: block !important;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.1);
  border-top: 6rpx solid #fe2c55;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
}

/* Professional loading bar */
.loading-progress-bar {
  width: 200rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 2rpx;
  overflow: hidden;
  margin: 20rpx auto 0 auto !important;
}

.loading-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007AFF, #5AC8FA);
  border-radius: 2rpx;
  animation: progress-slide 2s ease-in-out infinite;
}

@keyframes progress-slide {
  0% {
    transform: translateX(-100%);
  }
  50% {
    transform: translateX(0%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  width: 100% !important;
  text-align: center !important;
  display: block !important;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

/* Common empty state */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* TikTok style gradient button */
.gradient-btn {
  background: linear-gradient(135deg, #25f4ee 0%, #fe2c55 100%);
  color: white;
  font-weight: bold;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 30rpx;
  border: none;
}

.gradient-btn:active {
  opacity: 0.8;
}

/* Keyframes for animations */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(0.9);
    opacity: 0.7;
  }

  50% {
    transform: scale(1.1);
    opacity: 1;
  }
}

@keyframes loading-bar {
  0% {
    left: -30%;
  }

  100% {
    left: 100%;
  }
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }

  100% {
    background-position: -200% 0;
  }
}
