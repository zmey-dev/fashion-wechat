/* components/media-display/media-display.wxss */

/* Media Container */
.media-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.media-swiper {
  width: 100%;
  height: 100%;
}

.media-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.media-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: rgba(0, 0, 0, 0.1);
}

.media-video {
  width: 100%;
  height: 100%;
}

/* Play Indicator Overlay */
.play-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 250;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.play-indicator.show {
  opacity: 1;
}

.play-icon-container {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.play-icon,
.pause-icon {
  width: 60rpx;
  height: 60rpx;
  color: #fff;
}

.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.svg-icon image {
  width: 100%;
  height: 100%;
}

/* Interactive Dots */
.dots-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 200;
}

.interactive-dot {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  pointer-events: auto;
  transform: translate(-50%, -50%);
  cursor: pointer;
  transition: all 0.3s ease;
}

.interactive-dot:active {
  transform: translate(-50%, -50%) scale(1.1);
}

.dot-pulse {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  animation: pulse 2s infinite;
}

.dot-core {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  background: #ff6b6b;
  border: 4rpx solid #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 20rpx rgba(255, 107, 107, 0.6);
  transition: all 0.3s ease;
}

.interactive-dot.active .dot-core {
  background: #ffd700;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8);
  animation: glow 1s ease-in-out infinite alternate;
  border-color: #ffd700;
}

.interactive-dot.active .dot-pulse {
  background: rgba(255, 215, 0, 0.4);
}

/* Dot animations */
@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

@keyframes glow {
  0% {
    transform: translate(-50%, -50%) scale(1);
    box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8);
  }
  100% {
    transform: translate(-50%, -50%) scale(1.2);
    box-shadow: 0 0 30rpx rgba(255, 215, 0, 1);
  }
}

/* Navigation Arrows */
.nav-arrows {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  pointer-events: none;
  z-index: 150;
}

.nav-arrow {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.nav-arrow:active {
  background: rgba(0, 0, 0, 0.7);
  transform: scale(0.95);
  border-color: rgba(255, 255, 255, 0.3);
}

.nav-left {
  opacity: 0.8;
}

.nav-right {
  opacity: 0.8;
}

.arrow-svg {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
}

/* Responsive adjustments */
@media (max-width: 750rpx) {
  .nav-arrows {
    padding: 0 20rpx;
  }

  .nav-arrow {
    width: 60rpx;
    height: 60rpx;
  }

  .arrow-svg {
    width: 30rpx;
    height: 30rpx;
  }

  .interactive-dot {
    width: 40rpx;
    height: 40rpx;
  }

  .dot-core {
    width: 20rpx;
    height: 20rpx;
  }

  .play-icon-container {
    width: 100rpx;
    height: 100rpx;
  }

  .play-icon,
  .pause-icon {
    width: 50rpx;
    height: 50rpx;
  }
}

/* Additional visual enhancements */
.media-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.02) 50%, transparent 70%);
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.media-wrapper:active::before {
  opacity: 1;
}

/* Dot interaction feedback */
.interactive-dot::before {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transform: scale(0.8);
  transition: all 0.2s ease;
}

.interactive-dot:active::before {
  opacity: 1;
  transform: scale(1);
}

/* Loading state for media */
.media-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* Error state for media */
.media-error {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

.media-error::before {
  content: '⚠️';
  display: block;
  font-size: 48rpx;
  margin-bottom: 20rpx;
}