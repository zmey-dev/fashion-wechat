/* components/post-info-overlay/post-info-overlay.wxss */

/* Post Info Container */
.post-info {
  position: absolute;
  bottom: 0rpx;
  left: 30rpx;
  right: 160rpx;
  z-index: 300;
  animation: slideInFromLeft 0.6s ease-out;
  max-width: calc(100vw - 200rpx);
}

/* Post Title */
.post-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.9);
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.3s ease;
  pointer-events: none;
}

.post-title::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(180deg, #ff6b6b, #ff8e53);
  border-radius: 2rpx;
  opacity: 0;
  transform: scaleY(0);
  transition: all 0.3s ease;
}

.post-title:not(:empty)::before {
  opacity: 1;
  transform: scaleY(1);
}

/* Post Content Container */
.post-content-container {
  cursor: pointer;
  pointer-events: auto;
}

/* Post Content - Base styles */
.post-content, .post-content-expanded {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.9);
  transition: all 0.3s ease;
  display: block;
}

/* Collapsed state */
.post-content.collapsed {
  display: inline-block;
}

/* Expanded scroll container */
.post-content-scroll.expanded {
  max-height: 50vh;
  background: linear-gradient(180deg, 
    rgba(0, 0, 0, 0.7) 0%, 
    rgba(0, 0, 0, 0.85) 50%,
    rgba(0, 0, 0, 0.7) 100%);
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

/* Expanded text content */
.post-content-expanded {
  white-space: pre-wrap;
  word-break: break-word;
  display: block;
}

/* Custom scrollbar for expanded content */
.post-content.expanded::-webkit-scrollbar {
  width: 6rpx;
}

.post-content.expanded::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3rpx;
}

.post-content.expanded::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
}

.post-content.expanded::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* Expand/Collapse Indicator */
.expand-indicator {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: left;
  cursor: pointer;
  pointer-events: auto;
  display: inline-block;
  padding: 4rpx 12rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.expand-indicator:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.7);
}

/* Gradient Fade Effect for Long Text */
.post-title::after,
.post-content::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.post-title.truncated::after,
.post-content.truncated::after {
  opacity: 1;
}

/* Simple text styling for better readability */

/* Typing Animation Effect */
.post-title.typing {
  overflow: visible;
  white-space: nowrap;
  border-right: 2rpx solid #fff;
  animation: typing 2s steps(20, end), blink 1s infinite;
}

.post-content.typing {
  overflow: visible;
  white-space: nowrap;
  animation: typing 3s steps(30, end) 0.5s both;
}

/* Loading Skeleton */
.post-title.loading,
.post-content.loading {
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
  border-radius: 4rpx;
  color: transparent;
  min-height: 40rpx;
}

.post-content.loading {
  min-height: 80rpx;
}

/* Animations */
@keyframes slideInFromLeft {
  from {
    opacity: 0;
    transform: translateX(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes typing {
  from {
    width: 0;
  }
  to {
    width: 100%;
  }
}

@keyframes blink {
  50% {
    border-color: transparent;
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Staggered Animation */
.post-title {
  animation: fadeInUp 0.6s ease-out;
}

.post-content {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}

/* Text Selection */
.post-title,
.post-content {
  user-select: text;
  -webkit-user-select: text;
}

.post-title::selection,
.post-content::selection {
  background: rgba(255, 107, 107, 0.3);
  color: #fff;
}