/* User Posts Tab Container */
.user-posts-tab {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(
    135deg,
    rgba(0, 0, 0, 0.1),
    rgba(20, 20, 20, 0.1)
  );
}

/* User Info Section */
.user-info {
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  background: rgba(0, 0, 0, 0.2);
  position: relative;
  animation: slideInFromTop 0.5s ease-out;
}

.user-info::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
}

/* User Stats */
.user-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 25rpx;
  align-items: center;
  flex-wrap: wrap;
}

.stat-item {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.1),
    transparent
  );
  transition: left 0.5s ease;
}

.stat-item:active::before {
  left: 100%;
}

.stat-item:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 255, 255, 0.2);
  transform: translateY(-2rpx);
  color: #fff;
}

/* Follow Button */
.follow-button {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: 500;
  align-self: flex-start;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid rgba(255, 107, 107, 0.3);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
  position: relative;
  overflow: hidden;
}

.follow-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.2) 50%,
    transparent 70%
  );
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.follow-button:active::before {
  transform: translateX(100%);
}

.follow-button:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 107, 0.4);
}

.follow-button.followed {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.15),
    rgba(255, 255, 255, 0.1)
  );
  border-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.follow-button.followed:active {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.2),
    rgba(255, 255, 255, 0.15)
  );
}

.follow-btn-svg {
  width: 24rpx;
  height: 24rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.follow-button:active .follow-btn-svg {
  transform: rotate(180deg) scale(1.1);
}

/* SVG Icon Base */
.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.svg-icon image {
  width: 100%;
  height: 100%;
}

/* Posts Grid Section */
.posts-grid {
  flex: 1;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.05);
}

.posts-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-auto-rows: 1fr; 
  gap: 8rpx;
}

/* Individual Post Item */
.post-item {
  position: relative;
  
}

.post-item:active {
  transform: scale(0.95);
  border-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.3);
}

/* Post Thumbnail */
.post-thumbnail {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.post-item:active .post-thumbnail {
  transform: scale(1.05);
  filter: brightness(1.1);
}

/* Video Indicator */
.video-indicator {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: videoIndicatorPulse 2s infinite;
}

.video-svg {
  width: 16rpx;
  height: 16rpx;
  color: #fff;
  filter: drop-shadow(0 1rpx 2rpx rgba(0, 0, 0, 0.5));
}

/* Empty Posts State */
.empty-posts {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: rgba(255, 255, 255, 0.5);
  font-size: 28rpx;
  font-style: italic;
  text-align: center;
  padding: 40rpx;
  animation: fadeIn 0.5s ease-out;
}

.empty-posts::before {
  content: "ðŸ“‹";
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
  animation: float 3s ease-in-out infinite;
}

/* Loading Skeleton for Posts */
.post-item.loading {
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0.05),
    rgba(255, 255, 255, 0.1),
    rgba(255, 255, 255, 0.05)
  );
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

.post-item.loading .post-thumbnail {
  opacity: 0;
}

/* Staggered Animation for Posts */
.post-item {
  animation: scaleIn 0.4s ease-out;
  animation-fill-mode: both;
}

.post-item:nth-child(1) {
  animation-delay: 0.1s;
}
.post-item:nth-child(2) {
  animation-delay: 0.15s;
}
.post-item:nth-child(3) {
  animation-delay: 0.2s;
}
.post-item:nth-child(4) {
  animation-delay: 0.25s;
}
.post-item:nth-child(5) {
  animation-delay: 0.3s;
}
.post-item:nth-child(6) {
  animation-delay: 0.35s;
}
.post-item:nth-child(7) {
  animation-delay: 0.4s;
}
.post-item:nth-child(8) {
  animation-delay: 0.45s;
}
.post-item:nth-child(9) {
  animation-delay: 0.5s;
}

/* Hover Effects for Post Items */
.post-item::before {
  content: "";
  display: block;
  padding-bottom: 100%;
}
.post-item::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    135deg,
    rgba(255, 107, 107, 0.2),
    rgba(255, 142, 83, 0.2)
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
}

.post-item:active::after {
  opacity: 1;
}

/* Animations */
@keyframes slideInFromTop {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes videoIndicatorPulse {
  0%,
  100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.1);
  }
}

/* Scrollbar Styling */
.posts-grid::-webkit-scrollbar {
  width: 4rpx;
}

.posts-grid::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2rpx;
}

.posts-grid::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2rpx;
}

.posts-grid::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.5);
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .user-posts-tab {
    display: flex;
    flex-direction: column;
    padding: 0;
  }

  .user-info {
    padding: 25rpx 20rpx;
  }

  .user-stats {
    gap: 25rpx;
    margin-bottom: 20rpx;
  }

  .stat-item {
    font-size: 24rpx;
    padding: 6rpx 12rpx;
  }

  .follow-button {
    padding: 14rpx 28rpx;
    font-size: 26rpx;
    gap: 10rpx;
  }

  .follow-btn-svg {
    width: 22rpx;
    height: 22rpx;
  }

  .posts-grid {
    padding: 15rpx;
    overflow-y: auto;
  }

  .posts-container {
    gap: 6rpx;
  }

  .post-item {
    border-radius: 10rpx;
  }

  .video-indicator {
    width: 28rpx;
    height: 28rpx;
    top: 8rpx;
    right: 8rpx;
  }

  .video-svg {
    width: 14rpx;
    height: 14rpx;
  }

  .empty-posts {
    height: 250rpx;
    font-size: 26rpx;
    padding: 30rpx;
  }

  .empty-posts::before {
    font-size: 60rpx;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .user-info {
    background: rgba(0, 0, 0, 0.8);
    border-bottom-color: rgba(255, 255, 255, 0.5);
  }

  .stat-item {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .post-item {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .follow-button {
    border-color: rgba(255, 107, 107, 0.8);
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .user-posts-tab,
  .user-info,
  .posts-container,
  .post-item,
  .follow-button,
  .stat-item {
    flex-direction: column;
    animation: none;
    transition: none;
  }

  .empty-posts::before {
    animation: none;
  }

  .video-indicator {
    animation: none;
  }
}

/* Focus States for Accessibility */
.follow-button:focus,
.post-item:focus {
  outline: 3rpx solid rgba(255, 255, 255, 0.5);
  outline-offset: 3rpx;
}

/* Performance Optimizations */
.user-posts-tab {
  display: flex;
  flex-direction: column;
  will-change: auto;
  transform: translateZ(0);
}

.post-item {
  will-change: transform;
  contain: layout style paint;
}

.follow-button {
  will-change: transform, background-color;
}

/* Grid Auto-sizing for Different Screen Sizes */
@media (max-width: 600rpx) {
  .posts-container {
    grid-template-columns: repeat(2, 1fr);
    gap: 8rpx;
  }
}

@media (min-width: 1000rpx) {
  .posts-container {
    grid-template-columns: repeat(4, 1fr);
  }
}
