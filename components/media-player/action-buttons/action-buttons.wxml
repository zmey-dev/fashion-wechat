<!-- components/action-buttons/action-buttons.wxml -->
<view class="action-buttons"
>
  <!-- User Avatar with Follow Badge - Hidden only for active events -->
  <view wx:if="{{ !shouldHideUserInfo }}" class="action-item" style="margin-bottom:20rpx" bindtap="onUserProfile">
    <view class="user-avatar">
      <avatar
        avatar="{{ currentPostUser.avatar }}"
        user="{{ currentPostUser }}"
        size="80"
      ></avatar>
      <view
        wx:if="{{ currentPostUser.id !== authUser.id }}"
        class="follow-badge"
        bindtap="handleFollow"
      >
        <view class="svg-icon plus-icon">
          <image
            wx:if="{{ !currentPostUser.is_followed }}"
            src="/images/icons/plus.svg"
            class="svg-icon"
            mode="aspectFit"
          ></image>
          <image
            wx:else
            src="/images/icons/check.svg"
            class="svg-icon"
            mode="aspectFit"
          ></image>
        </view>
      </view>
    </view>
  </view>
  <!-- Like button -->
  <view wx:if="{{ authUser.role !== 'teacher' }}" class="action-item" bindtap="handleLike">
    <view class="action-icon {{ currentPost.likes_exists ? 'liked' : '' }}">
      <view class="svg-icon">
        <image
          wx:if="{{ currentPost.likes_exists }}"
          src="/images/icons/red-heart.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
        <image
          wx:else
          src="/images/icons/heart.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
      </view>
    </view>
    <text class="action-count">{{ displayLikes }}</text>
  </view>

  <!-- Comment button -->
  <view class="action-item" bindtap="onToggleDetail">
    <view class="action-icon">
      <view class="svg-icon">
        <image
          src="/images/icons/message.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
      </view>
    </view>
    <text class="action-count">{{ displayComments }}</text>
  </view>
  <!-- Favorite button - Hidden only for active events -->
  <view wx:if="{{ authUser.role !== 'teacher' && !shouldHideUserInfo }}" class="action-item" bindtap="handleFavorite">
    <view
      class="action-icon {{ currentPost.favorites_exists ? 'favorited' : '' }}"
    >
      <view class="svg-icon">
        <image
          wx:if="{{ currentPost.favorites_exists }}"
          src="/images/icons/red-star.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
        <image
          wx:else
          src="/images/icons/star.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
      </view>
    </view>
    <text class="action-count">{{ displayFavorites }}</text>
  </view>

  <!-- Share button -->
  <view class="action-item" bindtap="handleShare">
    <view class="action-icon">
      <view class="svg-icon">
        <image
          src="/images/icons/share.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
      </view>
    </view>
    <text class="action-count">{{ displayShares }}</text>
  </view>
  <!-- Report button - Hidden only for active events -->
  <view wx:if="{{ !shouldHideUserInfo }}" class="action-item" bindtap="onShowReportModal">
    <view class="action-icon">
      <view class="svg-icon">
        <image
          src="/images/icons/warning.svg"
          class="svg-icon"
          mode="aspectFit"
        ></image>
      </view>
    </view>
  </view>

  <!-- Continue toggle -->
  <view class="action-item continue-toggle-item" bindtap="onContinueToggle">
    <view class="continue-control">
      <view class="toggle-switch {{ isContinue ? 'active' : '' }}">
        <view class="toggle-slider"></view>
      </view>
    </view>
    <text class="action-label">自动播放</text>
  </view>
</view>