/* components/post-navigation/post-navigation.wxss */
.post-navigation {
  position: fixed;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 40rpx;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(20rpx);
  border-radius: 60rpx;
  padding: 20rpx 40rpx;
  z-index: 1000;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.post-navigation.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

.post-navigation.hide {
  opacity: 0;
  transform: translateX(-50%) translateY(20rpx);
  pointer-events: none;
}

.nav-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 40rpx;
  transition: all 0.2s ease;
  cursor: pointer;
  min-width: 100rpx;
}

.nav-button:active {
  transform: scale(0.95);
}

.nav-button.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.nav-button:not(.disabled):hover {
  background: rgba(255, 255, 255, 0.1);
}

.nav-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.nav-button:not(.disabled) .nav-icon {
  background: rgba(255, 107, 107, 0.8);
}

.arrow-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-left {
  transform: translateX(-2rpx);
}

.arrow-right {
  transform: translateX(2rpx);
}

.nav-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.progress-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  min-width: 120rpx;
}

.progress-bar {
  width: 120rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 3rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff6b6b, #ff8e8e);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* Floating Hints */
.floating-hints {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 999;
  transition: opacity 0.3s ease;
}

.floating-hints.show {
  opacity: 1;
}

.floating-hints.hide {
  opacity: 0;
}

.hint {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.hint.disabled {
  opacity: 0.3;
}

.hint-left {
  left: 40rpx;
  animation: fadeInLeft 0.5s ease;
}

.hint-right {
  right: 40rpx;
  animation: fadeInRight 0.5s ease;
}

.hint-icon {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.hint-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

/* Animations */
@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateY(-50%) translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    transform: translateY(-50%) translateX(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
  }
}

/* Responsive adjustments */
@media screen and (max-width: 375px) {
  .post-navigation {
    gap: 30rpx;
    padding: 16rpx 30rpx;
    bottom: 180rpx;
  }
  
  .nav-button {
    min-width: 80rpx;
    padding: 12rpx 16rpx;
  }
  
  .nav-icon {
    width: 40rpx;
    height: 40rpx;
  }
  
  .arrow-icon {
    width: 20rpx;
    height: 20rpx;
  }
  
  .progress-container {
    min-width: 100rpx;
  }
  
  .progress-bar {
    width: 100rpx;
  }
}

/* Dark mode support */
@media (prefers-color-scheme: dark) {
  .post-navigation {
    background: rgba(18, 18, 18, 0.9);
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.5);
  }
}

/* Hidden state when detail panel is open */
.post-navigation.hidden {
  opacity: 0;
  transform: translateX(-50%) translateY(20rpx);
  pointer-events: none;
}

/* Loading state */
.post-navigation.loading {
  pointer-events: none;
}

.post-navigation.loading .nav-button {
  opacity: 0.6;
}

.post-navigation.loading .progress-fill {
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% { opacity: 0.6; }
  50% { opacity: 1; }
  100% { opacity: 0.6; }
}