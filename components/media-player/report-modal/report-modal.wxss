/* components/report-modal/report-modal.wxss */

/* 全局样式重置 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.9) 100%);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 9999;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 弹窗容器 */
.modal-container {
  width: 100%;
  max-height: 85vh;
  background: linear-gradient(180deg, #1A1A1A 0%, #0F0F0F 100%);
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -20rpx 60rpx rgba(0, 0, 0, 0.5);
  border-top: 1rpx solid #333333;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
}

@keyframes slideUp {
  from { transform: translateY(100%); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 头部区域 */
.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #333333;
  position: relative;
}

.modal-header::before {
  content: '';
  position: absolute;
  top: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 8rpx;
  background: #444444;
  border-radius: 4rpx;
}

.header-left, .header-right {
  width: 80rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
}

.close-icon {
  color: #CCCCCC;
  font-size: 32rpx;
  font-weight: 300;
  padding: 16rpx;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.close-icon:active {
  background: #333333;
  color: #FFFFFF;
  transform: scale(0.95);
}

/* 内容区域 */
.modal-body {
  flex: 1;
  box-sizing: border-box;
  padding: 0 32rpx;
  overflow-y: auto;
}

/* 表单区块 */
.form-section {
  margin-bottom: 48rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 1.5;
  display: block;
}

.section-subtitle {
  font-size: 26rpx;
  color: #AAAAAA;
  line-height: 1.4;
  margin-top: 8rpx;
  display: block;
}

/* 举报原因列表 */
.reason-list {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.reason-option {
  background: #222222;
  border: 2rpx solid #444444;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
  overflow: hidden;
}

.reason-option.selected {
  border-color: #FF6B35;
  background: linear-gradient(135deg, #2A1A16 0%, #1F1B1A 100%);
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.2);
}

.reason-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
}

.reason-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reason-icon {
  font-size: 32rpx;
  line-height: 1;
}

.reason-title {
  font-size: 28rpx;
  color: #DDDDDD;
  font-weight: 500;
}

.reason-option.selected .reason-title {
  color: #FF6B35;
  font-weight: 600;
}

.reason-radio {
  transform: scale(1.2);
}

/* 描述输入区域 */
.textarea-container {
  position: relative;
  background: #222222;
  border: 2rpx solid #444444;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.textarea-container:focus-within {
  border-color: #FF6B35;
  box-shadow: 0 0 0 6rpx rgba(255, 107, 53, 0.2);
}

.description-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  line-height: 1.6;
  background: transparent;
  border: none;
  outline: none;
  resize: none;
  box-sizing: border-box;
}

.description-textarea::placeholder {
  color: #777777;
}

.char-count {
  position: absolute;
  bottom: 16rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #888888;
  background: rgba(34, 34, 34, 0.9);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 图片上传区域 */
.upload-container {
  background: #222222;
  border: 2rpx solid #444444;
  border-radius: 16rpx;
  padding: 24rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-wrapper {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background: #333333;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.7) 0%, transparent 30%, transparent 70%, rgba(0, 0, 0, 0.7) 100%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 12rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.image-wrapper:hover .image-overlay,
.image-wrapper:active .image-overlay {
  opacity: 1;
}

.image-action {
  align-self: flex-end;
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  border: 1rpx solid #444444;
}

.action-text {
  color: #FFFFFF;
  font-weight: 500;
}

.upload-button {
  aspect-ratio: 1;
  border: 2rpx dashed #666666;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: #2A2A2A;
  transition: all 0.3s ease;
}

.upload-button:active {
  border-color: #FF6B35;
  background: #1F1511;
  transform: scale(0.98);
}

.upload-icon {
  font-size: 48rpx;
  filter: grayscale(100%);
  opacity: 0.6;
}

.upload-text {
  font-size: 24rpx;
  color: #AAAAAA;
  font-weight: 500;
}

.upload-button:active .upload-icon {
  filter: none;
  opacity: 1;
}

/* 底部区域 */
.modal-footer {
  background: linear-gradient(180deg, rgba(26, 26, 26, 0) 0%, #1A1A1A 20%);
  padding: 24rpx 32rpx 48rpx;
  border-top: 1rpx solid #333333;
}

.footer-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.privacy-notice {
  text-align: center;
  padding: 16rpx;
  background: #1A2332;
  border-radius: 12rpx;
  border-left: 6rpx solid #3B82F6;
}

.notice-text {
  font-size: 24rpx;
  color: #93C5FD;
  line-height: 1.5;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  border: none;
  outline: none;
  position: relative;
  overflow: hidden;
}

.submit-button.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF4500 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  color: #FFFFFF;
}

.submit-button.disabled {
  background: #333333;
  color: #777777;
  cursor: not-allowed;
}

.submit-button.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.submit-button.active:active::before {
  left: 100%;
}

.submit-button.active:active {
  transform: scale(0.98);
}

.submit-text {
  font-size: inherit;
  font-weight: inherit;
  color: inherit;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .image-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .modal-container {
    max-height: 90vh;
  }
  
  .reason-content {
    padding: 24rpx 20rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
  
  .reason-title {
    font-size: 26rpx;
  }
}