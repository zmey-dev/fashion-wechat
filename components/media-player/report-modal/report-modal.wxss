/* components/report-modal/report-modal.wxss */

/* Modal Overlay */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  backdrop-filter: blur(8rpx);
  animation: fadeIn 0.3s ease-out;
  padding: 40rpx;
  box-sizing: border-box;
}

/* Modal Content Container */
.modal-content {
  width: 100%;
  max-width: 600rpx;
  background: linear-gradient(135deg, #1e1e1e, #2a2a2a);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  animation: modalSlideIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
}

.modal-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b, #ff8e53, #ffd93d, #6bcf7f);
  animation: colorFlow 3s infinite linear;
}

/* Modal Header */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  background: rgba(0, 0, 0, 0.2);
  position: relative;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
}

.modal-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  flex: 1;
  display: flex;
  align-items: center;
}

.modal-title::before {
  content: '‚ö†Ô∏è';
  margin-right: 15rpx;
  font-size: 36rpx;
  animation: warningPulse 2s infinite;
}

/* Close Button */
.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5rpx);
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(0.95);
  border-color: rgba(255, 255, 255, 0.2);
}

.close-modal-svg {
  width: 28rpx;
  height: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  transition: color 0.3s ease;
}

.modal-close:active .close-modal-svg {
  color: #fff;
}

/* SVG Icon Base */
.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.svg-icon image {
  width: 100%;
  height: 100%;
}

/* Modal Body */
.modal-body {
  padding: 30rpx;
  background: rgba(0, 0, 0, 0.1);
}

/* Report Options Container */
.report-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

/* Individual Report Option */
.report-option {
  padding: 20rpx 25rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  color: #fff;
  font-size: 28rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
  cursor: pointer;
  display: flex;
  align-items: center;
  min-height: 60rpx;
}

.report-option::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s ease;
}

.report-option:active::before {
  left: 100%;
}

.report-option:active {
  background: rgba(255, 255, 255, 0.1);
  border-color: rgba(255, 107, 107, 0.5);
  transform: translateX(5rpx);
  box-shadow: 0 5rpx 15rpx rgba(255, 107, 107, 0.2);
}

/* Selected State */
.report-option.selected {
  background: rgba(255, 107, 107, 0.2);
  border-color: rgba(255, 107, 107, 0.8);
  color: #fff;
  box-shadow: 0 5rpx 20rpx rgba(255, 107, 107, 0.3);
}

.report-option.selected::after {
  content: '‚úì';
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #4caf50;
  font-size: 32rpx;
  font-weight: bold;
  animation: checkmark 0.5s ease;
}

/* Option Icons */
.report-option[data-option="adult"]::before { content: 'üîû '; }
.report-option[data-option="violence"]::before { content: '‚öîÔ∏è '; }
.report-option[data-option="spam"]::before { content: 'üìß '; }
.report-option[data-option="copyright"]::before { content: '¬©Ô∏è '; }
.report-option[data-option="other"]::before { content: '‚ùì '; }

.report-option::before {
  position: static;
  margin-right: 15rpx;
  font-size: 32rpx;
  filter: grayscale(0.3);
  transition: filter 0.3s ease;
}

.report-option.selected::before {
  filter: grayscale(0);
}

/* Modal Footer */
.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 20rpx 30rpx 30rpx;
  background: rgba(0, 0, 0, 0.2);
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* Footer Buttons */
.cancel-btn,
.confirm-btn {
  padding: 16rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  position: relative;
  overflow: hidden;
  min-width: 120rpx;
  text-align: center;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
  border-color: rgba(255, 255, 255, 0.2);
}

.cancel-btn:active {
  background: rgba(255, 255, 255, 0.15);
  color: #fff;
  transform: scale(0.98);
  border-color: rgba(255, 255, 255, 0.3);
}

.confirm-btn {
  background: linear-gradient(135deg, #ff6b6b, #ff5252);
  color: #fff;
  border-color: rgba(255, 107, 107, 0.5);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.confirm-btn:active {
  background: linear-gradient(135deg, #ff5252, #f44336);
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(255, 107, 107, 0.4);
}

.confirm-btn.disabled {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.1);
  box-shadow: none;
  pointer-events: none;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

@keyframes colorFlow {
  0% {
    background-position: 0% 50%;
  }
  100% {
    background-position: 200% 50%;
  }
}

@keyframes warningPulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

@keyframes checkmark {
  0% {
    transform: translateY(-50%) scale(0) rotate(0deg);
    opacity: 0;
  }
  50% {
    transform: translateY(-50%) scale(1.2) rotate(180deg);
    opacity: 1;
  }
  100% {
    transform: translateY(-50%) scale(1) rotate(360deg);
    opacity: 1;
  }
}

/* Loading State */
.modal-content.loading {
  pointer-events: none;
}

.modal-content.loading::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.modal-content.loading::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: spin 1s linear infinite;
  z-index: 11;
}

@keyframes spin {
  0% {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  100% {
    transform: translate(-50%, -50%) rotate(360deg);
  }
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .modal-overlay {
    padding: 30rpx 20rpx;
  }

  .modal-content {
    max-width: 90vw;
  }

  .modal-header,
  .modal-body {
    padding: 25rpx 20rpx;
  }

  .modal-footer {
    padding: 15rpx 20rpx 25rpx;
    flex-direction: column;
  }

  .cancel-btn,
  .confirm-btn {
    width: 100%;
    margin: 0;
  }

  .modal-title {
    font-size: 30rpx;
  }

  .report-option {
    font-size: 26rpx;
    padding: 18rpx 20rpx;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .modal-overlay {
    background: rgba(0, 0, 0, 0.9);
  }

  .modal-content {
    background: #000;
    border-color: rgba(255, 255, 255, 0.5);
  }

  .report-option {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .report-option.selected {
    background: rgba(255, 107, 107, 0.8);
    border-color: #ff6b6b;
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .modal-overlay,
  .modal-content,
  .report-option,
  .cancel-btn,
  .confirm-btn {
    animation: none;
    transition: none;
  }

  .modal-title::before {
    animation: none;
  }
}

/* Focus States for Accessibility */
.modal-close:focus,
.report-option:focus,
.cancel-btn:focus,
.confirm-btn:focus {
  outline: 3rpx solid rgba(255, 255, 255, 0.5);
  outline-offset: 3rpx;
}

/* Performance Optimizations */
.modal-overlay {
  will-change: opacity;
}

.modal-content {
  will-change: transform;
  transform: translateZ(0);
}

.report-option {
  will-change: transform, background-color;
}