              <text class="empty-text">ÊöÇÊó†ËØÑËÆ∫ÔºåÂø´Êù•Êä¢Ê≤ôÂèëÂêßÔºÅ</text>
            </view>
          </scroll-view>

          <!-- Comment input -->
          <view wx:if="{{authUser && authUser.role === 'user'}}" class="comment-input">
            <!-- Reply indicator -->
            <view wx:if="{{commentId}}" class="reply-indicator">
              <text class="reply-text">{{isUpdate ? 'ÁºñËæëËØÑËÆ∫' : 'ÂõûÂ§çËØÑËÆ∫'}}</text>
              <view class="cancel-reply" bindtap="onCancelReply">
                <text class="cancel-icon">‚úñÔ∏è</text>
              </view>
            </view>

            <!-- Input area -->
