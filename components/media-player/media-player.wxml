              <textarea class="comment-textarea"
                        placeholder="{{commentId ? (isUpdate ? 'ÁºñËæë‰Ω†ÁöÑËØÑËÆ∫...' : 'ÂÜô‰∏ã‰Ω†ÁöÑÂõûÂ§ç...') : 'ËØ¥ÁÇπ‰ªÄ‰πà...'}}"
                        value="{{personalComment}}"
                        bindinput="onCommentInput"
                        maxlength="500"
                        auto-height="{{true}}"
                        cursor-spacing="10" />
              
              <view class="input-actions">
                <button class="submit-btn {{personalComment.trim() ? 'active' : ''}}" 
                        bindtap="onCommentSubmit"
                        disabled="{{!personalComment.trim()}}">
                  <text class="submit-text">{{isUpdate ? 'Êõ¥Êñ∞' : 'ÂèëÈÄÅ'}}</text>
                </button>
              </view>
            </view>
          </view>

          <!-- Login prompt for non-logged users -->
          <view wx:if="{{!authUser}}" class="login-prompt">
            <text class="prompt-text">ÁôªÂΩïÂêéÂèØÂèëË°®ËØÑËÆ∫</text>
            <button class="login-btn" bindtap="onLoginPrompt">
              <text>ÁôªÂΩï</text>
            </button>
          </view>
        </view>

        <!-- Details tab -->
        <view wx:if="{{tabIndex === 2}}" class="details-tab">
          <view class="details-container">
            <!-- Title section -->
            <view class="detail-section">
              <view class="section-header">
                <text class="section-title">Ê†áÈ¢ò</text>
              </view>
              <view class="section-content">
                <text wx:if="{{selectedDot}}" class="detail-text">{{selectedDot.title}}</text>
                <text wx:else class="placeholder-text">Êú™ÈÄâÊã©‰ªª‰ΩïÁÇπ„ÄÇËØ∑ÁÇπÂáªÂõæÁâá‰∏äÁöÑÊ†áËÆ∞Êü•ÁúãËØ¶ÊÉÖ„ÄÇ</text>
              </view>
            </view>

            <!-- Description section -->
