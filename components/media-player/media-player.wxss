}

.control-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.play-pause-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.control-icon {
  font-size: 32rpx;
}

.continue-toggle {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.continue-switch {
  transform: scale(0.9);
}

.continue-text {
  color: #fff;
  font-size: 28rpx;
}

/* Title overlay */
.title-overlay {
  position: absolute;
  left: 40rpx;
  bottom: 180rpx;
