/* components/media-player/media-player.wxss */

.media-player-container {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  overflow: hidden;
  z-index: 999;
}

/* Loading */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.spinner-ring {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top: 6rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Main content - Always full screen */
.main-content {
  width: 100vw;
  height: 100vh;
  position: relative;
}

/* Interactive dots */
.dots-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 10;
}

.interactive-dot {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  pointer-events: all;
  cursor: pointer;
  z-index: 15;
}

.dot-ring-pulse {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  animation: pulse 2s infinite;
}

.dot-ring-rotate {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  animation: rotate 3s linear infinite;
}

.dot-shadow {
  position: absolute;
  inset: 0;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.2);
  filter: blur(4rpx);
  transform: scale(0.9);
}

.dot-main {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #3b82f6;
  border: 4rpx solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
  animation: breathe 2s infinite alternate;
}

.interactive-dot.selected .dot-main {
  background-color: #fbbf24;
  border-color: #fbbf24;
  transform: scale(1.25);
}

.dot-center {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #3b82f6;
  transition: all 0.3s ease;
}

.interactive-dot.selected .dot-center {
  background-color: #fbbf24;
}

.dot-highlight {
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  animation: pulse 2s infinite;
}

.interactive-dot.selected .dot-highlight {
  background-color: rgba(251, 191, 36, 0.5);
}

@keyframes pulse {
  0% { opacity: 0.5; transform: scale(0.8); }
  100% { opacity: 0.2; transform: scale(1.2); }
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes breathe {
  0% { transform: scale(1); }
  100% { transform: scale(1.1); }
}

/* Media swiper */
.media-swiper {
  width: 100vw;
  height: 100vh;
}

.media-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.media-video {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* Media controls */
.media-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  z-index: 20;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.progress-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.progress-indicators {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.progress-dot {
  flex: 1;
  max-width: 100rpx;
  height: 6rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.progress-dot.active {
