}

.title-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 1.3;
}

/* Action buttons */
.action-buttons {
  position: absolute;
  right: 40rpx;
  bottom: 180rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  z-index: 25;
}

.user-action {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.follow-btn {
  position: absolute;
  top: 80rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #ef4444;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.follow-btn.following {
  background-color: #22c55e;
}

.follow-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  cursor: pointer;
  padding: 20rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  min-width: 80rpx;
  min-height: 80rpx;
  justify-content: center;
}

.action-item:active {
  background-color: rgba(0, 0, 0, 0.5);
  transform: scale(0.95);
}

.action-icon {
  font-size: 56rpx;
  transition: all 0.3s ease;
}

.like-icon.liked {
  color: #ef4444;
  animation: heartbeat 0.6s ease;
}

.favorite-icon.favorited {
  color: #fbbf24;
  animation: star-glow 0.6s ease;
}

.action-count {
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
}

@keyframes heartbeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

@keyframes star-glow {
  0% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.2) rotate(180deg); }
  100% { transform: scale(1) rotate(360deg); }
}

/* Right edge swipe indicator */
.right-edge-indicator {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 15;
  pointer-events: none;
}

.swipe-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  opacity: 0.6;
  animation: swipe-hint 2s infinite;
}

.hint-text {
  font-size: 48rpx;
  color: #fff;
  margin-bottom: 10rpx;
}

.hint-label {
  font-size: 20rpx;
  color: #fff;
  writing-mode: vertical-lr;
  text-orientation: mixed;
}

@keyframes swipe-hint {
  0%, 100% { opacity: 0.3; transform: translateX(0); }
  50% { opacity: 0.8; transform: translateX(-10rpx); }
}

/* Detail panel overlay - Full screen overlay */
.detail-panel-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
