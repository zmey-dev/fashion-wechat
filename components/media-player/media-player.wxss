/* components/media-player/media-player.wxss */

.media-player {
  position: relative;
  width: 100%;
  background: #000;
  overflow: hidden;
}

/* SVG Icon Base Styles */
.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.svg-icon svg {
  width: 100%;
  height: 100%;
  fill: currentColor;
}

/* Loading */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Media Container */
.media-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.media-swiper {
  width: 100%;
  height: 100%;
}

.media-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.media-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

.media-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.media-video {
  width: 100%;
  height: 100%;
}

/* Play Indicator Overlay */
.play-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 250;
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.play-indicator.show {
  opacity: 1;
}

.play-icon-container {
  width: 120rpx;
  height: 120rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.play-icon, .pause-icon {
  width: 60rpx;
  height: 60rpx;
  color: #fff;
}

/* Interactive Dots */
.dots-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.interactive-dot {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  pointer-events: auto;
  transform: translate(-50%, -50%);
  z-index: 100;
}

.dot-pulse {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  animation: pulse 2s infinite;
}

.dot-core {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 24rpx;
  height: 24rpx;
  background: #ff6b6b;
  border: 4rpx solid #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 20rpx rgba(255, 107, 107, 0.6);
}

.interactive-dot.active .dot-core {
  background: #ffd700;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.8);
  animation: glow 1s ease-in-out infinite alternate;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(1.5); opacity: 0; }
}

@keyframes glow {
  0% { transform: translate(-50%, -50%) scale(1); }
  100% { transform: translate(-50%, -50%) scale(1.2); }
}

/* Media Controls */
.media-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 30rpx 30rpx;
  z-index: 200;
}

.controls-bottom {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.progress-bars {
  display: flex;
  gap: 8rpx;
  height: 6rpx;
}

.progress-bar {
  flex: 1;
  height: 100%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  transition: background 0.3s ease;
}

.progress-bar.active {
  background: #fff;
}

.control-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.play-control {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.control-svg {
  width: 32rpx;
  height: 32rpx;
  color: #fff;
}

.continue-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.continue-text {
  color: #fff;
  font-size: 28rpx;
}

/* Navigation Arrows */
.nav-arrows {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  pointer-events: none;
  z-index: 150;
}

.nav-arrow {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto;
  backdrop-filter: blur(10rpx);
}

.arrow-svg {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
}

/* Post Information */
.post-info {
  position: absolute;
  bottom: 200rpx;
  left: 30rpx;
  right: 120rpx;
  z-index: 300;
}

.post-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
}

.post-content {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  line-height: 1.4;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
}

/* User Section */
.user-section {
  position: absolute;
  right: 30rpx;
  bottom: 380rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  z-index: 300;
}

.user-avatar {
  position: relative;
  width: 100rpx;
  height: 100rpx;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.follow-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #fff;
}

.plus-icon {
  width: 20rpx;
  height: 20rpx;
  color: #fff;
}

.username {
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
}

/* Action Buttons */
.action-buttons {
  position: absolute;
  right: 30rpx;
  bottom: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
  z-index: 300;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-icon.liked {
  background: rgba(255, 107, 107, 0.2);
}

.action-icon.favorited {
  background: rgba(255, 215, 0, 0.2);
}

.action-icon .svg-icon {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
}

.action-icon.liked .svg-icon {
  color: #ff6b6b;
}

.action-icon.favorited .svg-icon {
  color: #ffd700;
}

.action-count {
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.8);
}

/* Detail Panel */
.detail-panel {
  position: absolute;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.95);
  backdrop-filter: blur(20rpx);
  transition: right 0.3s ease;
  z-index: 500;
  display: flex;
  flex-direction: column;
}

.detail-panel.show {
  right: 0;
}

/* Panel Header */
.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.tab-bar {
  display: flex;
  gap: 40rpx;
}

.tab-item {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
  padding: 10rpx 0;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  border-bottom-color: #ff6b6b;
}

.close-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-svg {
  width: 32rpx;
  height: 32rpx;
  color: #fff;
}

/* Panel Content */
.panel-content {
  flex: 1;
  overflow: hidden;
}

/* User Posts Tab */
.user-posts-tab {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user-info {
  padding: 30rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
}

.user-stats {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.follow-button {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 16rpx 32rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  align-self: flex-start;
}

.follow-button.followed {
  background: rgba(255, 255, 255, 0.2);
}

.follow-btn-svg {
  width: 24rpx;
  height: 24rpx;
  color: #fff;
}

.posts-grid {
  flex: 1;
  padding: 20rpx;
}

.posts-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
}

.post-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 8rpx;
  overflow: hidden;
}

.post-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-indicator {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.video-svg {
  width: 16rpx;
  height: 16rpx;
  color: #fff;
}

/* Comments Tab */
.comments-tab {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.comments-list {
  flex: 1;
  padding: 20rpx;
}

.comment-item {
  margin-bottom: 30rpx;
}

.comment-main {
  display: flex;
  gap: 20rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.comment-username {
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.comment-time {
  color: rgba(255, 255, 255, 0.5);
  font-size: 22rpx;
}

.comment-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.comment-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.comment-actions {
  display: flex;
  gap: 30rpx;
  align-items: center;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.comment-like {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-left: auto;
}

.action-svg-small {
  width: 24rpx;
  height: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Comment Replies */
.comment-replies {
  margin-left: 80rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid rgba(255, 255, 255, 0.1);
}

.reply-item {
  display: flex;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.reply-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.reply-content {
  flex: 1;
}

.reply-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.reply-username {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.reply-time {
  color: rgba(255, 255, 255, 0.5);
  font-size: 20rpx;
}

.reply-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  line-height: 1.4;
}

/* Comment Input */
.comment-input-container {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
}

.reply-indicator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.cancel-reply {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-svg {
  width: 20rpx;
  height: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 15rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  padding: 15rpx 20rpx;
}

.comment-input {
  flex: 1;
  min-height: 40rpx;
  max-height: 150rpx;
  color: #fff;
  font-size: 28rpx;
  background: transparent;
  border: none;
}

.comment-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.input-actions {
  flex-shrink: 0;
}

.send-button {
  width: 50rpx;
  height: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s ease;
}

.send-button.active {
  background: #ff6b6b;
}

.send-svg {
  width: 24rpx;
  height: 24rpx;
  color: #fff;
}

/* Details Tab */
.details-tab {
  padding: 30rpx;
  height: 100%;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 40rpx;
}

.detail-header {
  margin-bottom: 15rpx;
}

.detail-title {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.detail-content {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
  padding: 30rpx;
  min-height: 100rpx;
  display: flex;
  align-items: center;
}

.detail-content text {
  color: #fff;
  font-size: 28rpx;
  line-height: 1.5;
}

.no-selection {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
}

.detail-footer {
  margin-top: 40rpx;
  padding: 20rpx;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 8rpx;
  border-left: 6rpx solid #3b82f6;
}

.detail-meta {
  color: rgba(255, 255, 255, 0.7);
  font-size: 22rpx;
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-modal-svg {
  width: 24rpx;
  height: 24rpx;
  color: #666;
}

.modal-body {
  padding: 30rpx;
}

.report-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-option {
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid #f0f0f0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 30rpx;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.cancel-btn {
  color: #666;
}

.confirm-btn {
  color: #ff6b6b;
  border-left: 2rpx solid #f0f0f0;
}

/* Responsive adjustments */
@media (max-width: 750rpx) {
  .detail-panel {
    width: 100%;
  }
  
  .posts-container {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .action-buttons {
    gap: 30rpx;
  }
  
  .action-icon {
    width: 70rpx;
    height: 70rpx;
  }
  
  .action-icon .svg-icon {
    width: 35rpx;
    height: 35rpx;
  }
}