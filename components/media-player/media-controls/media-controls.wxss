/* components/media-controls/media-controls.wxss */

/* Media Controls Container */
.media-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 30rpx 30rpx;
  z-index: 200;
  backdrop-filter: blur(10rpx);
}

/* Controls Bottom Container */
.controls-bottom {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Progress Bars */
.progress-bars {
  display: flex;
  gap: 8rpx;
  height: 6rpx;
  align-items: center;
  margin-bottom: 10rpx;
}

.progress-bar {
  flex: 1;
  height: 100%;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 3rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.progress-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, #ff6b6b, #ff8e53);
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.progress-bar.active {
  background: rgba(255, 255, 255, 0.5);
  transform: scaleY(1.5);
}

.progress-bar.active::before {
  width: 100%;
  box-shadow: 0 0 10rpx rgba(255, 107, 107, 0.5);
}

.progress-bar:not(.active):hover {
  background: rgba(255, 255, 255, 0.4);
  transform: scaleY(1.2);
}

/* Individual Progress Bar Animation */
.progress-bar {
  animation: fadeInScale 0.3s ease-out;
  animation-fill-mode: both;
}

.progress-bar:nth-child(1) { animation-delay: 0.1s; }
.progress-bar:nth-child(2) { animation-delay: 0.15s; }
.progress-bar:nth-child(3) { animation-delay: 0.2s; }
.progress-bar:nth-child(4) { animation-delay: 0.25s; }
.progress-bar:nth-child(5) { animation-delay: 0.3s; }

/* Control Buttons Container */
.control-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10rpx;
}

/* Play Control Button */
.play-control {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.play-control::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.play-control:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
  border-color: rgba(255, 255, 255, 0.3);
}

.play-control:active::before {
  opacity: 1;
}

/* Control SVG Icons */
.control-svg {
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  transition: all 0.3s ease;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.3));
}

.play-control:active .control-svg {
  transform: scale(1.1);
}

/* SVG Icon Base Styles */
.svg-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.svg-icon image {
  width: 100%;
  height: 100%;
}

/* Continue Control */
.continue-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 25rpx;
  backdrop-filter: blur(5rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.continue-control:active {
  background: rgba(255, 255, 255, 0.15);
  transform: scale(0.98);
  border-color: rgba(255, 255, 255, 0.2);
}

.continue-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
  user-select: none;
}

/* Switch Component Styling */
.continue-control switch {
  transform: scale(0.9);
}

/* Enhanced Visual Effects */
.media-controls {
  background: linear-gradient(
    180deg,
    transparent 0%,
    rgba(0, 0, 0, 0.1) 20%,
    rgba(0, 0, 0, 0.4) 50%,
    rgba(0, 0, 0, 0.8) 100%
  );
}

/* Pulse Animation for Active States */
.play-control.playing {
  animation: playPulse 2s infinite;
}

.progress-bar.active {
  animation: progressGlow 2s infinite alternate;
}

/* Animations */
@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scaleY(0.5);
  }
  to {
    opacity: 1;
    transform: scaleY(1);
  }
}

@keyframes playPulse {
  0%, 100% {
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.3);
  }
  50% {
    box-shadow: 0 0 0 10rpx rgba(255, 255, 255, 0);
  }
}

@keyframes progressGlow {
  0% {
    box-shadow: 0 0 5rpx rgba(255, 107, 107, 0.3);
  }
  100% {
    box-shadow: 0 0 15rpx rgba(255, 107, 107, 0.8);
  }
}

/* Loading State */
.controls-bottom.loading {
  opacity: 0.6;
  pointer-events: none;
}

.controls-bottom.loading .play-control {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* Disabled State */
.play-control.disabled {
  opacity: 0.4;
  pointer-events: none;
  background: rgba(255, 255, 255, 0.1);
}

.progress-bar.disabled {
  opacity: 0.3;
  pointer-events: none;
}

/* Progress Bar Hover Effects */
.progress-bar::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

.progress-bar:active::after {
  width: 20rpx;
  height: 20rpx;
}

/* Touch Feedback Enhancement */
.play-control {
  -webkit-tap-highlight-color: transparent;
}

.progress-bar {
  -webkit-tap-highlight-color: transparent;
}

.continue-control {
  -webkit-tap-highlight-color: transparent;
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .media-controls {
    padding: 30rpx 20rpx 25rpx;
  }

  .controls-bottom {
    gap: 15rpx;
  }

  .progress-bars {
    gap: 6rpx;
    height: 5rpx;
  }

  .play-control {
    width: 50rpx;
    height: 50rpx;
  }

  .control-svg {
    width: 28rpx;
    height: 28rpx;
  }

  .continue-control {
    gap: 15rpx;
    padding: 8rpx 15rpx;
  }

  .continue-text {
    font-size: 26rpx;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .progress-bar {
    background: rgba(255, 255, 255, 0.5);
    border: 1rpx solid rgba(255, 255, 255, 0.8);
  }

  .progress-bar.active {
    background: rgba(255, 255, 255, 0.8);
  }

  .play-control {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .progress-bar,
  .play-control,
  .continue-control {
    transition: none;
    animation: none;
  }

  .play-control.playing {
    animation: none;
  }

  .progress-bar.active {
    animation: none;
  }
}

/* Focus States for Accessibility */
.play-control:focus {
  outline: 3rpx solid rgba(255, 255, 255, 0.5);
  outline-offset: 3rpx;
}

.progress-bar:focus {
  outline: 2rpx solid rgba(255, 255, 255, 0.5);
  outline-offset: 2rpx;
}

/* Dark Theme Enhancements */
.media-controls {
  border-top: 1rpx solid rgba(255, 255, 255, 0.05);
}

/* Performance Optimizations */
.media-controls {
  will-change: opacity;
  transform: translateZ(0);
}

.progress-bar {
  will-change: transform, background-color;
}

.play-control {
  will-change: transform, background-color;
}