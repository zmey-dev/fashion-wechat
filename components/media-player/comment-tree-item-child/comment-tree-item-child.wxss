/* comment-tree-item.wxss - TikTok Style */

/* Comment Tree Item Container */
.comment-tree-item {
  position: relative;
  background-color: transparent;
  margin-bottom: 24rpx;
}

/* Reply Comment Username Style - Smaller font for replies */
.comment-tree-item .username {
  font-size: 26rpx !important;
}

/* TikTok Reply Toggle */
.tiktok-reply-toggle {
  position: relative;
  margin-left: 96rpx; /* Align with comment content */
}

.reply-connection-line {
  position: absolute;
  left: -48rpx;
  top: 50%;
  width: 32rpx;
  height: 2rpx;
  background-color: rgba(255, 255, 255, 0.3);
  transform: translateY(-50%);
}

.tiktok-toggle-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 0;
  cursor: pointer;
  transition: all 0.2s ease;
}

.tiktok-toggle-btn:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.toggle-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
  line-height: 0;
}

.toggle-arrow {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
  opacity: 0.8;
  transition: transform 0.3s ease;
}

.tiktok-toggle-btn:active .toggle-arrow {
  transform: scale(1.1);
}

/* TikTok Replies Container */
.tiktok-replies-container {
  position: relative;
  margin-left: 48rpx; /* TikTok-style shallow indentation */
  margin-top: 8rpx;
}

.replies-connection-line {
  position: absolute;
  left: -24rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: linear-gradient(
    to bottom,
    rgba(255, 255, 255, 0.4),
    rgba(255, 255, 255, 0.2),
    rgba(255, 255, 255, 0.1),
    transparent
  );
}

.replies-list {
  padding-left: 0;
}

/* Animation for expand/collapse */
.tiktok-replies-container {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Responsive Design */
@media screen and (max-width: 750rpx) {
  .tiktok-reply-toggle {
    margin-left: 84rpx;
  }
  
  .tiktok-replies-container {
    margin-left: 40rpx;
  }
  
  .toggle-text {
    font-size: 26rpx;
  }
  
  .toggle-arrow {
    width: 22rpx;
    height: 22rpx;
  }
}

@media screen and (max-width: 600rpx) {
  .tiktok-reply-toggle {
    margin-left: 76rpx;
  }
  
  .tiktok-replies-container {
    margin-left: 36rpx;
  }
  
  .toggle-text {
    font-size: 24rpx;
  }
  
  .toggle-arrow {
    width: 20rpx;
    height: 20rpx;
  }
}

/* Thread Line for Nested Comments - TikTok style thinner line */
.comment-tree-item[data-depth]:not([data-depth="0"])::before {
  content: '';
  position: absolute;
  left: -15rpx;
  top: 0;
  bottom: 0;
  width: 1rpx;
  background: #333;
  border-radius: 1rpx;
}

/* Comment Item Hover State */
.comment-tree-item:hover {
  transform: translateX(2rpx);
}

.comment-tree-item:hover::before {
  background: linear-gradient(180deg, 
    rgba(255, 107, 107, 0.4) 0%, 
    rgba(255, 142, 83, 0.3) 50%, 
    rgba(255, 107, 107, 0.2) 100%
  );
  width: 3rpx;
}

.reply-toggle-container {
  display: flex;
  align-items: center;
  margin: 12rpx 0;
}

.reply-toggle-btn {
  flex-shrink: 0;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 1);
  color: rgba(255, 255, 255, 0.75);
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  border-radius: 6rpx;
  transition: all 0.2s ease;
  cursor: pointer;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  min-height: 40rpx;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  margin-right: 16rpx;
}

.reply-toggle-line {
  position: absolute;
  margin: auto;
  flex-grow: 1;
  width: 100%;
  height: 3rpx;
  background: white;
  opacity: 0.5;
}

/* Toggle Icon */
.toggle-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  transition: transform 0.2s ease;
  opacity: 0.8;
}

.reply-toggle-btn.expanded .toggle-icon {
  transform: rotate(180deg);
  opacity: 1;
}

/* Toggle Text */
.toggle-text {
  font-size: 24rpx;
  font-weight: 500;
  user-select: none;
  letter-spacing: 0.2rpx;
}

/* Replies Container */
.replies-container {
  margin-left: 20rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid rgba(255, 255, 255, 0.15);
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.replies-container::before {
  content: '';
  position: absolute;
  left: -2rpx;
  top: 0;
  width: 2rpx;
  height: 0;
  background: linear-gradient(180deg, #ff6b6b, #ff8e53);
  transition: height 0.4s ease;
}

.replies-container.expanded {
  max-height: 4000rpx;
  opacity: 1;
  padding-top: 16rpx;
  padding-bottom: 8rpx;
}

.replies-container.expanded::before {
  height: 100%;
}

.replies-container.collapsed {
  max-height: 0;
  opacity: 0;
  padding-top: 0;
  padding-bottom: 0;
  margin-bottom: 0;
}

/* Reply Count Badge */
.reply-toggle-btn:hover .toggle-text::after {
  background: rgba(255, 107, 107, 0.25);
  border-color: rgba(255, 107, 107, 0.4);
}

.reply-toggle-btn:active .toggle-text::after {
  background: rgba(255, 107, 107, 0.3);
  transform: scale(1.1);
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* Loading State */
.comment-tree-item.loading {
  opacity: 0.6;
  pointer-events: none;
}

.comment-tree-item.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  right: 20rpx;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-top: 2rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

/* Collapsed State */
.comment-tree-item.collapsed {
  opacity: 0.7;
  transform: scale(0.98);
}

.comment-tree-item.collapsed .reply-toggle-btn {
  background: rgba(255, 255, 255, 0.02);
  color: rgba(255, 255, 255, 0.4);
}

/* New Comment Highlight */
.comment-tree-item.new-comment {
  animation: newCommentHighlight 2s ease-out;
}

.comment-tree-item.new-comment::before {
  background: linear-gradient(180deg, 
    rgba(76, 175, 80, 0.6) 0%, 
    rgba(76, 175, 80, 0.3) 50%, 
    rgba(76, 175, 80, 0.1) 100%
  );
  width: 4rpx;
}

/* Thread Connection Lines */
.replies-container .comment-tree-item::after {
  content: '';
  position: absolute;
  left: -22rpx;
  top: 30rpx;
  width: 20rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 1rpx;
}

.replies-container .comment-tree-item:last-child::after {
  background: linear-gradient(90deg, 
    rgba(255, 255, 255, 0.15) 0%, 
    transparent 100%
  );
}

/* Enhanced Visual Hierarchy */
.comment-tree-item[data-depth="0"] {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 8rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}

.comment-tree-item[data-depth="1"] {
  background: rgba(255, 255, 255, 0.01);
  border-radius: 6rpx;
  padding: 6rpx;
}

.comment-tree-item[data-depth="2"] {
  background: transparent;
  padding: 4rpx;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    height: 0;
  }
  to {
    opacity: 1;
    height: auto;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes newCommentHighlight {
  0% {
    background: rgba(76, 175, 80, 0.3);
    transform: translateX(0);
  }
  25% {
    background: rgba(76, 175, 80, 0.2);
    transform: translateX(5rpx);
  }
  50% {
    background: rgba(76, 175, 80, 0.1);
    transform: translateX(0);
  }
  75% {
    background: rgba(76, 175, 80, 0.05);
    transform: translateX(2rpx);
  }
  100% {
    background: transparent;
    transform: translateX(0);
  }
}

@keyframes slideDown {
  from {
    max-height: 0;
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    max-height: 1000rpx;
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideUp {
  from {
    max-height: 1000rpx;
    opacity: 1;
    transform: translateY(0);
  }
  to {
    max-height: 0;
    opacity: 0;
    transform: translateY(-10rpx);
  }
}

/* Staggered Animation for Multiple Replies */
.replies-container.expanded .comment-tree-item {
  animation: slideDown 0.3s ease-out;
  animation-fill-mode: both;
}

.replies-container.expanded .comment-tree-item:nth-child(1) { animation-delay: 0.05s; }
.replies-container.expanded .comment-tree-item:nth-child(2) { animation-delay: 0.1s; }
.replies-container.expanded .comment-tree-item:nth-child(3) { animation-delay: 0.15s; }
.replies-container.expanded .comment-tree-item:nth-child(4) { animation-delay: 0.2s; }
.replies-container.expanded .comment-tree-item:nth-child(5) { animation-delay: 0.25s; }

/* Responsive Design */
@media (max-width: 750rpx) {
  .comment-tree-item[data-depth="1"] {
    margin-left: 30rpx;
  }

  .comment-tree-item[data-depth="2"] {
    margin-left: 60rpx;
  }

  .comment-tree-item[data-depth="3"] {
    margin-left: 90rpx;
  }

  .comment-tree-item[data-depth="4"] {
    margin-left: 120rpx;
  }

  .reply-toggle-container {
    margin-left: 60rpx;
  }

  .reply-toggle-btn {
    padding: 5rpx 12rpx;
    font-size: 22rpx;
  }
  
  .toggle-icon {
    width: 22rpx;
    height: 22rpx;
    margin-right: 8rpx;
  }
}

/* High Contrast Mode */
@media (prefers-contrast: high) {
  .comment-tree-item::before {
    background: rgba(255, 255, 255, 0.5);
  }

  .reply-toggle-btn {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.3);
  }

  .replies-container {
    border-left-color: rgba(255, 255, 255, 0.4);
  }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
  .comment-tree-item,
  .reply-toggle-btn,
  .toggle-icon,
  .replies-container {
    animation: none;
    transition: none;
  }

  .replies-container.expanded .comment-tree-item {
    animation: none;
  }
}

/* Focus States for Accessibility */
.reply-toggle-btn:focus {
  outline: none;
  box-shadow: 0 0 0 2rpx rgba(255, 255, 255, 0.3);
}

/* Performance Optimizations */
.comment-tree-item {
  will-change: transform;
  contain: layout style;
}

.replies-container {
  will-change: max-height, opacity;
}

.toggle-icon {
  will-change: transform;
}

/* Maximum Depth Limitation */
.comment-tree-item[data-depth="5"],
.comment-tree-item[data-depth="6"],
.comment-tree-item[data-depth="7"],
.comment-tree-item[data-depth="8"],
.comment-tree-item[data-depth="9"] {
  margin-left: 200rpx;
  opacity: 0.8;
  font-size: 26rpx;
}

/* Deep nesting visual indication */
.comment-tree-item[data-depth]:not([data-depth="0"]):not([data-depth="1"]):not([data-depth="2"])::before {
  background: linear-gradient(180deg, 
    rgba(255, 193, 7, 0.3) 0%, 
    rgba(255, 193, 7, 0.2) 50%, 
    rgba(255, 193, 7, 0.1) 100%
  );
}