/* comment-item.wxss */
.comment-container {
  width: 100%;
  padding: 0;
}
.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}
.user-link {
  display: flex;
  align-items: center;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}
.user-link-hover {
  background-color: rgba(255, 255, 255, 0.1);
}
.avatar-container {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
}
.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.username-container {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  flex: 1;
}

.company-icon {
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.username {
  font-weight: 600;
  color: #bcd2f8;
  font-size: 30rpx;
  transition: color 0.2s ease;
  flex: 1;
  line-height: 1.3;
  word-break: break-word;
  overflow-wrap: break-word;
}
.timestamp {
  font-size: 22rpx;
  color: #888;
  margin-left: auto;
} /* Comment Content */
.comment-content {
  padding-left: 60rpx;
}
.comment-image-container {
  margin-bottom: 12rpx;
}
.comment-image {
  max-width: 400rpx;
  max-height: 300rpx;
  border-radius: 12rpx;
  background-color: #2a2a2a;
}
.comment-text {
  font-size: 28rpx;
  color: #fff;
  line-height: 1.5;
  margin-bottom: 12rpx;
  word-wrap: break-word;
}
.media-image {
  max-width: 300rpx;
  max-height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
} /* Action Buttons */
.action-buttons {
  margin-top: 8rpx;
}
.button-group {
  display: flex;
  align-items: center;
  gap: 24rpx;
}
.action-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 12rpx;
  border-radius: 20rpx;
  background: none;
  border: none;
  transition: all 0.2s ease;
  font-size: 24rpx;
  color: #888;
}
.action-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
  transform: scale(0.95);
}
.action-btn.active {
  color: #00d4ff;
}
.action-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
  filter: invert(0.5);
}
.action-btn.active .action-icon {
  filter: invert(0.8) sepia(1) saturate(3) hue-rotate(180deg);
}
.action-text {
  font-size: 24rpx;
  font-weight: 500;
}
.like-btn.active,
.unlike-btn.active {
  color: #00d4ff;
}
.edit-btn:active {
  color: #fbbf24;
}
.delete-btn:active {
  color: #ff4757;
}
.reply-btn:active {
  color: #00d4ff;
} /* Divider */
.divider {
  height: 1rpx;
  background-color: #333;
  margin-top: 16rpx;
  margin-left: 60rpx;
}
