/* comment-item.wxss */
.comment-container {
  width: 100%;
  margin-bottom: 32rpx;
}

.comment-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-link {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.user-link-hover {
  background-color: rgba(55, 65, 81, 0.2);
}

.avatar-container {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.username {
  font-weight: 500;
  color: #e5e7eb;
  font-size: 28rpx;
  transition: color 0.2s ease;
}

.timestamp {
  font-size: 24rpx;
  color: #9ca3af;
}

.comment-content {
  padding-left: 80rpx;
  padding-bottom: 24rpx;
}

.comment-image-container {
  margin-bottom: 16rpx;
  max-width: 600rpx;
  overflow: hidden;
  border-radius: 16rpx;
}

.comment-image {
  width: 100%;
  max-height: 384rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease;
}

.comment-image:active {
  transform: scale(1.05);
}

.comment-text {
  font-size: 28rpx;
  color: #e5e7eb;
  margin-bottom: 24rpx;
  line-height: 1.6;
  word-wrap: break-word;
  white-space: pre-wrap;
}

.media-image {
  width: 50%;
  margin: 24rpx auto;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: box-shadow 0.3s ease;
}

.media-image:active {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.25);
}

.action-buttons {
  display: flex;
  justify-content: space-between;
}

.button-group {
  display: flex;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:last-child {
  margin-right: 0;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* Like Button Styles */
.like-btn {
  color: #9ca3af;
}

.like-btn:active {
  color: #60a5fa;
}

.like-btn.active .action-text {
  color: #60a5fa;
}

.like-btn.active .action-icon {
  filter: brightness(0) saturate(100%) invert(68%) sepia(96%) saturate(1919%) hue-rotate(198deg) brightness(103%) contrast(97%);
}

/* Unlike Button Styles */
.unlike-btn {
  color: #9ca3af;
}

.unlike-btn:active {
  color: #f87171;
}

.unlike-btn.active .action-text {
  color: #f87171;
}

.unlike-btn.active .action-icon {
  filter: brightness(0) saturate(100%) invert(64%) sepia(98%) saturate(1933%) hue-rotate(315deg) brightness(103%) contrast(94%);
}

/* Edit Button Styles */
.edit-btn:active .action-text {
  color: #fbbf24;
}

.edit-btn:active .action-icon {
  filter: brightness(0) saturate(100%) invert(77%) sepia(86%) saturate(1919%) hue-rotate(13deg) brightness(96%) contrast(94%);
}

/* Reply Button Styles */
.reply-btn:active .action-text {
  color: #34d399;
}

.reply-btn:active .action-icon {
  filter: brightness(0) saturate(100%) invert(73%) sepia(44%) saturate(1919%) hue-rotate(121deg) brightness(96%) contrast(94%);
}

/* Delete Button Styles */
.delete-btn:active .action-text {
  color: #ef4444;
}

.delete-btn:active .action-icon {
  filter: brightness(0) saturate(100%) invert(29%) sepia(98%) saturate(1919%) hue-rotate(344deg) brightness(96%) contrast(94%);
}

.divider {
  width: 100%;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.1);
  margin-top: 32rpx;
}