/* comment-tree.wxss */
.comment-tree-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #1a1a1a;
  position: relative;
}

/* Comments List */
.comments-list {
  flex: 1;
  box-sizing: border-box;
  overflow-y: auto;
  padding: 16rpx 20rpx 120rpx 20rpx;
  background-color: #1a1a1a;
}

.no-comments {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.no-comments-text {
  color: #888;
  font-size: 28rpx;
  font-style: italic;
}

.comments-container {
  padding-bottom: 20rpx;
}

/* Comment Input Section - Fixed at bottom */
.comment-input-section {
  position: absolute;
  display: flex;
  flex-direction: column;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #1a1a1a;
  border-top: 1rpx solid #333;
  padding: 3rpx;
  z-index: 10;
  padding-bottom: calc(16rpx);
}

.reply-header {
  position: relative;
  background-color: #2a2a2a;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 12rpx;
  border-left: 4rpx solid #00d4ff;
}

.reply-close-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  background: none;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  filter: invert(1);
}

.reply-info {
  display: flex;
  align-items: center;
  padding-right: 40rpx;
}

.reply-avatar-container {
  margin-right: 12rpx;
}

.reply-avatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.reply-username {
  font-size: 26rpx;
  color: #00d4ff;
  font-weight: 600;
  margin-right: 8rpx;
}

.reply-preview {
  font-size: 26rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 300rpx;
}

.reply-image-preview {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
  margin-left: 8rpx;
}

/* Comment Input Container */
.comment-input-container {
  display: flex;
  align-items: flex-end;
  background-color: #2a2a2a;
  border-radius: 24rpx;
  padding: 8rpx 12rpx;
  min-height: 72rpx;
}

.comment-textarea {
  flex: 1;
  max-height: 200rpx;
  padding: 16rpx;
  background-color: transparent;
  color: #fff;
  font-size: 28rpx;
  border: none;
  line-height: 1.4;
}

.comment-textarea.has-reply {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.comment-textarea::placeholder {
  color: #888;
  font-size: 26rpx;
}

.input-actions {
  width: 160rpx;
  display: flex;
  align-items: center;
  margin-left: 8rpx;
  padding-bottom: 10rpx;
  padding-right: 10rpx;
}

.input-action-btn {
  background: none;
  border: none;
  padding: 2rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 28rpx;
  transition: background-color 0.2s;
}

.input-action-btn:active {
  background-color: rgba(255, 255, 255, 0.1);
}

.input-action-btn.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

.send-btn {
  background-color: #00d4ff;
  border-radius: 28rpx;
}

.send-btn .action-icon {
  filter: none;
}

/* Emoji Picker */
.emoji-picker {
  padding: 16rpx;
  background-color: #2a2a2a;
  border-radius: 16rpx;
  margin-top: 12rpx;
  max-height: 240rpx;
  overflow-y: auto;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: space-around;
}

.emoji-item {
  font-size: 48rpx;
  padding: 8rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.emoji-item:active {
  background-color: rgba(255, 255, 255, 0.1);
  transform: scale(1.2);
}

/* Loading State */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
}

/* Comment Tree Item Styles */
.comment-tree-item {
  margin-bottom: 24rpx;
}

.reply-toggle-container {
  margin-left: 80rpx;
  margin-bottom: 16rpx;
}

.reply-toggle-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  color: #888;
  font-size: 24rpx;
  padding: 8rpx 0;
  transition: color 0.2s ease;
}

.reply-toggle-btn:active {
  color: #fff;
}

.toggle-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  filter: invert(0.5);
}

.toggle-text {
  font-size: 24rpx;
}

.replies-container {
  margin-left: 40rpx;
  padding-left: 24rpx;
  border-left: 2rpx solid #333;
  transition: all 0.3s ease;
  overflow: hidden;
}

.replies-container.expanded {
  max-height: 4000rpx;
  opacity: 1;
}

.replies-container.collapsed {
  max-height: 0;
  opacity: 0;
}
