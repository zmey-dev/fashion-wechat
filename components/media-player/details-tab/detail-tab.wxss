/* components/details-tab/details-tab.wxss */

/* Details Tab Container */
.details-tab {
  padding: 40rpx;
  height: 100%;
  overflow-y: auto;
  background: linear-gradient(135deg, rgba(20, 20, 20, 0.9), rgba(30, 30, 30, 0.95));
  box-shadow: inset 0 0 30rpx rgba(0, 0, 0, 0.2);
  border-left: 1rpx solid rgba(255, 255, 255, 0.1);
}

/* Detail Section */
.detail-section {
  margin-bottom: 60rpx;
  padding: 0;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
}

.detail-section::after {
  content: '';
  position: absolute;
  bottom: -30rpx;
  left: 15%;
  width: 70%;
  height: 1rpx;
  background: linear-gradient(90deg, 
    rgba(255, 255, 255, 0.01), 
    rgba(255, 255, 255, 0.1), 
    rgba(255, 255, 255, 0.01));
}

.detail-section:last-child::after {
  display: none;
}

.detail-section:last-child {
  margin-bottom: 30rpx;
}

/* Detail Header */
.detail-header {
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  padding-left: 16rpx;
}

.detail-title {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  text-transform: uppercase;
  position: relative;
  display: inline-block;
  padding: 0 10rpx;
}

.detail-title::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background: linear-gradient(to bottom, #3498db, #2980b9);
  border-radius: 3rpx;
}

.detail-title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #3498db, #2980b9);
  border-radius: 2rpx;
}

/* Detail Content */
.detail-content {
  padding: 28rpx 30rpx;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  position: relative;
  min-height: 90rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin: 0 4rpx;
}

.detail-content:hover {
  background: rgba(255, 255, 255, 0.06);
  border-color: rgba(255, 255, 255, 0.12);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
}

.detail-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 4rpx;
  height: 100%;
  border-radius: 4rpx 0 0 4rpx;
}

.detail-content::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1rpx;
  height: 100%;
  background: linear-gradient(to bottom, 
    rgba(255, 255, 255, 0.08), 
    rgba(255, 255, 255, 0.02), 
    rgba(255, 255, 255, 0.08));
  border-radius: 0 4rpx 4rpx 0;
}

.content-text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  line-height: 1.6;
  word-wrap: break-word;
  flex: 1;
  margin: 0;
  font-weight: 400;
  padding: 8rpx 6rpx;
}

/* Content Type Indicators */
.detail-content[data-type="title"]::before {
  background: linear-gradient(180deg, #3498db, #2980b9);
}

.detail-content[data-type="description"]::before {
  background: linear-gradient(180deg, #2ecc71, #27ae60);
}

/* No Selection State */
.no-selection {
  color: rgba(255, 255, 255, 0.5);
  font-style: italic;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 120rpx;
  background: rgba(255, 255, 255, 0.02);
  border-radius: 8rpx;
  transition: all 0.3s ease;
  padding: 24rpx;
  border: 1rpx dashed rgba(255, 255, 255, 0.08);
  margin: 6rpx;
}

.selection-icon {
  margin-bottom: 20rpx;
  opacity: 0.7;
}

/* Detail Footer */
.detail-footer {
  margin-top: 70rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 14rpx;
}

.detail-footer::before {
  content: '';
  position: absolute;
  top: -1rpx;
  left: 10%;
  width: 80%;
  height: 1rpx;
  background: linear-gradient(90deg, 
    rgba(255, 255, 255, 0), 
    rgba(255, 255, 255, 0.15), 
    rgba(255, 255, 255, 0));
}

.detail-meta {
  color: rgba(255, 255, 255, 0.4);
  font-size: 24rpx;
  text-align: center;
  font-family: 'Courier New', monospace;
  background: rgba(255, 255, 255, 0.03);
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  display: inline-block;
  letter-spacing: 0.5rpx;
  border-left: 1rpx solid rgba(255, 255, 255, 0.1);
  border-right: 1rpx solid rgba(255, 255, 255, 0.1);
}

.detail-timestamp {
  color: rgba(255, 255, 255, 0.35);
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  position: relative;
}

.detail-timestamp::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.1);
}

/* Enhanced Visual Effects */
.detail-section {
  animation: fadeInUp 0.4s ease-out;
  animation-fill-mode: both;
}

.detail-section:nth-child(1) {
  animation-delay: 0.1s;
}

.detail-section:nth-child(2) {
  animation-delay: 0.2s;
}

/* Animation Keyframes */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Scrollbar Styling */
.details-tab::-webkit-scrollbar {
  width: 6rpx;
}

.details-tab::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 3rpx;
}

.details-tab::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 3rpx;
}

.details-tab::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.25);
}

/* Responsive Design */
@media (max-width: 750rpx) {
  .details-tab {
    padding: 30rpx 25rpx;
  }

  .detail-section {
    margin-bottom: 50rpx;
  }

  .detail-content {
    padding: 24rpx 28rpx;
  }
  
  .detail-section::after {
    left: 10%;
    width: 80%;
  }
}