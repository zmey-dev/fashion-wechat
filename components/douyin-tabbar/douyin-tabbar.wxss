.douyin-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #000000;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 1000;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}

/* Add container for icon and badge positioning */
.tab-icon-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
  opacity: 0.8;
}

.tab-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.tab-item.active .tab-icon {
  opacity: 1;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

/* Special upload button */
.tab-item.special {
  transform: translateY(-15rpx);
}

.upload-btn {
  width: 80rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #25f4ee 0%, #fe2c55 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-btn::before {
  content: "";
  position: absolute;
  top: -6rpx;
  bottom: -6rpx;
  left: -6rpx;
  right: -6rpx;
  background: linear-gradient(135deg, #25f4ee 0%, #fe2c55 50%, #25f4ee 100%);
  border-radius: 16rpx;
  z-index: -1;
  opacity: 0.5;
}

/* Unread message badge styles */
.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -12rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #000000;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
  z-index: 10;
  animation: badge-pulse 2s infinite;
}

.unread-count {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 700;
  line-height: 1;
  padding: 0 6rpx;
  white-space: nowrap;
}

/* Badge animation */
@keyframes badge-pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
  }
  50% {
    transform: scale(1.1);
    box-shadow: 0 4rpx 12rpx rgba(255, 71, 87, 0.6);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
  }
}

.tab-item:active {
  opacity: 0.7;
}

/* Responsive adjustments for smaller screens */
@media screen and (max-width: 600rpx) {
  .unread-badge {
    min-width: 28rpx;
    height: 28rpx;
    top: -6rpx;
    right: -10rpx;
  }
  
  .unread-count {
    font-size: 16rpx;
    padding: 0 4rpx;
  }
}