.douyin-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background-color: #000000;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 1000;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}

.tab-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 6rpx;
  opacity: 0.8;
}

.tab-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

.tab-item.active .tab-icon {
  opacity: 1;
}

.tab-item.active .tab-text {
  color: #ffffff;
}

/* Special upload button */
.tab-item.special {
  transform: translateY(-15rpx);
}

.upload-btn {
  width: 80rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #25f4ee 0%, #fe2c55 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.upload-btn::before {
  content: "";
  position: absolute;
  top: -6rpx;
  bottom: -6rpx;
  left: -6rpx;
  right: -6rpx;
  background: linear-gradient(135deg, #25f4ee 0%, #fe2c55 50%, #25f4ee 100%);
  border-radius: 16rpx;
  z-index: -1;
  opacity: 0.5;
}

.tab-item:active {
  opacity: 0.7;
}