/* components/search-bar/search-bar.wxss */
.search-container {
  padding: 0 20rpx;
  margin: 0 auto;
  max-width: 600rpx;
  width: 100%;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
}

.search-icon {
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  color: #FFFFFF;
  font-size: 28rpx;
}

.search-placeholder {
  color: rgba(255, 255, 255, 0.5);
}

