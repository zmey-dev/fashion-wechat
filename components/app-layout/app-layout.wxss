/* app-layout.wxss */
.app-layout {
  flex-direction: column;
  height: 100vh;
  background-color: #000;
  /* Ensure black background extends to edges */
  width: 100vw;
  overflow: hidden;
  /* Performance optimizations */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

/* Filter Bar Styles */
.app-layout-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #000;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #333;
  display: flex;
  align-items: center;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s ease;
}

/* Header hidden state */
.app-layout-header.header-hidden {
  transform: translateX(-100%);
  opacity: 0;
}

/* Company Tab - subtle green accent */
.company-tab {
  border: 1rpx solid rgba(34, 197, 94, 0.3);
}

.company-tab:hover {
  background-color: rgba(34, 197, 94, 0.1);
}

.company-tab:active {
  background-color: rgba(34, 197, 94, 0.2);
}

/* Search Icon Button */
.search-icon-button {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.search-icon-button:active {
  transform: translateY(-50%) scale(0.9);
  opacity: 0.7;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) saturate(100%) invert(84%) sepia(44%) saturate(379%) hue-rotate(350deg) brightness(101%) contrast(95%);
}

.filter-scroll {
  height: 80rpx;
  white-space: nowrap;
  width: calc(100% - 80rpx); /* Leave space for search icon */
}

/* Animated Search Bar Wrapper */
.search-bar-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1001;
  background-color: #000;
  transform: translateX(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-bottom: 1rpx solid #333;
}

.search-bar-wrapper.search-visible {
  transform: translateX(0);
}

.search-bar-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  height: 80rpx;
  box-sizing: content-box; /* Total height will be 120rpx with padding */
}

/* Back Button */
.search-back-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.search-back-button:active {
  opacity: 0.7;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.filter-tabs {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 30rpx;
  height: 100%;
  overflow-x: auto;
}

.filter-tabs.expanded-mode {
  justify-content: space-between;
}

.filter-tabs.compact-mode {
  justify-content: space-evenly;
  flex-wrap: nowrap;
}

.filter-tabs.compact-mode .filter-tab {
  flex: none;
  margin: 0 5rpx;
}

.filter-tabs.expanded-mode .filter-tab {
  flex: 1;
  min-width: 0;
}

.filter-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 8rpx;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  transition: none;
  text-align: center;
  min-width: 0;
  position: relative;
  overflow: hidden;
  background-color: transparent;
}

.filter-tab:first-child {
  margin-left: 0;
}

.filter-tab:last-child {
  margin-right: 0;
}

.filter-tab:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.filter-tab.active {
  background-color: rgba(255, 255, 255, 0.15);
}

/* Remove shimmer effect to prevent flickering */

.filter-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  width: 100%;
  transition: none;
}

.filter-tab:hover .filter-text {
  color: #fbbf24;
}

.filter-tab.active .filter-text {
  color: #fbbf24;
  font-weight: 600;
}

/* Content Area */
.app-layout-content {
  box-sizing: border-box;
  flex: 1;
  position: fixed;
  overflow-y: auto;
  height:100vh;
  width:100vw;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* Space for fixed tab bar + safe area */
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom)); /* iOS 11.0 fallback */
}

/* Content area padding - only filter bar now, search is animated */
.app-layout-content {
  padding-top: 120rpx; /* Filter bar height with padding */
}

/* Teacher layout - no bottom padding since no tab bar */
.app-layout.teacher-layout .app-layout-content {
  padding-top: 120rpx !important; /* Filter bar height with padding */
  padding-bottom: env(safe-area-inset-bottom); /* Only safe area for teacher layout */
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0 fallback */
}

/* Tab Bar Styles */
.app-layout-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: #000;
  border-top: 1rpx solid #333;
  width: 100vw;
  max-width: 100%;
  overflow: hidden;
  /* Add safe area padding for iPhone */
  padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom); /* iOS 11.0 fallback */
}

.tab-container {
  display: flex;
  height: 120rpx;
  align-items: center;
  max-width: 750rpx;
  margin: 0 auto;
  padding: 0 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  /* Performance optimizations */
  -webkit-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  transform: translateZ(0);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 4rpx;
  transition: none;
  position: relative;
  border-radius: 12rpx;
}

.tab-item:hover {
  background-color: rgba(255, 255, 255, 0.1);
}

.tab-item.active {
  background-color: rgba(255, 255, 255, 0.15);
}

.tab-item.special {
  /* Remove transform to prevent flickering */
}

.tab-item.special.active {
  background-color: rgba(255, 255, 255, 0.2);
}

.tab-icon-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
  width:70rpx;
  height:70rpx;
}

.tab-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* Remove transition to prevent flickering */
}

.tab-icon-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.tab-item.active .tab-icon {
  /* Remove scale transform to prevent flickering */
}

.tab-item.special .tab-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  box-sizing: border-box;
}

/* Tab Icon Image Styling */
.tab-item.special .tab-icon-image {
  filter: brightness(0) invert(1);
}

/* Unread Badge Styles */
.unread-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #000;
  z-index: 10;
}

.unread-count {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
  line-height: 1;
  padding: 2rpx 6rpx;
  min-width: 20rpx;
  text-align: center;
}

.tab-text {
  font-size: 20rpx;
  color: #999;
  transition: none;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100rpx;
  min-height: 28rpx;
  line-height: 28rpx;
}

.tab-item:hover .tab-text {
  color: #fbbf24;
}

.tab-item.active .tab-text {
  color: #fbbf24;
  font-weight: 600;
}

/* Responsive adjustments */
@media screen and (max-width: 750rpx) {
  .tab-container {
    padding: 0 8rpx;
    max-width: 100vw;
  }

  .tab-item {
    padding: 6rpx 2rpx;
  }

  .tab-icon {
    width: 36rpx;
    height: 36rpx;
  }
  .tab-item.special .tab-icon {
    width: 54rpx;
    height: 54rpx;
  }

  .tab-text {
    font-size: 18rpx;
    max-width: 90rpx;
  }

  .unread-badge {
    min-width: 28rpx;
    height: 28rpx;
    border-radius: 14rpx;
    top: -6rpx;
    right: -6rpx;
  }

  .unread-count {
    font-size: 18rpx;
  }

  .filter-tabs {
    padding: 0 20rpx;
  }

  .filter-tab {
    margin: 0 5rpx;
    padding: 8rpx 12rpx;
  }

  .filter-text {
    font-size: 26rpx;
  }
}

@media screen and (max-width: 600rpx) {
  .tab-container {
    padding: 0 5rpx;
  }

  .tab-item {
    padding: 6rpx 1rpx;
  }

  .tab-icon {
    width: 32rpx;
    height: 32rpx;
  }
  .tab-item.special .tab-icon {
    width: 50rpx;
    height: 50rpx;
  }

  .tab-text {
    font-size: 16rpx;
    max-width: 80rpx;
  }

  .filter-tabs {
    padding: 0 15rpx;
  }

  .filter-tab {
    margin: 0 3rpx;
    padding: 8rpx 10rpx;
  }

  .filter-text {
    font-size: 24rpx;
  }
}

@media screen and (max-width: 480rpx) {
  .tab-container {
    padding: 0 2rpx;
    height: 110rpx;
  }

  .tab-item {
    padding: 4rpx 1rpx;
  }

  .tab-icon {
    width: 30rpx;
    height: 30rpx;
  }
  .tab-item.special .tab-icon {
    width: 48rpx;
    height: 48rpx;
  }

  .tab-text {
    font-size: 14rpx;
    max-width: 70rpx;
  }

  .unread-badge {
    min-width: 24rpx;
    height: 24rpx;
    border-radius: 12rpx;
    top: -4rpx;
    right: -4rpx;
  }

  .unread-count {
    font-size: 16rpx;
    padding: 1rpx 4rpx;
  }
}

/* Ultra-small screen safety measures */
@media screen and (max-width: 360rpx) {
  .tab-container {
    padding: 0 1rpx;
    height: 100rpx;
  }

  .tab-item {
    padding: 2rpx 0;
  }

  .tab-icon {
    width: 28rpx;
    height: 28rpx;
  }
  .tab-item.special .tab-icon {
    width: 44rpx;
    height: 44rpx;
  }

  .tab-text {
    font-size: 12rpx;
    max-width: 60rpx;
    min-height: 24rpx;
    line-height: 24rpx;
  }
}

/* Ensure no horizontal overflow */
.tab-container {
  box-sizing: border-box;
  width: 100%;
}

.tab-item {
  box-sizing: border-box;
  flex-shrink: 1;
}

/* Additional safety for text overflow */
.tab-text {
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  line-clamp: 1;
}

/* Simplified transitions to prevent flickering */
.filter-tab:active {
  opacity: 0.8;
}

/* Safe area support for different devices */
@supports (padding: max(0px)) {
  .app-layout-footer {
    padding-bottom: max(env(safe-area-inset-bottom), 20rpx);
  }
  
  .app-layout-content {
    padding-bottom: calc(120rpx + max(env(safe-area-inset-bottom), 20rpx));
  }
  
  /* Teacher layout - no bottom padding, only safe area */
  .app-layout.teacher-layout .app-layout-content {
    padding-top: 200rpx; /* Filter bar + search bar */
    padding-bottom: max(env(safe-area-inset-bottom), 20rpx);
  }
}

/* Additional Android system bar handling */
@media (orientation: portrait) {
  .app-layout {
    padding-bottom: env(keyboard-inset-height, 0);
  }
}

/* Ensure no white space at bottom on Android */
.app-layout::after {
  content: '';
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: env(safe-area-inset-bottom, 0);
  background-color: #000;
  z-index: 999;
}
