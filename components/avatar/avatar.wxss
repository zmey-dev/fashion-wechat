/* avatar.wxss */
.avatar-container {
  position: relative;
  border-radius: 50%;
  border: 2rpx solid #d1d5db;
  overflow: hidden;
  background-color: #f97316;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-placeholder .avatar-text {
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
  transform: translateY(-5%); /* Small adjustment to visually center */
}

/* For dark mode support if WeChat Mini App supports it */
@media (prefers-color-scheme: dark) {
  .avatar-container {
    border-color: #4b5563;
    background-color: #ea580c;
  }
}