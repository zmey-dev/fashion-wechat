.filter-nav {
  width: 100%;
  background-color: #121212; /* 다크 모드 배경색 */
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  position: fixed; /* sticky 대신 fixed 사용 */
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000; /* 다른 요소 위에 표시되도록 z-index 증가 */
}

/* 다크 모드 스타일 */
.filter-nav.dark-mode {
  background-color: #121212;
}

.dark-mode .filter-name {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
}

.dark-mode .filter-tab.active .filter-name {
  color: #ff4757; /* 활성화된 탭은 강조색 유지 */
  font-weight: bold;
}

.filter-scroll {
  width: 100%;
  white-space: nowrap;
  /* 스크롤바 숨기기 */
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.filter-scroll::-webkit-scrollbar {
  display: none;
}

.filter-list {
  display: inline-flex;
  padding: 0 10rpx;
  /* 내부 요소가 flex를 유지하면서 스크롤 가능하도록 */
  min-width: 100%;
  box-sizing: border-box;
}

.filter-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  position: relative;
}

.filter-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #ff4757; /* 인디케이터는 강조색 유지 */
  border-radius: 3rpx;
}