/* Header Bar */
.header-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 9998;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
}

.header-left {
  width: 100rpx;
  display: flex;
  justify-content: flex-start;
}

.hamburger-menu {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.hamburger-menu::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255, 71, 87, 0.1), rgba(255, 71, 87, 0.05));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.hamburger-menu:active::before {
  opacity: 1;
}

.hamburger-menu:active {
  transform: scale(0.95);
  background-color: rgba(255, 71, 87, 0.1);
}

.hamburger-line {
  width: 36rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #ffffff, rgba(255, 255, 255, 0.8));
  margin: 4rpx 0;
  border-radius: 3rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.hamburger-line::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, #ff4757, #ff6b7a);
  border-radius: 3rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.hamburger-menu:hover .hamburger-line::after {
  opacity: 1;
}

.header-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
}

.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 500rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  margin-left: 30rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.search-btn:active {
  transform: scale(0.9);
  background: rgba(255, 71, 87, 0.2);
  border-color: rgba(255, 71, 87, 0.3);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  position: relative;
  transition: all 0.3s ease;
}

.search-btn:active .search-icon {
  transform: scale(1.1);
}

.search-circle {
  width: 20rpx;
  height: 20rpx;
  border: 3rpx solid #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  transition: border-color 0.3s ease;
}

.search-btn:active .search-circle {
  border-color: #ff4757;
}

.search-handle {
  width: 10rpx;
  height: 4rpx;
  background-color: #ffffff;
  transform: rotate(45deg);
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  border-radius: 2rpx;
  transition: background-color 0.3s ease;
}

.search-btn:active .search-handle {
  background-color: #ff4757;
}

.search-container {
  display: flex;
  align-items: center;
  width: 100%;
  max-width: 600rpx;
  animation: searchSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes searchSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.search-input-wrapper {
  flex: 1;
  position: relative;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 40rpx;
  padding: 0 40rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
}

.search-input-wrapper:focus-within {
  background: rgba(255, 255, 255, 0.12);
  border-color: rgba(255, 71, 87, 0.5);
  box-shadow: 0 0 0 4rpx rgba(255, 71, 87, 0.1);
}

.search-input {
  width: 100%;
  height: 70rpx;
  font-size: 30rpx;
  color: #ffffff;
  background: transparent;
  text-align: center;
  font-weight: 500;
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.5);
  text-align: center;
}

.search-clear {
  position: absolute;
  right: 25rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 71, 87, 0.2);
  transition: all 0.3s ease;
}

.search-clear:active {
  transform: translateY(-50%) scale(0.9);
  background: rgba(255, 71, 87, 0.4);
}

.clear-icon {
  width: 20rpx;
  height: 20rpx;
  position: relative;
}

.clear-icon::before,
.clear-icon::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 3rpx;
  background-color: #ff4757;
  top: 50%;
  left: 0;
  transform-origin: center;
  border-radius: 2rpx;
}

.clear-icon::before {
  transform: translateY(-50%) rotate(45deg);
}

.clear-icon::after {
  transform: translateY(-50%) rotate(-45deg);
}

.search-cancel {
  margin-left: 30rpx;
  padding: 15rpx 25rpx;
  color: #ff4757;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  background: rgba(255, 71, 87, 0.1);
}

.search-cancel:active {
  transform: scale(0.95);
  background: rgba(255, 71, 87, 0.2);
}

.header-right {
  width: 100rpx;
  display: flex;
  justify-content: flex-end;
}

/* Sidebar Container */
.sidebar-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  pointer-events: none;
}

.sidebar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  pointer-events: auto;
  opacity: 0;
  animation: overlayFadeIn 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  backdrop-filter: blur(4rpx);
}

@keyframes overlayFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes overlayFadeOut {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.sidebar {
  position: absolute;
  top: 0;
  left: 0;
  width: 600rpx;
  height: 100%;
  background: linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 50%, #2d2d2d 100%);
  transform: translateX(-100%);
  display: flex;
  flex-direction: column;
  pointer-events: auto;
  animation: sidebarSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  box-shadow: 
    8rpx 0 32rpx rgba(0, 0, 0, 0.4),
    0 0 0 1rpx rgba(255, 71, 87, 0.1);
  border-right: 2rpx solid rgba(255, 71, 87, 0.2);
}

@keyframes sidebarSlideIn {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(0);
  }
}

@keyframes sidebarSlideOut {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-100%);
  }
}

.sidebar.show {
  transform: translateX(0);
}

.sidebar.hide {
  animation: sidebarSlideOut 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.sidebar-container.hide .sidebar-overlay {
  animation: overlayFadeOut 0.4s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

/* Header */
.sidebar-header {
  padding: 120rpx 40rpx 50rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff6b7a 100%);
  position: relative;
  overflow: hidden;
}

.sidebar-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 60%);
  pointer-events: none;
}

.sidebar-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 30rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff6b7a 100%);
  border-radius: 0 0 30rpx 30rpx;
}

.user-avatar {
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  position: relative;
  animation: avatarBounceIn 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.2s both;
}

@keyframes avatarBounceIn {
  from {
    opacity: 0;
    transform: scale(0.3) rotate(-10deg);
  }
  to {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
}

/* User SVG Icon */
.svg-icon {
  width: 70rpx;
  height: 70rpx;
  position: relative;
}

.svg-content .svg-circle {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ffffff;
  margin: 0 auto 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.svg-content .svg-body {
  width: 50rpx;
  height: 30rpx;
  background-color: #ffffff;
  border-radius: 25rpx 25rpx 0 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  animation: userInfoSlideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
}

@keyframes userInfoSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.username {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

.user-role {
  font-size: 26rpx;
  color: #ffffff;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 25rpx;
  align-self: flex-start;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.close-btn {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(10rpx);
  animation: closeBtnFadeIn 0.4s ease 0.4s both;
}

@keyframes closeBtnFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8) rotate(-90deg);
  }
  to {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }
}

.close-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

/* Close SVG */
.close-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.close-line-1, .close-line-2 {
  position: absolute;
  width: 28rpx;
  height: 3rpx;
  background-color: #ffffff;
  top: 50%;
  left: 0;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.close-line-1 {
  transform: translateY(-50%) rotate(45deg);
}

.close-line-2 {
  transform: translateY(-50%) rotate(-45deg);
}

.close-btn:hover .close-line-1,
.close-btn:hover .close-line-2 {
  background-color: #ff4757;
}

/* Navigation Menu */
.nav-menu {
  flex: 1;
  padding: 30rpx 0;
  overflow-y: auto;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 35rpx 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.nav-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 71, 87, 0.1), transparent);
  transition: left 0.6s ease;
}

.nav-item:active::before {
  left: 100%;
}

.nav-item:active {
  background-color: rgba(255, 71, 87, 0.08);
  transform: translateX(10rpx);
}

.nav-item.active {
  background: linear-gradient(90deg, rgba(255, 71, 87, 0.15) 0%, rgba(255, 71, 87, 0.05) 100%);
  border-right: 8rpx solid #ff4757;
  box-shadow: inset 0 0 20rpx rgba(255, 71, 87, 0.1);
}

.nav-item.active::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 60rpx;
  background: linear-gradient(180deg, #ff4757, #ff6b7a);
  border-radius: 4rpx 0 0 4rpx;
  box-shadow: -2rpx 0 8rpx rgba(255, 71, 87, 0.3);
}

.nav-icon {
  width: 54rpx;
  height: 54rpx;
  margin-right: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 14rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.nav-item.active .nav-icon {
  background: linear-gradient(135deg, #ff4757, #ff6b7a);
  border-color: rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 20rpx rgba(255, 71, 87, 0.3);
  transform: scale(1.05);
}

.nav-item:not(.active):hover .nav-icon {
  background: rgba(255, 255, 255, 0.08);
  transform: scale(1.02);
}

.nav-label {
  flex: 1;
  font-size: 34rpx;
  color: #ffffff;
  font-weight: 500;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

.nav-item.active .nav-label {
  color: #ff4757;
  font-weight: 600;
  text-shadow: 0 0 10rpx rgba(255, 71, 87, 0.3);
}

.arrow-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.nav-item:active .arrow-svg {
  transform: translateX(8rpx);
}

.arrow-line {
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  border-right: 3rpx solid rgba(255, 255, 255, 0.4);
  border-top: 3rpx solid rgba(255, 255, 255, 0.4);
  transform: rotate(45deg);
  top: 7rpx;
  left: 7rpx;
  border-radius: 0 2rpx 0 0;
  transition: all 0.3s ease;
}

.nav-item.active .arrow-line {
  border-color: #ff4757;
  box-shadow: 0 0 8rpx rgba(255, 71, 87, 0.4);
}

/* Enhanced SVG Icons with animations */
/* Thumbs Up */
.buttom-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
  transition: all 0.3s ease;
}

.nav-item:active .thumbs-up-svg {
  transform: scale(1.1) rotate(5deg);
}

.thumb-main {
  width: 18rpx;
  height: 20rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  position: absolute;
  bottom: 0;
  left: 5rpx;
  transition: all 0.3s ease;
}

.thumb-finger {
  width: 10rpx;
  height: 14rpx;
  background-color: #ffffff;
  border-radius: 5rpx 5rpx 0 0;
  position: absolute;
  top: 0;
  left: 9rpx;
  transition: all 0.3s ease;
}

.nav-item.active .thumb-main,
.nav-item.active .thumb-finger {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

/* Sparkles */
.sparkles-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.spark {
  position: absolute;
  background-color: #ffffff;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.nav-item:active .spark {
  animation: sparkle 0.6s ease-in-out;
}

@keyframes sparkle {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.3); opacity: 0.8; }
}

.spark-1 {
  width: 7rpx;
  height: 7rpx;
  top: 2rpx;
  left: 10rpx;
}

.spark-2 {
  width: 5rpx;
  height: 5rpx;
  top: 9rpx;
  left: 3rpx;
}

.spark-3 {
  width: 7rpx;
  height: 7rpx;
  bottom: 2rpx;
  right: 2rpx;
}

.spark-4 {
  width: 5rpx;
  height: 5rpx;
  top: 4rpx;
  right: 6rpx;
}

.nav-item.active .spark {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.6);
}

/* User Check */
.user-check-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.user-circle {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #ffffff;
  position: absolute;
  top: 2rpx;
  left: 9rpx;
  transition: all 0.3s ease;
}

.user-body {
  width: 18rpx;
  height: 12rpx;
  background-color: #ffffff;
  border-radius: 9rpx 9rpx 0 0;
  position: absolute;
  bottom: 6rpx;
  left: 5rpx;
  transition: all 0.3s ease;
}

.check-mark {
  width: 7rpx;
  height: 4rpx;
  border-left: 3rpx solid #ffffff;
  border-bottom: 3rpx solid #ffffff;
  transform: rotate(-45deg);
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  transition: all 0.3s ease;
}

.nav-item.active .user-circle,
.nav-item.active .user-body {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

.nav-item.active .check-mark {
  border-color: #ffffff;
  filter: drop-shadow(0 0 4rpx rgba(255, 255, 255, 0.5));
}

/* Message */
.message-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.message-bubble {
  width: 22rpx;
  height: 16rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  position: absolute;
  top: 2rpx;
  left: 3rpx;
  transition: all 0.3s ease;
}

.message-tail {
  width: 5rpx;
  height: 5rpx;
  background-color: #ffffff;
  transform: rotate(45deg);
  position: absolute;
  bottom: 4rpx;
  left: 7rpx;
  transition: all 0.3s ease;
}

.nav-item.active .message-bubble,
.nav-item.active .message-tail {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

/* Users */
.users-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.user-1, .user-2 {
  position: absolute;
  transition: all 0.3s ease;
}

.user-1 {
  left: 0;
  top: 0;
}

.user-2 {
  right: 0;
  top: 5rpx;
}

.users-svg .user-circle {
  width: 7rpx;
  height: 7rpx;
  border-radius: 50%;
  background-color: #ffffff;
  margin-bottom: 2rpx;
  transition: all 0.3s ease;
}

.users-svg .user-body {
  width: 14rpx;
  height: 10rpx;
  background-color: #ffffff;
  border-radius: 7rpx 7rpx 0 0;
  transition: all 0.3s ease;
}

.nav-item.active .users-svg .user-circle,
.nav-item.active .users-svg .user-body {
  background-color: #ffffff;
  box-shadow: 0 0 6rpx rgba(255, 255, 255, 0.5);
}

/* User */
.user-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.user-svg .user-circle {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #ffffff;
  position: absolute;
  top: 2rpx;
  left: 9rpx;
  transition: all 0.3s ease;
}

.user-svg .user-body {
  width: 20rpx;
  height: 14rpx;
  background-color: #ffffff;
  border-radius: 10rpx 10rpx 0 0;
  position: absolute;
  bottom: 2rpx;
  left: 4rpx;
  transition: all 0.3s ease;
}

.nav-item.active .user-svg .user-circle,
.nav-item.active .user-svg .user-body {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

/* Flag */
.flag-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.flag-pole {
  width: 3rpx;
  height: 26rpx;
  background-color: #ffffff;
  position: absolute;
  left: 2rpx;
  top: 1rpx;
  transition: all 0.3s ease;
}

.flag-cloth {
  width: 18rpx;
  height: 12rpx;
  background-color: #ffffff;
  position: absolute;
  left: 5rpx;
  top: 2rpx;
  transition: all 0.3s ease;
}

.nav-item:active .flag-cloth {
  animation: flagWave 0.6s ease-in-out;
}

@keyframes flagWave {
  0%, 100% { transform: scaleX(1); }
  50% { transform: scaleX(0.9) skewX(5deg); }
}

.nav-item.active .flag-pole,
.nav-item.active .flag-cloth {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

/* Handshake */
.handshake-svg {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.hand-1 {
  width: 10rpx;
  height: 14rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  position: absolute;
  left: 2rpx;
  top: 7rpx;
  transform: rotate(15deg);
  transition: all 0.3s ease;
}

.hand-2 {
  width: 10rpx;
  height: 14rpx;
  background-color: #ffffff;
  border-radius: 5rpx;
  position: absolute;
  right: 2rpx;
  top: 7rpx;
  transform: rotate(-15deg);
  transition: all 0.3s ease;
}

.heart {
  width: 8rpx;
  height: 8rpx;
  background-color: #ffffff;
  position: absolute;
  top: 2rpx;
  left: 10rpx;
  transform: rotate(45deg);
  transition: all 0.3s ease;
}

.heart::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: -4rpx;
  left: 0;
  transition: all 0.3s ease;
}

.heart::after {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background-color: #ffffff;
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: -4rpx;
  transition: all 0.3s ease;
}

.nav-item:active .heart {
  animation: heartBeat 0.6s ease-in-out;
}

@keyframes heartBeat {
  0%, 100% { transform: rotate(45deg) scale(1); }
  50% { transform: rotate(45deg) scale(1.2); }
}

.nav-item.active .hand-1,
.nav-item.active .hand-2,
.nav-item.active .heart {
  background-color: #ffffff;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

.nav-item.active .heart::before,
.nav-item.active .heart::after {
  background-color: #ffffff;
  box-shadow: 0 0 6rpx rgba(255, 255, 255, 0.5);
}

